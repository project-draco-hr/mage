{
  super(ownerId,151,"Reforge the Soul",Rarity.RARE,new CardType[]{CardType.SORCERY},"{3}{R}{R}");
  this.expansionSetCode="AVR";
  this.getSpellAbility().addEffect(new DiscardHandAllEffect());
