{
  try {
    text=text.replaceAll("(<font color=[^>]*>([^<]*)) (\\[[0-9a-fA-F]*\\])</font>","<a href='#$2'>$1</a> $3");
    setEditable(true);
    kit.insertHTML(doc,doc.getLength(),text,0,0,null);
    setEditable(false);
    int len=getDocument().getLength();
    setCaretPosition(len);
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
}
