{
  Permanent target=game.getPermanent(source.getSourceId());
  if (target != null) {
    int number=0;
    Player player=game.getPlayer(source.getControllerId());
    if (player != null) {
      number=player.getGraveyard().count(filter,game);
    }
    target.getPower().setValue(number);
    return true;
  }
  return false;
}
