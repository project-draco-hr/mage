{
  if (opponentId == null) {
    TargetOpponent target=new TargetOpponent();
    Player player=game.getPlayer(playerId);
    if (player != null) {
      if (player.chooseTarget(Outcome.Detriment,target,source,game)) {
        opponentId=target.getFirstTarget();
      }
    }
  }
  return opponentId;
}
