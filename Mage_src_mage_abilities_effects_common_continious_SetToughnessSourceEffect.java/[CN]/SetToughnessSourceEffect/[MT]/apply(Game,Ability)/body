{
  Permanent target=game.getPermanent(source.getSourceId());
  if (target != null) {
    if (amount != null) {
      int value=amount.calculate(game,source);
      target.getToughness().setValue(value);
      return true;
    }
 else {
      if (toughness != Integer.MIN_VALUE)       target.getToughness().setValue(toughness);
    }
  }
  return false;
}
