{
  Player player=game.getPlayer(source.getControllerId());
  if (player != null) {
    for (    UUID playerId : game.getOpponents(source.getControllerId())) {
      Player opponent=game.getPlayer(playerId);
      if (opponent != null && opponent.getHand().size() == 0) {
        return true;
      }
    }
  }
  return false;
}
