{
  Permanent p=game.getPermanent(source.getSourceId());
  if (p != null) {
    int amount=p.getCounters().getCount(CounterType.TIME);
    if (amount > 0) {
      p.getCounters().removeCounter(CounterType.TIME,1);
    }
 else {
      p.sacrifice(source.getSourceId(),game);
    }
    return true;
  }
  return false;
}
