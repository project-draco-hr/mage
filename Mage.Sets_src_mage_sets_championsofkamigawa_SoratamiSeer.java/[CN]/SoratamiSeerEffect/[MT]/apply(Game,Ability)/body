{
  Player player=game.getPlayer(source.getControllerId());
  if (player != null) {
    int amount=player.getHand().getCards(game).size();
    for (    Card c : player.getHand().getCards(game)) {
      player.discard(c,source,game);
    }
    player.drawCards(amount,game);
    return true;
  }
  return false;
}
