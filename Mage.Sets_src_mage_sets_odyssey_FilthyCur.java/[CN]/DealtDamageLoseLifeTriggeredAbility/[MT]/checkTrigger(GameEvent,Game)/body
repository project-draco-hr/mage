{
  if (event.getType() == GameEvent.EventType.DAMAGED_CREATURE) {
    if (event.getTargetId().equals(this.sourceId)) {
      this.getEffects().clear();
      this.addEffect(new LoseLifeControllerEffect(event.getAmount()));
      this.getControllerId();
      return true;
    }
  }
  return false;
}
