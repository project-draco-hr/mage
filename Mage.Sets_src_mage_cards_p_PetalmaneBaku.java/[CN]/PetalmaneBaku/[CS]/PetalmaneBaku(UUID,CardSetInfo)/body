{
  super(ownerId,setInfo,new CardType[]{CardType.CREATURE},"{1}{G}");
  this.subtype.add("Spirit");
  this.power=new MageInt(1);
  this.toughness=new MageInt(2);
  this.addAbility(new SpellCastControllerTriggeredAbility(new AddCountersSourceEffect(CounterType.KI.createInstance()),filter,true));
  Ability ability=new DynamicManaAbility(new Mana(0,0,0,0,0,0,1,0),new RemovedCountersForCostValue(),new ManaCostsImpl<>("{1}"),"Add X mana of any one color to your mana pool",true,new CountersSourceCount(CounterType.KI));
  ability.addCost(new RemoveVariableCountersSourceCost(CounterType.KI.createInstance(),"Remove X ki counters from {this}"));
  this.addAbility(ability);
}
