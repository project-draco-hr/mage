{
  for (  CardView card : allCards) {
    if (card == targetCard) {
      if (!card.isSelected()) {
        card.setSelected(true);
        cardViews.get(card.getId()).update(card);
      }
    }
 else {
      if (card.isSelected()) {
        card.setSelected(false);
        cardViews.get(card.getId()).update(card);
      }
    }
  }
}
