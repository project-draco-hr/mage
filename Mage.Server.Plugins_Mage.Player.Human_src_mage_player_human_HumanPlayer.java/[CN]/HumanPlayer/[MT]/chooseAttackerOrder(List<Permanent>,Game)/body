{
  while (!abort) {
    game.fireSelectTargetEvent(playerId,"Pick attacker",attackers,true);
    waitForResponse();
    if (response.getUUID() != null) {
      for (      Permanent perm : attackers) {
        if (perm.getId().equals(response.getUUID()))         return perm.getId();
      }
    }
  }
  return null;
}
