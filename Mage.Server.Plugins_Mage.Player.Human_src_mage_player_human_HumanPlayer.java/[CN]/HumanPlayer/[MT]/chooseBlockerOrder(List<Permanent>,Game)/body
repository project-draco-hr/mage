{
  updateGameStatePriority("chooseBlockerOrder",game);
  while (!abort) {
    game.fireSelectTargetEvent(playerId,"Pick blocker",blockers,true);
    waitForResponse();
    if (response.getUUID() != null) {
      for (      Permanent perm : blockers) {
        if (perm.getId().equals(response.getUUID())) {
          return perm.getId();
        }
      }
    }
  }
  return null;
}
