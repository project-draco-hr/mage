{
  updateGameStatePriority("chooseMulligan",game);
  int nextHandSize=game.mulliganDownTo(playerId);
  game.fireAskPlayerEvent(playerId,new MessageToClient("Mulligan " + (getHand().size() > nextHandSize ? "down to " : "for free, draw ") + nextHandSize+ (nextHandSize == 1 ? " card?" : " cards?")),null);
  waitForBooleanResponse(game);
  if (!abort) {
    return response.getBoolean();
  }
  return false;
}
