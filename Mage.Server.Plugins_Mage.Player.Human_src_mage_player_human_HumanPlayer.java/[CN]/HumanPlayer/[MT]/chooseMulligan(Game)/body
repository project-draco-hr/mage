{
  updateGameStatePriority("chooseMulligan",game);
  int nextHandSize=game.mulliganDownTo(playerId);
  game.fireAskPlayerEvent(playerId,new StringBuilder("Mulligan ").append(getHand().size() > nextHandSize ? "down to " : "for free, draw ").append(nextHandSize).append(nextHandSize == 1 ? " card?" : " cards?").toString());
  waitForBooleanResponse(game);
  if (!abort) {
    return response.getBoolean();
  }
  return false;
}
