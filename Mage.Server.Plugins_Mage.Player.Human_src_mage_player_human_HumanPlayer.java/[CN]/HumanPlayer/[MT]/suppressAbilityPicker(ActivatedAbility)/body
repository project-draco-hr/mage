{
  if (this.getUserData().isShowAbilityPickerForced()) {
    if (ability instanceof PlayLandAbility) {
      return true;
    }
    if (ability.getManaCostsToPay().convertedManaCost() > 0) {
      return true;
    }
    if (ability instanceof ManaAbility) {
      return true;
    }
    return !ability.getManaCostsToPay().isEmpty();
  }
  return true;
}
