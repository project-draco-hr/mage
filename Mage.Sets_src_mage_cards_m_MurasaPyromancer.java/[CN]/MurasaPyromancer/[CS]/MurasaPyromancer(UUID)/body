{
  super(ownerId,139,"Murasa Pyromancer",Rarity.UNCOMMON,new CardType[]{CardType.CREATURE},"{4}{R}{R}");
  this.expansionSetCode="ZEN";
  this.subtype.add("Human");
  this.subtype.add("Shaman");
