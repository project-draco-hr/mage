  this.addAbility(FlyingAbility.getInstance());
  this.addAbility(new SimpleStaticAbility(Constants.Zone.BATTLEFIELD,new BoostControlledEffect(1,0,Constants.Duration.WhileOnBattlefield,filter,true)));
}
