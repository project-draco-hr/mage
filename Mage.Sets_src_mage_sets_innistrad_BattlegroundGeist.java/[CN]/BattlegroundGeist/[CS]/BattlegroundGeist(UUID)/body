{
  super(ownerId,45,"Battleground Geist",Rarity.UNCOMMON,new CardType[]{CardType.CREATURE},"{4}{U}");
  this.expansionSetCode="ISD";
  this.subtype.add("Spirit");
  this.color.setBlue(true);
  this.power=new MageInt(3);
