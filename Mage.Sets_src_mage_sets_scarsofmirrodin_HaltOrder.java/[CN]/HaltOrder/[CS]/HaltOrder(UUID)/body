{
  super(ownerId,34,"Halt Order",Rarity.UNCOMMON,new CardType[]{CardType.INSTANT},"{2}{U}");
  this.expansionSetCode="SOM";
  this.color.setBlue(true);
  this.getSpellAbility().addTarget(new TargetSpell(filter));
