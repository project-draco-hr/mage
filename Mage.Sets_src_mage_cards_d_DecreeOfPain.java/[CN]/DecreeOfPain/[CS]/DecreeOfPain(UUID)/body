{
  super(ownerId,72,"Decree of Pain",Rarity.RARE,new CardType[]{CardType.SORCERY},"{6}{B}{B}");
  this.expansionSetCode="C13";
  this.getSpellAbility().addEffect(new DecreeOfPainEffect());
