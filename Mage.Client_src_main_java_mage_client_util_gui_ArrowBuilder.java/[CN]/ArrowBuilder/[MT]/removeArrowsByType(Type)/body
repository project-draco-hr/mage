{
  java.util.List<Arrow> arrows=map.get(type);
  if (arrows != null) {
    JPanel p=getArrowsPanel();
    if (arrows.size() > 0) {
synchronized (map) {
        for (        Arrow arrow : arrows) {
          p.remove(arrow);
        }
        map.put(type,new ArrayList<Arrow>());
      }
      p.revalidate();
      p.repaint();
    }
  }
}
