{
  for (  GameSession session : gameSessions.values()) {
    session.kill();
  }
  for (  DraftSession session : draftSessions.values()) {
    session.setKilled();
  }
  for (  TournamentSession session : tournamentSessions.values()) {
    session.setKilled();
  }
  for (  Entry<UUID,Table> entry : tables.entrySet()) {
    entry.getValue().leaveTable(entry.getKey());
    if (TableManager.getInstance().isTableOwner(entry.getValue().getId(),userId) && (entry.getValue().getState().equals(TableState.WAITING) || entry.getValue().getState().equals(TableState.STARTING))) {
      TableManager.getInstance().removeTable(userId,entry.getValue().getId());
    }
  }
  ChatManager.getInstance().removeUser(userId,reason);
}
