{
  if (permanent.getId().equals(source.getFirstTarget())) {
    Permanent blocker=game.getPermanent(source.getFirstTarget());
    if (blocker != null && blocker.isTapped()) {
      blocker.untap(game);
      if (blocker.canBlock(source.getSourceId(),game)) {
        return true;
      }
    }
  }
  return false;
}
