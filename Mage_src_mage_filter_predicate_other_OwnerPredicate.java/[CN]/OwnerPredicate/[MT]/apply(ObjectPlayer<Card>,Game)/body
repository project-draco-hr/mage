{
  Card card=input.getObject();
  UUID playerId=input.getPlayerId();
  if (card == null || playerId == null) {
    return false;
  }
switch (targetOwner) {
case YOU:
    if (card.getOwnerId().equals(playerId)) {
      return true;
    }
  break;
case OPPONENT:
if (game.getOpponents(playerId).contains(card.getOwnerId())) {
  return true;
}
break;
case NOT_YOU:
if (!card.getOwnerId().equals(playerId)) {
return true;
}
break;
}
return false;
}
