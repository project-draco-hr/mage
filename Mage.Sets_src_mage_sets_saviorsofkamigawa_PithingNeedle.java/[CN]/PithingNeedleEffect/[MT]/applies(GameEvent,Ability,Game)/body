{
  if (event.getType() == GameEvent.EventType.ACTIVATE_ABILITY) {
    MageObject object=game.getObject(event.getSourceId());
    Ability ability=game.getAbility(event.getTargetId(),event.getSourceId());
    if (ability != null && object != null) {
      if (ability.getAbilityType() != AbilityType.MANA && object.getName().equals(game.getState().getValue(source.getSourceId().toString()))) {
        return true;
      }
    }
  }
  return false;
}
