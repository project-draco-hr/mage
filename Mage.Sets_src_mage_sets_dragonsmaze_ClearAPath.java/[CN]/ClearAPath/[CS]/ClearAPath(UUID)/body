{
  super(ownerId,32,"Clear a Path",Rarity.COMMON,new CardType[]{CardType.SORCERY},"{R}");
  this.expansionSetCode="DGM";
  this.color.setRed(true);
  this.getSpellAbility().addEffect(new DestroyTargetEffect());
