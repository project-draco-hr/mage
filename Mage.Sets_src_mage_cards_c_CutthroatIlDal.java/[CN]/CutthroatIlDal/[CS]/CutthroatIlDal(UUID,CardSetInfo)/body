{
  super(ownerId,setInfo,new CardType[]{CardType.CREATURE},"{3}{B}");
  this.subtype.add("Human");
  this.subtype.add("Rogue");
  this.power=new MageInt(4);
  this.toughness=new MageInt(1);
  this.addAbility(new SimpleStaticAbility(Zone.BATTLEFIELD,new ConditionalContinuousEffect(new GainAbilitySourceEffect(ShadowAbility.getInstance(),Duration.WhileOnBattlefield),HellbentCondition.getInstance(),"<i>Hellbent</i> - {this} has shadow as long as you have no cards in hand")));
}
