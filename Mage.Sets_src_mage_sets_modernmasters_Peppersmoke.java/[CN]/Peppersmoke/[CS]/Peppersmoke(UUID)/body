{
  super(ownerId,92,"Peppersmoke",Rarity.COMMON,new CardType[]{CardType.INSTANT},"{B}");
  this.expansionSetCode="MMA";
  this.supertype.add("Tribal");
  this.subtype.add("Faerie");
  this.color.setBlack(true);
  this.getSpellAbility().addEffect(new BoostTargetEffect(-1,-1,Duration.EndOfTurn));
  this.getSpellAbility().addTarget(new TargetCreaturePermanent(true));
  this.getSpellAbility().addEffect(new ConditionalOneShotEffect(new DrawCardSourceControllerEffect(1),new ControlsPermanentCondition(filter,ControlsPermanentCondition.CountType.MORE_THAN,0),"If you control a Faerie, draw a card"));
}
