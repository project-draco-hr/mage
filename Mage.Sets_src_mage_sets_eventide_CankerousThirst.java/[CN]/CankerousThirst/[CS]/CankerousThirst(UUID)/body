{
  super(ownerId,116,"Cankerous Thirst",Rarity.UNCOMMON,new CardType[]{CardType.INSTANT},"{3}{B/G}");
  this.expansionSetCode="EVE";
  this.color.setGreen(true);
  this.color.setBlack(true);
  this.getSpellAbility().addEffect(new ConditionalContinousEffect(new BoostTargetEffect(-3,-3,Duration.EndOfTurn),new ManaWasSpentCondition(ManaType.BLACK),"If {B} was spent to cast {this}, you may have target creature get -3/-3 until end of turn",true));
  this.getSpellAbility().addEffect(new ConditionalContinousEffect(new BoostTargetEffect(3,3,Duration.EndOfTurn),new ManaWasSpentCondition(ManaType.GREEN),"If {G} was spent to cast {this}, you may have target creature get +3/+3 until end of turn",true));
  this.getSpellAbility().addTarget(new TargetCreaturePermanent());
  this.addInfo("Info1","<i>(Do both if {B}{G} was spent.)<i>");
}
