{
  Player controller=game.getPlayer(source.getControllerId());
  if (controller != null) {
    if (game.getBattlefield().count(new FilterCreaturePermanent("Demon","Demon"),source.getSourceId(),source.getControllerId(),game) < 1) {
      controller.loseLife(3,game);
    }
    return true;
  }
  return false;
}
