{
  super(ownerId,30,"Opal Guardian",Rarity.RARE,new CardType[]{CardType.ENCHANTMENT},"{W}{W}{W}");
  this.expansionSetCode="TSP";
  TriggeredAbility ability=new SpellCastOpponentTriggeredAbility(new BecomesCreatureSourceEffect(new OpalGuardianGargoyle(),"",Duration.WhileOnBattlefield,true),new FilterCreatureSpell(),false);
  this.addAbility(new ConditionalTriggeredAbility(ability,new SourceMatchesFilterCondition(new FilterEnchantmentPermanent()),"When an opponent casts a creature spell, if {this} is an enchantment, {this} becomes a 3/4 Gargoyle creature with flying and protection from red."));
}
