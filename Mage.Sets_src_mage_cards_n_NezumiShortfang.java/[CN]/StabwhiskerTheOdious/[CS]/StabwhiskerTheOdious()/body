{
  super("Stabwhisker the Odious","");
  supertype.add("Legendary");
  cardType.add(CardType.CREATURE);
  color.setBlack(true);
  subtype.add("Rat");
  subtype.add("Shaman");
  power=new MageInt(3);
  toughness=new MageInt(3);
  this.addAbility(new BeginningOfUpkeepTriggeredAbility(Zone.BATTLEFIELD,new StabwhiskerLoseLifeEffect(),TargetController.OPPONENT,false,true));
}
