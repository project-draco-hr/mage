{
  super(ownerId,setInfo,new CardType[]{CardType.CREATURE},"{2}{W}");
  this.subtype.add("Human");
  this.subtype.add("Knight");
  this.power=new MageInt(2);
  this.toughness=new MageInt(2);
  this.addAbility(new KickerAbility("{2}{W}"));
  Ability ability=new EntersBattlefieldAbility(new AddCountersSourceEffect(CounterType.P1P1.createInstance(2)),KickedCondition.getInstance(),"If {this} was kicked, it enters the battlefield with two +1/+1 counters on it and with first strike.","");
  ability.addEffect(new GainAbilitySourceEffect(FirstStrikeAbility.getInstance(),Duration.WhileOnBattlefield));
  this.addAbility(ability);
}
