{
  super(ownerId,64,"Master Thief",Rarity.UNCOMMON,new CardType[]{CardType.CREATURE},"{2}{U}{U}");
  this.expansionSetCode="M12";
  this.subtype.add("Human");
  this.subtype.add("Rogue");
  this.color.setBlue(true);
  this.power=new MageInt(2);
  this.toughness=new MageInt(2);
  ConditionalContinousEffect effect=new ConditionalContinousEffect(new GainControlTargetEffect(Duration.Custom),new SourceOnBattlefieldControlUnchangedCondition(),"gain control of target artifact for as long as you control Master Thief");
  Ability ability=new EntersBattlefieldTriggeredAbility(effect,false);
  ability.addTarget(new TargetPermanent(filter,true));
  this.addAbility(ability);
}
