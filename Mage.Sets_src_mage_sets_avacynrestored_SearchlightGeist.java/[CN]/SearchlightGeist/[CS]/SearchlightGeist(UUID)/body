{
  super(ownerId,119,"Searchlight Geist",Rarity.COMMON,new CardType[]{CardType.CREATURE},"{2}{B}");
  this.expansionSetCode="AVR";
  this.subtype.add("Spirit");
  this.color.setBlack(true);
  this.power=new MageInt(2);
  this.toughness=new MageInt(1);
  this.addAbility(FlyingAbility.getInstance());
  this.addAbility(new SimpleActivatedAbility(Constants.Zone.BATTLEFIELD,new GainAbilitySourceEffect(DeathtouchAbility.getInstance()),new ManaCostsImpl("{3}{B}")));
}
