{
  super(ownerId,248,"Elvish Lyrist",Rarity.COMMON,new CardType[]{CardType.CREATURE},"{G}");
  this.expansionSetCode="USG";
  this.subtype.add("Elf");
  this.color.setGreen(true);
  this.power=new MageInt(1);
  this.toughness=new MageInt(1);
  Ability ability=new SimpleActivatedAbility(Constants.Zone.BATTLEFIELD,new DestroyTargetEffect(),new ManaCostsImpl("{G}"));
  ability.addCost(new TapSourceCost());
  ability.addCost(new SacrificeSourceCost());
  ability.addTarget(new TargetPermanent(new FilterEnchantmentPermanent()));
  this.addAbility(ability);
}
