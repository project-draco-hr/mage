{
  Permanent permanent=game.getPermanent(source.getSourceId());
  if (permanent != null) {
    Object obj=getValue(mage.abilities.effects.EntersBattlefieldEffect.SOURCE_CAST_SPELL_ABILITY);
    if (obj != null && obj instanceof SpellAbility && permanent.getZoneChangeCounter(game) - 1 == ((SpellAbility)obj).getSourceObjectZoneChangeCounter()) {
      int amount=((SpellAbility)obj).getManaCostsToPay().getX();
      if (amount > 0) {
        permanent.addCounters(CounterType.P1P1.createInstance(amount),game);
      }
    }
  }
  return true;
}
