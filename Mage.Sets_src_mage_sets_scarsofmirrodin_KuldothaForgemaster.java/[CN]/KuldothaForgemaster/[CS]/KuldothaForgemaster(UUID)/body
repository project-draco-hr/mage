{
  super(ownerId,169,"Kuldotha Forgemaster",Rarity.RARE,new CardType[]{CardType.ARTIFACT,CardType.CREATURE},"{5}");
  this.expansionSetCode="SOM";
  this.subtype.add("Construct");
