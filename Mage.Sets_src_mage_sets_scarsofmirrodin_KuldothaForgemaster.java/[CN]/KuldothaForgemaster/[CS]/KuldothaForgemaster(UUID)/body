  this.toughness=new MageInt(5);
  SimpleActivatedAbility ability=new SimpleActivatedAbility(Zone.BATTLEFIELD,new SearchLibraryPutInPlayEffect(new TargetCardInLibrary(filterArtifactCard)),new TapSourceCost());
  ability.addCost(new SacrificeTargetCost(new TargetControlledPermanent(3,3,filterArtifactPermanent,false)));
  this.addAbility(ability);
}
