{
  boolean start=false;
  int selectedIndex=0;
  for (  TournamentPlayerPanel player : players) {
    if (!start) {
      if (evt.getSource().equals(player.getPlayerType())) {
        start=true;
        selectedIndex=player.getPlayerType().getSelectedIndex();
      }
    }
 else {
      player.getPlayerType().setSelectedIndex(selectedIndex);
    }
  }
}
