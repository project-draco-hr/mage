{
  super(ownerId,205,"Firespout",Rarity.UNCOMMON,new CardType[]{CardType.SORCERY},"{2}{R/G}");
  this.expansionSetCode="SHM";
  this.color.setRed(true);
  this.color.setGreen(true);
  this.getSpellAbility().addEffect(new ConditionalOneShotEffect(new DamageAllEffect(3,filter1),new ManaWasSpentCondition(ManaType.RED),"{this} deals 3 damage to each creature without flying if {R} was spent to cast {this}"));
  this.getSpellAbility().addEffect(new ConditionalOneShotEffect(new DamageAllEffect(3,filter2),new ManaWasSpentCondition(ManaType.GREEN)," And 3 damage to each creature with flying if {G} was spent to cast it"));
  this.addInfo("Info1","<i>(Do both if {R}{G} was spent.)</i>");
}
