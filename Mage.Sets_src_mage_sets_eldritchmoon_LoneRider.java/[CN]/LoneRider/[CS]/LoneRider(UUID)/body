{
  super(ownerId,33,"Lone Rider",Rarity.UNCOMMON,new CardType[]{CardType.CREATURE},"{1}{W}");
  this.expansionSetCode="EMN";
  this.subtype.add("Human");
  this.subtype.add("Knight");
  this.power=new MageInt(1);
  this.toughness=new MageInt(1);
  this.canTransform=true;
  this.secondSideCard=new ItThatRidesAsOne(ownerId);
  this.addAbility(FirstStrikeAbility.getInstance());
  this.addAbility(LifelinkAbility.getInstance());
  this.addAbility(new TransformAbility());
  this.addAbility(new BeginningOfEndStepTriggeredAbility(Zone.BATTLEFIELD,new TransformSourceEffect(true),TargetController.ANY,new YouGainedLifeCondition(Condition.ComparisonType.GreaterThan,2),false),new PlayerGainedLifeWatcher());
}
