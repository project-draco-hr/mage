{
  super(ownerId,163,"Sliversmith",Rarity.UNCOMMON,new CardType[]{CardType.ARTIFACT,CardType.CREATURE},"{2}");
  this.expansionSetCode="FUT";
  this.subtype.add("Spellshaper");
