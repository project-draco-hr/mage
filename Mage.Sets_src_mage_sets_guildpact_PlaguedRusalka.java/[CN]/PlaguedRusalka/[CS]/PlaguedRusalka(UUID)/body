{
  super(ownerId,56,"Plagued Rusalka",Rarity.UNCOMMON,new CardType[]{CardType.CREATURE},"{B}");
  this.expansionSetCode="GPT";
  this.subtype.add("Spirit");
  this.color.setBlack(true);
  this.power=new MageInt(1);
  this.toughness=new MageInt(1);
  Ability ability=new SimpleActivatedAbility(Constants.Zone.BATTLEFIELD,new BoostTargetEffect(-1,-1,Constants.Duration.EndOfTurn),new ColoredManaCost(Constants.ColoredManaSymbol.B));
  ability.addCost(new SacrificeTargetCost(new TargetControlledCreaturePermanent()));
  ability.addTarget(new TargetCreaturePermanent());
  this.addAbility(ability);
}
