{
  int value=amount.calculate(game,source,this);
  Player controller=game.getPlayer(source.getControllerId());
  if (controller != null) {
    if (value < 1) {
      return true;
    }
    if (token.putOntoBattlefield(value,game,source.getSourceId(),targetPointer.getFirst(game,source),tapped,attacking)) {
      game.informPlayers(new StringBuilder(controller.getName()).append(" puts ").append(CardUtil.numberToText(value,"a")).append(" ").append(token.getName()).append(value == 1 ? " token" : " tokens").append(" onto the Battlefield").toString());
      return true;
    }
  }
  return false;
}
