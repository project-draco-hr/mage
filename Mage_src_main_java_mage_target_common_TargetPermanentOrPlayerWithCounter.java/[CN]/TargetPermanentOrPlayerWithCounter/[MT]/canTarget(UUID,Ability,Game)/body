{
  Permanent permanent=game.getPermanent(id);
  if (permanent != null) {
    if (permanent.getCounters(game).isEmpty()) {
      return false;
    }
  }
  Player player=game.getPlayer(id);
  if (player != null) {
    if (player.getCounters().isEmpty()) {
      return false;
    }
  }
  return super.canTarget(id,source,game);
}
