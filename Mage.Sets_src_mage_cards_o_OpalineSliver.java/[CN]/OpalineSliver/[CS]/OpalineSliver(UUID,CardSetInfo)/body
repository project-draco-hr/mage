{
  super(ownerId,setInfo,new CardType[]{CardType.CREATURE},"{1}{W}{U}");
  this.subtype.add("Sliver");
  this.power=new MageInt(2);
  this.toughness=new MageInt(2);
  this.addAbility(new SimpleStaticAbility(Zone.BATTLEFIELD,new GainAbilityAllEffect(new OpalineSliverTriggeredAbility(),Duration.WhileOnBattlefield,filter,"All Slivers have \"Whenever this permanent becomes the target of a spell an opponent controls, you may draw a card.\"")));
}
