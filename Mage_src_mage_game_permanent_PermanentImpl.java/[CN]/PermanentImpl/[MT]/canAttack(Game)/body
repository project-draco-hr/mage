{
  if (tapped)   return false;
  if (hasSummoningSickness())   return false;
  for (  RestrictionEffect effect : game.getContinuousEffects().getApplicableRestrictionEffects(this,game)) {
    if (!effect.canAttack(game))     return false;
  }
  if (abilities.containsKey(DefenderAbility.getInstance().getId()))   return false;
  return true;
}
