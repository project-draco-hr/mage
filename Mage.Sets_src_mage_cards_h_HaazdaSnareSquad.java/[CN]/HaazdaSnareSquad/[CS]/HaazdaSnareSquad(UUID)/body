{
  super(ownerId,2,"Haazda Snare Squad",Rarity.COMMON,new CardType[]{CardType.CREATURE},"{2}{W}");
  this.expansionSetCode="DGM";
  this.subtype.add("Human");
  this.subtype.add("Soldier");
  this.power=new MageInt(1);
  this.toughness=new MageInt(4);
  Ability ability=new AttacksTriggeredAbility(new DoIfCostPaid(new TapTargetEffect(""),new ManaCostsImpl("{W}")),false,"Whenever {this} attacks you may pay {W}. If you do, tap target creature an opponent controls.");
  Target target=new TargetCreaturePermanent(filter);
  ability.addTarget(target);
  this.addAbility(ability);
}
