{
  super(ownerId,260,"Hidden Ancients",Rarity.UNCOMMON,new CardType[]{CardType.ENCHANTMENT},"{1}{G}");
  this.expansionSetCode="USG";
  TriggeredAbility ability=new SpellCastOpponentTriggeredAbility(new BecomesCreatureSourceEffect(new HiddenAncientsTreefolk(),"",Duration.WhileOnBattlefield,true,false),filter,false);
  this.addAbility(new ConditionalTriggeredAbility(ability,new SourceMatchesFilterCondition(new FilterEnchantmentPermanent()),"When an opponent casts an enchantment spell, if {this} is an enchantment, {this} becomes a 5/5 Treefolk creature."));
}
