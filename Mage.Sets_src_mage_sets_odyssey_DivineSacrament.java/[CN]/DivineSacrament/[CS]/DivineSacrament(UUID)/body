{
  super(ownerId,19,"Divine Sacrament",Rarity.RARE,new CardType[]{CardType.ENCHANTMENT},"{1}{W}{W}");
  this.expansionSetCode="ODY";
  this.color.setWhite(true);
  Ability ability=new SimpleStaticAbility(Zone.BATTLEFIELD,new BoostControlledEffect(1,1,Duration.WhileOnBattlefield,filter,false));
  ability.addEffect(new ConditionalOneShotEffect(new AddContinuousEffectToGame(new BoostControlledEffect(1,1,Duration.WhileOnBattlefield,filter,false)),new CardsInControllerGraveCondition(7),"<br/><br/><i>Threshold</i> - If seven or more cards are in your graveyard, white creatures get an additional +1/+1."));
  this.addAbility(ability);
}
