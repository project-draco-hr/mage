{
  MageObject object=game.getObject(event.getSourceId());
  if (object != null && object instanceof Spell) {
    if (((Spell)object).getControllerId().equals(source.getControllerId()) && (object.getCardType().contains(CardType.INSTANT) || object.getCardType().contains(CardType.SORCERY))) {
      return true;
    }
  }
  return false;
}
