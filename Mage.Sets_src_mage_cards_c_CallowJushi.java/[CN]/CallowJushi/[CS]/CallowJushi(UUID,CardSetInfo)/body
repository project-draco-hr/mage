{
  super(ownerId,setInfo,new CardType[]{CardType.CREATURE},"{1}{U}{U}");
  this.subtype.add("Human");
  this.subtype.add("Wizard");
  this.power=new MageInt(2);
  this.toughness=new MageInt(2);
  this.flipCard=true;
  this.flipCardName="Jaraku the Interloper";
  this.addAbility(new SpellCastControllerTriggeredAbility(new AddCountersSourceEffect(CounterType.KI.createInstance()),filter,true));
  this.addAbility(new ConditionalTriggeredAbility(new OnEventTriggeredAbility(GameEvent.EventType.END_TURN_STEP_PRE,"beginning of the end step",true,new FlipSourceEffect(new JarakuTheInterloper())),new SourceHasCounterCondition(CounterType.KI,2,Integer.MAX_VALUE),"At the beginning of the end step, if there are two or more ki counters on {this}, you may flip it."));
}
