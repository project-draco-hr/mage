{
  Permanent sourcePermanent=game.getPermanent(source.getSourceId());
  Player attackingPlayer=game.getPlayer(event.getPlayerId());
  if (attackingPlayer != null && sourcePermanent != null) {
    game.informPlayer(attackingPlayer,new StringBuilder("You can't attack this player or his or her planeswalker, because the attacking creature is enchanted by ").append(sourcePermanent.getName()).append(".").toString());
  }
  return true;
}
