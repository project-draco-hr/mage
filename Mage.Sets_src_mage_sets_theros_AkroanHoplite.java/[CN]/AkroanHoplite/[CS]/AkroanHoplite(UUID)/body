{
  super(ownerId,185,"Akroan Hoplite",Rarity.UNCOMMON,new CardType[]{CardType.CREATURE},"{R}{W}");
  this.expansionSetCode="THS";
  this.subtype.add("Human");
  this.subtype.add("Soldier");
