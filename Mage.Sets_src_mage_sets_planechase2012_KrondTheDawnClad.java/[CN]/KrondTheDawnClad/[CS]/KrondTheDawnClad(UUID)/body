{
  super(ownerId,99,"Krond the Dawn-Clad",Rarity.MYTHIC,new CardType[]{CardType.CREATURE},"{G}{G}{G}{W}{W}{W}");
  this.expansionSetCode="PC2";
  this.supertype.add("Legendary");
  this.subtype.add("Archon");
  this.power=new MageInt(6);
  this.toughness=new MageInt(6);
  this.addAbility(FlyingAbility.getInstance());
  this.addAbility(VigilanceAbility.getInstance());
  Ability ability=new ConditionalTriggeredAbility(new AttacksTriggeredAbility(new ExileTargetEffect(),false),new EnchantedCondition(),"Whenever {this} attacks, if it's enchanted, exile target permanent.");
  ability.addTarget(new TargetPermanent());
  this.addAbility(ability);
}
