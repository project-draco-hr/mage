{
  MageObject object=game.getObject(sourceId);
  return (object.getCardType().contains(CardType.INSTANT) || object.hasAbility(FlashAbility.getInstance().getId(),game) || game.getContinuousEffects().asThough(sourceId,AsThoughEffectType.CAST_AS_INSTANT,this,playerId,game)|| game.canPlaySorcery(playerId));
}
