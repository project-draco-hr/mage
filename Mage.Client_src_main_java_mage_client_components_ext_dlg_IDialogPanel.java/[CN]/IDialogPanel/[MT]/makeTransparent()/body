{
  setOpaque(false);
  for (int i=0; i < getComponentCount(); i++) {
    Component c=getComponent(i);
    if (c instanceof AbstractButton && !(c instanceof JButton)) {
      ((AbstractButton)c).setContentAreaFilled(false);
    }
 else     if (c instanceof ImageButton) {
      ((AbstractButton)c).setContentAreaFilled(false);
    }
  }
}
