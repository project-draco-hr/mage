{
  super(ownerId,49,"Nim Abomination",Rarity.UNCOMMON,new CardType[]{CardType.CREATURE},"{2}{B}");
  this.expansionSetCode="DST";
  this.subtype.add("Zombie");
  this.power=new MageInt(3);
  this.toughness=new MageInt(4);
  this.addAbility(new BeginningOfEndStepTriggeredAbility(Zone.BATTLEFIELD,new LoseLifeSourceControllerEffect(3),TargetController.YOU,new InvertCondition(new SourceTappedCondition()),false));
}
