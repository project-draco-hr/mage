{
  super(ownerId,25,"Tendrils of Despair",Rarity.COMMON,new CardType[]{CardType.SORCERY},"{B}");
  this.expansionSetCode="WTH";
  this.getSpellAbility().addCost(new SacrificeTargetCost(new TargetControlledCreaturePermanent()));
