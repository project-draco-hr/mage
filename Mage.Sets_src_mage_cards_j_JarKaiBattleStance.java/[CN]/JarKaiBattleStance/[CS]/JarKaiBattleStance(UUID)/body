{
  super(ownerId,113,"Jar'Kai Battle Stance",Rarity.COMMON,new CardType[]{CardType.INSTANT},"{1}{R}");
  this.expansionSetCode="SWS";
  this.getSpellAbility().addEffect(new GainAbilityTargetEffect(DoubleStrikeAbility.getInstance(),Duration.EndOfTurn));
  this.getSpellAbility().addTarget(new TargetCreaturePermanent());
  this.getSpellAbility().addEffect(new ConditionalContinuousEffect(new GainAbilityTargetEffect(TrampleAbility.getInstance(),Duration.EndOfTurn),new LockedInCondition(new SourceHasSubtypeCondition(Arrays.asList("Jedi","Sith"))),"If that creature is a Jedi or Sith, it also gains trample until end of turn"));
}
