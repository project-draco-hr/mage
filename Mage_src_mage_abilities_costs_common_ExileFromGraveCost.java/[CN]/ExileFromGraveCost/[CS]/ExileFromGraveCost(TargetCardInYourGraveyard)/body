{
  this.addTarget(target);
  if (target.getMaxNumberOfTargets() > 1) {
    this.text="Exile " + (target.getNumberOfTargets() < target.getMaxNumberOfTargets() ? "up to " : "") + CardUtil.numberToText(target.getMaxNumberOfTargets())+ " "+ target.getTargetName();
  }
 else {
    this.text="Exile " + target.getTargetName();
  }
  if (!this.text.endsWith(" from your graveyard")) {
    this.text=this.text + " from your graveyard";
  }
}
