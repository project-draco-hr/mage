{
  super(ownerId,84,"Ophiomancer",Rarity.RARE,new CardType[]{CardType.CREATURE},"{2}{B}");
  this.expansionSetCode="C13";
  this.subtype.add("Human");
  this.subtype.add("Shaman");
  this.power=new MageInt(2);
  this.toughness=new MageInt(2);
  this.addAbility(new ConditionalTriggeredAbility(new BeginningOfUpkeepTriggeredAbility(Zone.BATTLEFIELD,new CreateTokenEffect(new OphiomancerSnakeToken()),TargetController.ANY,false),new PermanentsOnTheBattlefieldCondition(new FilterCreaturePermanent("Snake","no Snakes"),PermanentsOnTheBattlefieldCondition.CountType.EQUAL_TO,0),"At the beginning of each upkeep, if you control no Snakes, put a 1/1 black Snake creature token with deathtouch onto the battlefield."));
}
