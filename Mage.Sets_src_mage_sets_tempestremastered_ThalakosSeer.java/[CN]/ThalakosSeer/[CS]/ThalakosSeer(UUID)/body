{
  super(ownerId,72,"Thalakos Seer",Rarity.COMMON,new CardType[]{CardType.CREATURE},"{U}{U}");
  this.expansionSetCode="TPR";
  this.subtype.add("Thalakos");
  this.subtype.add("Wizard");
