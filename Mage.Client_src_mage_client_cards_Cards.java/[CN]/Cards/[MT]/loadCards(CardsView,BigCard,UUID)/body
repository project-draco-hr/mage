{
  cardArea.removeAll();
  for (  CardView card : cards) {
    Card cardImg=new Card(card,bigCard,gameId);
    cardArea.add(cardImg);
    cardImg.update(card);
  }
  cardArea.setPreferredSize(new Dimension(cards.size() * FRAME_WIDTH,FRAME_HEIGHT));
  cardArea.revalidate();
  cardArea.repaint();
  this.revalidate();
  this.repaint();
}
