{
  Player controller=game.getPlayer(source.getControllerId());
  if (controller != null) {
    if (allPlayers) {
      for (      UUID playerId : controller.getInRange()) {
        Player player=game.getPlayer(playerId);
        if (player != null) {
          player.setTopCardRevealed(true);
        }
      }
    }
 else {
      controller.setTopCardRevealed(true);
    }
    return true;
  }
  return false;
}
