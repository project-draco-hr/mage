{
  Player player=game.getPlayer(event.getPlayerId());
  if (player != null) {
    ReturnToHandChosenControlledPermanentCost attackCost=new ReturnToHandChosenControlledPermanentCost(new TargetControlledPermanent(filter));
    if (attackCost.canPay(source,source.getSourceId(),event.getPlayerId(),game) && player.chooseUse(Outcome.Neutral,"Return an enchantment you control to hand to attack?",source,game)) {
      if (attackCost.pay(source,game,source.getSourceId(),event.getPlayerId(),true,null)) {
        return false;
      }
    }
    return true;
  }
  return false;
}
