{
  super(ownerId,141,"Ebonblade Reaper",Rarity.RARE,new CardType[]{CardType.CREATURE},"{2}{B}");
  this.expansionSetCode="ONS";
  this.subtype.add("Human");
  this.subtype.add("Cleric");
