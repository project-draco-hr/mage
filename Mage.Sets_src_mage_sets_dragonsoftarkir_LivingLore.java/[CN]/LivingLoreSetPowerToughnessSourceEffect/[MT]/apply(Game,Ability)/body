{
  MageObject mageObject=source.getSourceObject(game);
  Permanent permanent=game.getPermanent(source.getSourceId());
  if (permanent != null && mageObject == null && new MageObjectReference(permanent).refersTo(mageObject)) {
    discard();
    return false;
  }
  UUID exileId=CardUtil.getObjectExileZoneId(game,mageObject);
  if (exileId != null) {
    ExileZone exileZone=game.getExile().getExileZone(exileId);
    if (exileZone == null) {
      return false;
    }
    Card exiledCard=null;
    for (    Card card : exileZone.getCards(game)) {
      exiledCard=card;
      break;
    }
    if (exiledCard != null) {
      int value=exiledCard.getManaCost().convertedManaCost();
      permanent.getPower().setValue(value);
      permanent.getToughness().setValue(value);
    }
  }
  return true;
}
