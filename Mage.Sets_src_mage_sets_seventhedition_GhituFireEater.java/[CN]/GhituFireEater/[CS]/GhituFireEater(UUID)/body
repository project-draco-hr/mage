{
  super(ownerId,184,"Ghitu Fire-Eater",Rarity.UNCOMMON,new CardType[]{CardType.CREATURE},"{2}{R}");
  this.expansionSetCode="7ED";
  this.subtype.add("Human");
  this.subtype.add("Nomad");
