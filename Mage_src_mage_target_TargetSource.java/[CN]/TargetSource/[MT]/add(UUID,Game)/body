{
  if (targets.size() < maxNumberOfTargets) {
    if (!targets.containsKey(id)) {
      MageObject object=game.getObject(id);
      if (object != null && object instanceof StackObject) {
        targets.put(((StackObject)object).getSourceId(),0);
      }
 else {
        targets.put(id,0);
      }
    }
  }
}
