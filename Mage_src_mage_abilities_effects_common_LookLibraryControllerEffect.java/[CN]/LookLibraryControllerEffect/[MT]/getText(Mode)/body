{
  StringBuilder sb=new StringBuilder("Look at the top ");
switch (this.numberOfCards) {
case 1:
    sb.append("card ");
  break;
case 2:
sb.append("two");
break;
case 3:
sb.append("three");
break;
case 4:
sb.append("four");
break;
case 5:
sb.append("five");
break;
default :
sb.append(this.numberOfCards);
break;
}
if (this.numberOfCards > 1) sb.append(" cards ");
sb.append("of your Library");
if (this.numberOfCards > 1) sb.append(", then put them back in any order");
if (this.mayShuffleAfter) sb.append(". You may shuffle your library");
return sb.toString();
}
