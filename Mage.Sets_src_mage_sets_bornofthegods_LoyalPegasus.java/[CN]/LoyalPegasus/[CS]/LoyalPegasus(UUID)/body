{
  super(ownerId,19,"Loyal Pegasus",Rarity.COMMON,new CardType[]{CardType.CREATURE},"{W}");
  this.expansionSetCode="BNG";
  this.subtype.add("Pegasus");
  this.color.setWhite(true);
  this.power=new MageInt(2);
  this.toughness=new MageInt(1);
  this.addAbility(FlyingAbility.getInstance());
  this.addAbility(CantAttackAloneAbility.getInstance());
  this.addAbility(CantBlockAloneAbility.getInstance());
}
