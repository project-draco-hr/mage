{
  Player player=input.getObject();
  UUID playerId=input.getPlayerId();
  if (player == null || playerId == null) {
    return false;
  }
switch (targetPlayer) {
case YOU:
    if (player.getId().equals(playerId)) {
      return true;
    }
  break;
case OPPONENT:
if (game.getOpponents(playerId).contains(player.getId())) {
  return true;
}
break;
case NOT_YOU:
if (!player.getId().equals(playerId)) {
return true;
}
break;
}
return false;
}
