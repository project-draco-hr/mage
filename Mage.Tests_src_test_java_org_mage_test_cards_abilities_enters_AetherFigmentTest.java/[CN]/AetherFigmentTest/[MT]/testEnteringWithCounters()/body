{
  addCard(Zone.BATTLEFIELD,playerA,"Island",5);
  addCard(Zone.HAND,playerA,"Aether Figment");
  castSpell(1,PhaseStep.PRECOMBAT_MAIN,playerA,"Aether Figment");
  setStopAt(1,PhaseStep.BEGIN_COMBAT);
  execute();
