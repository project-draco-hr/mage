{
  if (event.getType() == EventType.ZONE_CHANGE && ((ZoneChangeEvent)event).getToZone() == Zone.GRAVEYARD && ((ZoneChangeEvent)event).getFromZone() == Zone.BATTLEFIELD) {
    Watcher watcher=game.getState().getWatchers().get(source.getControllerId(),"RedSunsZenithDamagedCreature");
    if (watcher != null)     return watcher.conditionMet();
  }
  return false;
}
