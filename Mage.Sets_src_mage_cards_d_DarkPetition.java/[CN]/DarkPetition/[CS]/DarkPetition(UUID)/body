{
  super(ownerId,90,"Dark Petition",Rarity.RARE,new CardType[]{CardType.SORCERY},"{3}{B}{B}");
  this.expansionSetCode="ORI";
  this.getSpellAbility().addEffect(new SearchLibraryPutInHandEffect(new TargetCardInLibrary()));
  Effect effect=new ConditionalOneShotEffect(new AddManaToManaPoolSourceControllerEffect(Mana.BlackMana(3)),SpellMasteryCondition.getInstance(),"<br><i>Spell mastery</i> - If there are two or more instant and/or sorcery cards in your graveyard, add {B}{B}{B} to your mana pool");
  this.getSpellAbility().addEffect(effect);
}
