{
  if (game.getTurn().getStepType() == PhaseStep.UNTAP && event.getType() == EventType.UNTAP) {
    for (    UUID target : targetPointer.getTargets(game,source)) {
      if (event.getTargetId().equals(target)) {
        if (!usedFor.contains(target)) {
          usedFor.add(target);
          return true;
        }
        break;
      }
    }
    return false;
  }
  return false;
}
