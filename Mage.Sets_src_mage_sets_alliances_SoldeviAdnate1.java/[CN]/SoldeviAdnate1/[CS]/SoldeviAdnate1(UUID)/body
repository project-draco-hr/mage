{
  super(ownerId,25,"Soldevi Adnate",Rarity.COMMON,new CardType[]{CardType.CREATURE},"{1}{B}");
  this.expansionSetCode="ALL";
  this.subtype.add("Human");
  this.subtype.add("Cleric");
  this.power=new MageInt(1);
  this.toughness=new MageInt(2);
  Ability ability=new DynamicManaAbility(Mana.BlackMana,new SacrificeCostConvertedMana("creature"),new TapSourceCost(),"add to your mana pool an amount of {B} equal to the sacrificed creature's converted mana cost");
  ability.addCost(new SacrificeTargetCost(new TargetControlledPermanent(filter)));
  this.addAbility(ability);
}
