{
  Player player=game.getPlayer(source.getControllerId());
  if (player != null) {
    for (    UUID opponentId : game.getOpponents(player.getId())) {
      Player opponent=game.getPlayer(opponentId);
      if (opponent != null) {
        opponent.setTopCardRevealed(true);
      }
    }
    return true;
  }
  return false;
}
