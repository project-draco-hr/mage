{
  super(ownerId,122,"Storm Entity",Rarity.UNCOMMON,new CardType[]{CardType.CREATURE},"{1}{R}");
  this.expansionSetCode="FUT";
  this.subtype.add("Elemental");
  this.power=new MageInt(1);
  this.toughness=new MageInt(1);
  this.addAbility(HasteAbility.getInstance());
  this.addAbility(new EntersBattlefieldAbility(new AddCountersSourceEffect(CounterType.P1P1.createInstance(),new OtherSpellsCastThisTurnCount(),true),"with a +1/+1 counter on it for each other spell cast this turn"));
}
