{
  if ((event.getType() == EventType.DAMAGED_PLAYER || event.getType() == EventType.DAMAGED_PLANESWALKER) && event.getSourceId().equals(this.sourceId) && ((DamagedEvent)event).isCombatDamage()) {
    this.getEffects().clear();
    this.addEffect(new DrawCardSourceControllerEffect(event.getAmount()));
    return true;
  }
  return false;
}
