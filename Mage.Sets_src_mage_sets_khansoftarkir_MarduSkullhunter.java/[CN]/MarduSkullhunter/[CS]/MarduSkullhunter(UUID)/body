{
  super(ownerId,78,"Mardu Skullhunter",Rarity.COMMON,new CardType[]{CardType.CREATURE},"{1}{B}");
  this.expansionSetCode="KTK";
  this.subtype.add("Human");
  this.subtype.add("Warrior");
  this.color.setBlack(true);
  this.power=new MageInt(2);
  this.toughness=new MageInt(1);
  this.addAbility(new EntersBattlefieldTappedAbility());
  Ability ability=new EntersBattlefieldTriggeredAbility(new ConditionalOneShotEffect(new DiscardTargetEffect(1),RaidCondition.getInstance(),"if you attacked with a creature this turn, target opponent discards a card"),false,"<i>Raid</i> - ");
  ability.addTarget(new TargetOpponent());
  this.addAbility(ability);
  this.addWatcher(new PlayerAttackedWatcher());
}
