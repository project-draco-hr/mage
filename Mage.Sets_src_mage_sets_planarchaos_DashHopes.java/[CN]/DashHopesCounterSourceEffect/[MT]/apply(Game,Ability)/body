{
  Spell spell=game.getStack().getSpell(source.getSourceId());
  if (spell != null) {
    PayLifeCost cost=new PayLifeCost(5);
    for (    UUID playerId : game.getState().getPlayerList(source.getControllerId())) {
      Player player=game.getPlayer(playerId);
      cost.clearPaid();
      if (cost.canPay(source,source.getSourceId(),player.getId(),game) && player.chooseUse(outcome,"Pay 5 life to counter " + spell.getIdName() + "?",source,game)) {
        if (cost.pay(source,game,source.getSourceId(),player.getId(),false)) {
          game.informPlayers(player.getLogName() + " pays 5 life to counter " + spell.getIdName()+ ".");
          game.getStack().counter(spell.getId(),source.getSourceId(),game);
        }
      }
    }
    return true;
  }
  return false;
}
