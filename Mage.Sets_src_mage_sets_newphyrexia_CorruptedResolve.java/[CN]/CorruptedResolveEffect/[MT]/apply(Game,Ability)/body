{
  Spell spell=game.getStack().getSpell(targetPointer.getFirst(source));
  if (spell != null) {
    Player player=game.getPlayer(spell.getControllerId());
    if (player != null && player.getCounters().containsKey(CounterType.POISON))     return game.getStack().counter(targetPointer.getFirst(source),source.getSourceId(),game);
  }
  return false;
}
