{
  if (event.getType() == GameEvent.EventType.DAMAGED_PLAYER && event.getSourceId().equals(this.sourceId) && game.getOpponents(this.getControllerId()).contains(event.getTargetId())) {
    for (    Effect effect : getEffects()) {
      effect.setTargetPointer(new FixedTarget(event.getTargetId()));
    }
    return true;
  }
  return false;
}
