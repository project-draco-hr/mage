{
  Player player=game.getPlayer(this.getTargetPointer().getFirst(game,source));
  if (player != null) {
    Cost cost=new PayLifeCost(7);
    if (!cost.canPay(source,source.getSourceId(),player.getId(),game) || !player.chooseUse(Outcome.LoseLife,"Pay 7 life?",source,game) || !cost.pay(source,game,source.getSourceId(),player.getId(),false)) {
      for (      Card card : player.getHand().getCards(game)) {
        player.discard(card,source,game);
      }
    }
    return true;
  }
  return false;
}
