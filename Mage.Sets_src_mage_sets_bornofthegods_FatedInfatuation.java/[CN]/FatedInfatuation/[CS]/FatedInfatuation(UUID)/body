{
  super(ownerId,39,"Fated Infatuation",Rarity.RARE,new CardType[]{CardType.INSTANT},"{U}{U}{U}");
  this.expansionSetCode="BNG";
  this.color.setBlue(true);
  this.getSpellAbility().addEffect(new FatedInfatuationCopyEffect());
