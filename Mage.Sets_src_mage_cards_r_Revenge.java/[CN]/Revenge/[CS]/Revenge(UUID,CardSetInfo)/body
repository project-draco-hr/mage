{
  super(ownerId,setInfo,new CardType[]{CardType.INSTANT},"{1}{R}");
  this.getSpellAbility().addEffect(new FightTargetsEffect());
  this.getSpellAbility().addTarget(new TargetControlledCreaturePermanent());
  this.getSpellAbility().addTarget(new TargetOpponentsCreaturePermanent());
  this.getSpellAbility().addEffect(new ConditionalOneShotEffect(new RevengeEffect(),LostLifeCondition.getInstance(),"If you lost life this turn, that creature you control gets +4/+0 until end of turn"));
  this.getSpellAbility().addWatcher(new PlayerLostLifeWatcher());
}
