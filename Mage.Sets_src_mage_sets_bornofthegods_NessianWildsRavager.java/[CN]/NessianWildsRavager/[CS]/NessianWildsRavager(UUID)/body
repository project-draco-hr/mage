{
  super(ownerId,129,"Nessian Wilds Ravager",Rarity.RARE,new CardType[]{CardType.CREATURE},"{4}{G}{G}");
  this.expansionSetCode="BNG";
  this.subtype.add("Hydra");
  this.color.setGreen(true);
  this.power=new MageInt(6);
  this.toughness=new MageInt(6);
  this.addAbility(new TributeAbility(6));
  TriggeredAbility ability=new EntersBattlefieldTriggeredAbility(new FightTargetSourceEffect(),true);
  ability.addTarget(new TargetCreaturePermanent(filter,true));
  this.addAbility(new ConditionalTriggeredAbility(ability,TributeNotPaidCondition.getInstance(),"When {this} enters the battlefield, if its tribute wasn't paid, you may have {this} fight another target creature."));
}
