{
  if (popup != null)   popup.hide();
  PopupFactory factory=PopupFactory.getSharedInstance();
  popup=factory.getPopup(this,popupText,(int)this.getLocationOnScreen().getX() + FRAME_WIDTH,(int)this.getLocationOnScreen().getY() + 40);
  popup.show();
  popup.hide();
  popup=factory.getPopup(this,popupText,(int)this.getLocationOnScreen().getX() + FRAME_WIDTH,(int)this.getLocationOnScreen().getY() + 40);
  popup.show();
}
