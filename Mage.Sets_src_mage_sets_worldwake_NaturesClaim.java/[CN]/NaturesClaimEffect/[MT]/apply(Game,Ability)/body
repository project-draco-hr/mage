{
  Permanent target=(Permanent)game.getLastKnownInformation(targetPointer.getFirst(game,source),Constants.Zone.BATTLEFIELD);
  if (target != null) {
    Player player=game.getPlayer(target.getControllerId());
    if (player != null) {
      player.gainLife(4,game);
      return true;
    }
  }
  return false;
}
