{
  super(ownerId,161,"Gibbering Fiend",Rarity.UNCOMMON,new CardType[]{CardType.CREATURE},"{1}{R}");
  this.expansionSetCode="SOI";
  this.subtype.add("Devil");
  this.power=new MageInt(2);
  this.toughness=new MageInt(1);
  this.addAbility(new EntersBattlefieldTriggeredAbility(new DamagePlayersEffect(1,TargetController.OPPONENT),false));
  this.addAbility(new ConditionalTriggeredAbility(new BeginningOfUpkeepTriggeredAbility(Zone.BATTLEFIELD,new DamageTargetEffect(1),TargetController.OPPONENT,false,true),DeliriumCondition.getInstance(),"<i>Delirium</i> &mdash; At the beginning of each opponent's upkeep, if there are four or more card types among cards in your graveyard, " + "{this} deals 1 damage to that player."));
}
