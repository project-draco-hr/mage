{
  super(ownerId,setInfo,new CardType[]{CardType.CREATURE},"{3}{B}");
  this.subtype.add("Zombie");
  this.subtype.add("Mercenary");
  this.power=new MageInt(3);
  this.toughness=new MageInt(3);
  this.addAbility(new FadingAbility(3,this));
  this.addAbility(new SimpleActivatedAbility(Zone.BATTLEFIELD,new BoostSourceEffect(1,1,Duration.EndOfTurn),new RemoveCountersSourceCost(CounterType.FADE.createInstance())));
}
