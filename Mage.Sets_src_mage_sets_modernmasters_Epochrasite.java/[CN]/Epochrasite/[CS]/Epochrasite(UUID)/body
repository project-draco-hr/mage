{
  super(ownerId,205,"Epochrasite",Rarity.UNCOMMON,new CardType[]{CardType.ARTIFACT,CardType.CREATURE},"{2}");
  this.expansionSetCode="MMA";
  this.subtype.add("Construct");
  this.power=new MageInt(1);
  this.toughness=new MageInt(1);
  this.addAbility(new EntersBattlefieldAbility(new AddCountersSourceEffect(CounterType.P1P1.createInstance(3)),new InvertCondition(new CastFromHandSourceCondition()),"{this} enters the battlefield with three +1/+1 counters on it if you didn't cast it from your hand",""),new CastFromHandWatcher());
  this.addAbility(new DiesTriggeredAbility(new EpochrasiteEffect()));
}
