{
  super(ownerId,205,"Epochrasite",Rarity.UNCOMMON,new CardType[]{CardType.ARTIFACT,CardType.CREATURE},"{2}");
  this.expansionSetCode="MMA";
  this.subtype.add("Construct");
  this.power=new MageInt(1);
  this.toughness=new MageInt(1);
  this.addWatcher(new CastFromHandWatcher());
  this.addAbility(new EntersBattlefieldAbility(new AddCountersSourceEffect(CounterType.P1P1.createInstance(3)),new InvertCondition(new CastFromHandCondition()),true,"{this} enters the battlefield with three +1/+1 counters on it if you didn't cast it from your hand",""));
  Ability ability=new DiesTriggeredAbility(new ExileSourceEffect());
  ability.addEffect(new AddCountersSourceEffect(CounterType.TIME.createInstance(3),new StaticValue(0),false,true));
  ability.addEffect(new GainAbilitySourceEffect(new SuspendAbility(3,null,this),Duration.Custom));
  this.addAbility(ability);
}
