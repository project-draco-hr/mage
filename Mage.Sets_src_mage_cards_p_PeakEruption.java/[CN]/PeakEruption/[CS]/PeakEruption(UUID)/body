{
  super(ownerId,132,"Peak Eruption",Rarity.UNCOMMON,new CardType[]{CardType.SORCERY},"{2}{R}");
  this.expansionSetCode="THS";
  this.getSpellAbility().addEffect(new DestroyTargetEffect());
