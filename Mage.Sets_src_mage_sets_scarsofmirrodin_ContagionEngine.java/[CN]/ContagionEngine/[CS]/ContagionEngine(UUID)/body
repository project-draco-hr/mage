{
  super(ownerId,145,"Contagion Engine",Rarity.RARE,new CardType[]{CardType.ARTIFACT},"{6}");
  this.expansionSetCode="SOM";
  Ability ability=new EntersBattlefieldTriggeredAbility(new ContagionEngineEffect());
