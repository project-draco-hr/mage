{
  super(ownerId,setInfo,new CardType[]{CardType.ENCHANTMENT},"{3}{R}");
  Ability ability=new EntersBattlefieldControlledTriggeredAbility(Zone.BATTLEFIELD,new FlameshadowConjuringEffect(),filterNontoken,false,SetTargetPointer.PERMANENT,"Whenever a nontoken creature enters the battlefield under your control, you may pay {R}. If you do, create a token that's a copy of that creature. That token gains haste. Exile it at the beginning of the next end step");
  ability.addCost(new ManaCostsImpl("{R}"));
  this.addAbility(ability);
}
