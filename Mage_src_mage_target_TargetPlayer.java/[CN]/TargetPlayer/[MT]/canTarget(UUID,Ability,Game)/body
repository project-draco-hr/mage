{
  Player player=game.getPlayer(id);
  if (player != null) {
    if (source != null) {
      return player.canBeTargetedBy(game.getObject(source.getSourceId()),game) && filter.match(player,source.getSourceId(),source.getControllerId(),game);
    }
 else {
      return filter.match(player,game);
    }
  }
  return false;
}
