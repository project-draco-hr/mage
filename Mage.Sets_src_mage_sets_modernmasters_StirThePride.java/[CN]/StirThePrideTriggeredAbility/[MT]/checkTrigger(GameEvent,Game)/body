{
  if (event.getType().equals(EventType.DAMAGED_CREATURE) || event.getType().equals(GameEvent.EventType.DAMAGED_PLAYER) || event.getType().equals(GameEvent.EventType.DAMAGED_PLANESWALKER)) {
    if (event.getSourceId().equals(this.getSourceId())) {
      for (      Effect effect : this.getEffects()) {
        effect.setValue("damage",event.getAmount());
      }
      return true;
    }
  }
  return false;
}
