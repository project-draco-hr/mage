{
  super(ownerId,234,"Lightsaber",Rarity.COMMON,new CardType[]{CardType.ARTIFACT},"{1}");
  this.expansionSetCode="SWS";
  this.addAbility(new EquipAbility(Outcome.BoostCreature,new GenericManaCost(3)));
