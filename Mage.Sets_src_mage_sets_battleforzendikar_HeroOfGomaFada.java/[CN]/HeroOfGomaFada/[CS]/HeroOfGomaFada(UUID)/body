{
  super(ownerId,31,"Hero of Goma Fada",Rarity.RARE,new CardType[]{CardType.CREATURE},"{4}{W}");
  this.expansionSetCode="BFZ";
  this.subtype.add("Human");
  this.subtype.add("Knight");
  this.subtype.add("Ally");
  this.power=new MageInt(4);
  this.toughness=new MageInt(3);
  Ability ability=new AllyEntersBattlefieldTriggeredAbility(new GainAbilityAllEffect(IndestructibleAbility.getInstance(),Duration.EndOfTurn,new FilterControlledCreaturePermanent()),false);
  ability.setAbilityWord(AbilityWord.RALLY);
  this.addAbility(ability);
}
