{
  Permanent permanent=game.getPermanent(event.getTargetId());
  if (permanent != null) {
    if (permanent.getId() == this.getSourceId()) {
      return true;
    }
    if (permanent.hasSubtype("Ally") && permanent.getControllerId().equals(this.getControllerId())) {
      return true;
    }
  }
  return false;
}
