{
  super(ownerId,40,"Esper Battlemage",Rarity.UNCOMMON,new CardType[]{CardType.ARTIFACT,CardType.CREATURE},"{2}{U}");
  this.expansionSetCode="ALA";
  this.subtype.add("Human");
  this.subtype.add("Wizard");
  this.power=new MageInt(2);
  this.toughness=new MageInt(2);
  SimpleActivatedAbility ability=new SimpleActivatedAbility(Zone.BATTLEFIELD,new EsperBattlemageEffect(),new ColoredManaCost(ColoredManaSymbol.W));
  ability.addCost(new TapSourceCost());
  this.addAbility(ability);
  ability=new SimpleActivatedAbility(Zone.BATTLEFIELD,new BoostTargetEffect(-1,-1,Duration.EndOfTurn),new ColoredManaCost(ColoredManaSymbol.B));
  ability.addCost(new TapSourceCost());
  ability.addTarget(new TargetCreaturePermanent());
  this.addAbility(ability);
}
