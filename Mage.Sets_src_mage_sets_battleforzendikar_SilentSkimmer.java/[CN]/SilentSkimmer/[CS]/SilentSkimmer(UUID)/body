{
  super(ownerId,96,"Silent Skimmer",Rarity.COMMON,new CardType[]{CardType.CREATURE},"{3}{B}");
  this.expansionSetCode="BFZ";
  this.subtype.add("Eldrazi");
  this.subtype.add("Drone");
  this.power=new MageInt(0);
  this.toughness=new MageInt(4);
  Ability ability=new DevoidAbility(this.color);
  ability.setRuleAtTheTop(true);
  this.addAbility(ability);
  this.addAbility(FlyingAbility.getInstance());
  this.addAbility(new AttacksTriggeredAbility(new LoseLifeTargetEffect(2),false,"Whenever {this} attacks, defending player loses 2 life",SetTargetPointer.PLAYER));
}
