{
  super(ownerId,210,"Rathi Dragon",Rarity.RARE,new CardType[]{CardType.CREATURE},"{2}{R}{R}");
  this.expansionSetCode="9ED";
  this.subtype.add("Dragon");
  this.power=new MageInt(5);
  this.toughness=new MageInt(5);
  this.addAbility(FlyingAbility.getInstance());
  this.addAbility(new EntersBattlefieldTriggeredAbility(new SacrificeSourceUnlessPaysEffect(new SacrificeTargetCost(new TargetControlledPermanent(2,2,filter,true)))));
}
