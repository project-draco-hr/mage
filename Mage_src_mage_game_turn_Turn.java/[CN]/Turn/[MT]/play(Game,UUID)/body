{
  if (game.isGameOver())   return;
  this.activePlayerId=activePlayerId;
  resetCounts();
  game.getPlayer(activePlayerId).beginTurn(game);
  for (  Phase phase : phases) {
    if (game.isGameOver())     return;
    currentPhase=phase;
    if (phase.play(game,activePlayerId)) {
      game.emptyManaPools();
      game.saveState();
      playExtraPhases(game,phase.getType());
    }
  }
  playExtraTurns(game);
}
