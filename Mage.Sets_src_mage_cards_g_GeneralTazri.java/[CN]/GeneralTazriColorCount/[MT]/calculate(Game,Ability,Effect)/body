{
  int count=0;
  boolean black=false;
  boolean red=false;
  boolean white=false;
  boolean green=false;
  boolean blue=false;
  for (  Permanent creature : game.getBattlefield().getAllActivePermanents(filter,sourceAbility.getControllerId(),game)) {
    ObjectColor color=creature.getColor(game);
    black|=color.isBlack();
    red|=color.isRed();
    white|=color.isWhite();
    green|=color.isGreen();
    blue|=color.isBlue();
  }
  count+=black ? 1 : 0;
  count+=red ? 1 : 0;
  count+=white ? 1 : 0;
  count+=green ? 1 : 0;
  count+=blue ? 1 : 0;
  return count;
}
