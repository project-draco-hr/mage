{
  String lastFolder=prefs.get("lastDeckFolder","");
  if (!lastFolder.isEmpty())   fcSelectDeck.setCurrentDirectory(new File(lastFolder));
  deck.setName(this.txtDeckName.getText());
  int ret=fcSelectDeck.showSaveDialog(this);
  if (ret == JFileChooser.APPROVE_OPTION) {
    File file=fcSelectDeck.getSelectedFile();
    try {
      setCursor(new Cursor(Cursor.WAIT_CURSOR));
      deck.getDeckCardLists().save(file.getPath());
    }
 catch (    Exception ex) {
      Logger.getLogger(DeckEditorPanel.class.getName()).log(Level.SEVERE,null,ex);
    }
 finally {
      setCursor(new Cursor(Cursor.DEFAULT_CURSOR));
    }
    try {
      prefs.put("lastDeckFolder",file.getCanonicalPath());
    }
 catch (    IOException ex) {
    }
  }
}
