{
  super(ownerId,setInfo,new CardType[]{CardType.CREATURE},"{1}{U}");
  this.subtype.add("Merfolk");
  this.subtype.add("Cleric");
  this.power=new MageInt(1);
  this.toughness=new MageInt(1);
  Ability ability=new ConditionalActivatedAbility(Zone.BATTLEFIELD,new GainAbilityTargetEffect(ShroudAbility.getInstance(),Duration.EndOfTurn),new ManaCostsImpl("{U}{U}"),new IsStepCondition(PhaseStep.UPKEEP),null);
  ability.addCost(new TapSourceCost());
  ability.addTarget(new TargetCreaturePermanent());
  this.addAbility(ability);
}
