{
  if (game.isPaused() || game.isGameOver())   return false;
  this.activePlayerId=activePlayerId;
  if (beginPhase(game,activePlayerId)) {
    for (    Step step : steps) {
      if (game.isPaused() || game.isGameOver())       return false;
      currentStep=step;
      if (!game.getState().getTurnMods().skipStep(activePlayerId,currentStep.getType()))       playStep(game);
    }
    if (game.isPaused() || game.isGameOver())     return false;
    count++;
    endPhase(game,activePlayerId);
    return true;
  }
  return false;
}
