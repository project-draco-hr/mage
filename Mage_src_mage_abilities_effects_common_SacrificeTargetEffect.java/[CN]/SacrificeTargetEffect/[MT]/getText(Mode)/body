{
  if (staticText.equals("")) {
    if (mode.getTargets().get(0).getNumberOfTargets() == 1)     return "The controller of target " + mode.getTargets().get(0).getTargetName() + " sacrifices it";
 else     return "The controller of " + mode.getTargets().get(0).getNumberOfTargets() + " target "+ mode.getTargets().get(0).getTargetName()+ " sacrifices it";
  }
  return staticText;
}
