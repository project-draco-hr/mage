{
  super(ownerId,25,"Thraben Doomsayer",Rarity.RARE,new CardType[]{CardType.CREATURE},"{1}{W}{W}");
  this.expansionSetCode="DKA";
  this.subtype.add("Human");
  this.subtype.add("Cleric");
  this.power=new MageInt(2);
  this.toughness=new MageInt(2);
  this.addAbility(new SimpleActivatedAbility(Zone.BATTLEFIELD,new CreateTokenEffect(new HumanToken()),new TapSourceCost()));
  this.addAbility(new SimpleStaticAbility(Zone.BATTLEFIELD,new ConditionalContinuousEffect(new BoostControlledEffect(2,2,Duration.WhileOnBattlefield,false),FatefulHourCondition.getInstance(),"As long as you have 5 or less life, other creatures you control get +2/+2")));
}
