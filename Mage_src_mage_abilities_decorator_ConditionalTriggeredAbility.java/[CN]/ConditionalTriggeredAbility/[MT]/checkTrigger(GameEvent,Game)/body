{
  ability.setSourceId(this.getSourceId());
  ability.setControllerId(this.getControllerId());
  if (ability.checkTrigger(event,game)) {
    if (condition.apply(game,this)) {
      getTargets().clear();
      getTargets().addAll(ability.getTargets());
      return true;
    }
  }
  return false;
}
