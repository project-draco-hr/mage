{
  Permanent permanent=game.getPermanent(event.getTargetId());
  if (permanent != null && permanent.getCardType().contains(CardType.CREATURE) && permanent.getControllerId().equals(this.controllerId)) {
    this.getEffects().get(0).setValue("damageSource",event.getTargetId());
    return true;
  }
  return false;
}
