{
  StringBuilder sb=new StringBuilder("Target ");
switch (targetController) {
case OPPONENT:
    sb.append("Opponent");
  break;
case ANY:
sb.append("Player");
break;
default :
throw new UnsupportedOperationException("target controller not supported");
}
sb.append(" reveals his or her hand. You choose ").append(filter.getMessage()).append(" from it. That player discards that card").toString();
return sb.toString();
}
