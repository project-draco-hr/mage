{
  if (source != null) {
    if (!game.replaceEvent(GameEvent.getEvent(EventType.TARGET,id,source.getSourceId(),source.getControllerId()))) {
      targets.add(id);
      game.fireEvent(GameEvent.getEvent(EventType.TARGETED,id,source.getSourceId(),source.getControllerId()));
    }
  }
 else {
    targets.add(id);
  }
}
