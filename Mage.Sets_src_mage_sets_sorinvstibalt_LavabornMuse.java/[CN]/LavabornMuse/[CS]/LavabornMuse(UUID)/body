{
  super(ownerId,50,"Lavaborn Muse",Rarity.RARE,new CardType[]{CardType.CREATURE},"{3}{R}");
  this.expansionSetCode="DDK";
  this.subtype.add("Spirit");
  this.power=new MageInt(3);
  this.toughness=new MageInt(3);
  this.addAbility(new ConditionalTriggeredAbility(new BeginningOfUpkeepTriggeredAbility(Zone.BATTLEFIELD,new DamageTargetEffect(3),TargetController.OPPONENT,false,true),new CardsInActivePlayersHandCondition(),"At the beginning of each opponent's upkeep, if that player has two or fewer cards in hand, {this} deals 3 damage to him or her.",false));
}
