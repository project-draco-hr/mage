{
  super(ownerId,setInfo,new CardType[]{CardType.INSTANT},"{3}{U}");
  this.getSpellAbility().setAbilityWord(AbilityWord.CONVERGE);
  this.getSpellAbility().addEffect(new BoostAllEffect(new SignInversionDynamicValue(ColorsOfManaSpentToCastCount.getInstance()),new StaticValue(-0),Duration.EndOfTurn,filter,false,"Creatures your opponents control get -X/-0 until end of turn, where X is the number of colors of mana spent to cast {this}.<br>",true));
  this.getSpellAbility().addEffect(new DrawCardSourceControllerEffect(1));
}
