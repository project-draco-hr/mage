{
  super(ownerId,202,"Boartusk Liege",Rarity.RARE,new CardType[]{CardType.CREATURE},"{1}{R/G}{R/G}{R/G}");
  this.expansionSetCode="SHM";
  this.subtype.add("Goblin");
