{
  StringBuilder sb=new StringBuilder();
  boolean oneCard=(amount instanceof StaticValue && amount.calculate(null,null) == 1) || amount instanceof PermanentsOnBattlefieldCount;
  sb.append("draw ").append(oneCard ? "a" : amount).append(" card");
  if (!oneCard) {
    sb.append("s");
  }
  String message=amount.getMessage();
  if (message.length() > 0) {
    sb.append(" for each ");
  }
  sb.append(message);
  staticText=sb.toString();
}
