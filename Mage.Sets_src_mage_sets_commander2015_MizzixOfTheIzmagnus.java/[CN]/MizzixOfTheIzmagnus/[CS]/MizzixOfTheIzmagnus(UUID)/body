{
  super(ownerId,50,"Mizzix of the Izmagnus",Rarity.MYTHIC,new CardType[]{CardType.CREATURE},"{2}{U}{R}");
  this.expansionSetCode="C15";
  this.supertype.add("Legendary");
  this.subtype.add("Goblin");
