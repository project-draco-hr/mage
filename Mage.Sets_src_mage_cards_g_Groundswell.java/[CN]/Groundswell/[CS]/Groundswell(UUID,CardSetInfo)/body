{
  super(ownerId,setInfo,new CardType[]{CardType.INSTANT},"{G}");
  this.getSpellAbility().addWatcher(new LandfallWatcher());
  this.getSpellAbility().addEffect(new ConditionalOneShotEffect(new AddContinuousEffectToGame(new BoostTargetEffect(4,4,Duration.EndOfTurn)),new AddContinuousEffectToGame(new BoostTargetEffect(2,2,Duration.EndOfTurn)),LandfallCondition.getInstance(),"Target creature gets +2/+2 until end of turn. <br><i>Landfall</i> &mdash; If you had a land enter the battlefield under your control this turn, that creature gets +4/+4 until end of turn instead"));
  this.getSpellAbility().addTarget(new TargetCreaturePermanent());
}
