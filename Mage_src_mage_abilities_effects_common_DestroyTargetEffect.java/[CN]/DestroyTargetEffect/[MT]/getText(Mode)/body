{
  if (mode.getTargets().size() == 0) {
    return "destroy that creature";
  }
 else   if (mode.getTargets().get(0).getNumberOfTargets() == 1)   return "Destroy target " + mode.getTargets().get(0).getTargetName();
 else   return "Destroy " + mode.getTargets().get(0).getNumberOfTargets() + " target "+ mode.getTargets().get(0).getTargetName();
}
