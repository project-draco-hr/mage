{
  if (source.getTargets().size() == 0) {
    return "destroy that creature";
  }
 else   if (source.getTargets().get(0).getNumberOfTargets() == 1)   return "Destroy target " + source.getTargets().get(0).getTargetName();
 else   return "Destroy " + source.getTargets().get(0).getNumberOfTargets() + " target "+ source.getTargets().get(0).getTargetName();
}
