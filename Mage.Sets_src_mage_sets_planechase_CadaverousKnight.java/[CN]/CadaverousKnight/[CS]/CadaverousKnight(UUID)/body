{
  super(ownerId,20,"Cadaverous Knight",Rarity.COMMON,new CardType[]{CardType.CREATURE},"{2}{B}");
  this.expansionSetCode="HOP";
  this.subtype.add("Zombie");
  this.subtype.add("Knight");
  this.color.setBlack(true);
  this.power=new MageInt(2);
  this.toughness=new MageInt(2);
  this.addAbility(new FlankingAbility());
  this.addAbility(new SimpleActivatedAbility(Constants.Zone.BATTLEFIELD,new RegenerateSourceEffect(),new ManaCostsImpl("{1}{B}{B}")));
}
