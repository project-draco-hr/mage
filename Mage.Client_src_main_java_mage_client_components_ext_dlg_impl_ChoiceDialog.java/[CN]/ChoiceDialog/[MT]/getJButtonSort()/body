{
  if (jButtonSort == null) {
    jButtonSort=new JButton();
    int w=getDlgParams().rect.width - 75;
    int h=getDlgParams().rect.height - 75;
    jButtonSort.setBounds(new Rectangle(w / 2 + 150,h - 30,78,22));
    jButtonSort.setText("Sort");
    jButtonSort.setVisible(false);
    if (maxPages == 1) {
      jButtonSort.setVisible(false);
    }
  }
  return jButtonSort;
}
