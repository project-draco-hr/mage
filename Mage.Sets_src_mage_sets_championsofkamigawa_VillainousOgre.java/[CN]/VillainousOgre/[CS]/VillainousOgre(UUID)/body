  this.addAbility(new CantBlockAbility());
  this.addAbility(new ConditionalGainActivatedAbility(Constants.Zone.BATTLEFIELD,new RegenerateSourceEffect(),new ColoredManaCost(Constants.ColoredManaSymbol.B),new ControlsPermanentCondition(filter),rule));
