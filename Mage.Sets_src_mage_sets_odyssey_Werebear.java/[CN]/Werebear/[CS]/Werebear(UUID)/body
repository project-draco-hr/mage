{
  super(ownerId,282,"Werebear",Rarity.COMMON,new CardType[]{CardType.CREATURE},"{1}{G}");
  this.expansionSetCode="ODY";
  this.subtype.add("Human");
  this.subtype.add("Bear");
  this.subtype.add("Druid");
  this.color.setGreen(true);
  this.power=new MageInt(1);
  this.toughness=new MageInt(1);
  this.addAbility(new GreenManaAbility());
  Ability thresholdAbility=new SimpleStaticAbility(Zone.BATTLEFIELD,new ConditionalContinuousEffect(new BoostSourceEffect(3,3,Duration.WhileOnBattlefield),new CardsInControllerGraveCondition(7),"<i>Threshold</i> - {this} gets +3/+3 as long as seven or more cards are in your graveyard"));
  this.addAbility(thresholdAbility);
}
