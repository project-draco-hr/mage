{
  Permanent equipment=game.getPermanent(source.getSourceId());
  if (equipment != null && equipment.getAttachedTo() != null) {
    Permanent target=game.getPermanent(equipment.getAttachedTo());
    if (target != null) {
      if (addedColor.isBlack())       target.getColor().setBlack(true);
      if (addedColor.isBlue())       target.getColor().setBlue(true);
      if (addedColor.isWhite())       target.getColor().setWhite(true);
      if (addedColor.isGreen())       target.getColor().setGreen(true);
      if (addedColor.isRed())       target.getColor().setRed(true);
    }
  }
  return true;
}
