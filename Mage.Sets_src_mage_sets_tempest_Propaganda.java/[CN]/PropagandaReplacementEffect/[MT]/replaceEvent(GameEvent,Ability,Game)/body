{
  if (event.getType() == GameEvent.EventType.DECLARE_ATTACKER) {
    Player player=game.getPlayer(event.getPlayerId());
    if (player != null) {
      ManaCostsImpl propagandaTax=new ManaCostsImpl("{2}");
      if (propagandaTax.canPay(source.getSourceId(),event.getPlayerId(),game) && player.chooseUse(Constants.Outcome.Neutral,"Pay {2} to declare attacker?",game)) {
        if (propagandaTax.payOrRollback(source,game,this.getId(),event.getPlayerId())) {
          return false;
        }
      }
    }
    return true;
  }
  return false;
}
