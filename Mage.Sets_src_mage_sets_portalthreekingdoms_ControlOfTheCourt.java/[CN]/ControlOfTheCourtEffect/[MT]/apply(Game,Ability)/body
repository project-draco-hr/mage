{
  Player player=game.getPlayer(source.getControllerId());
  if (player != null) {
    player.drawCards(4,game);
    Cards hand=player.getHand();
    for (int i=0; i < 3; i++) {
      Card card=hand.getRandom(game);
      if (card != null) {
        player.discard(card,source,game);
      }
    }
    return true;
  }
  return false;
}
