{
  super(ownerId,50,"Riptide Director",Rarity.RARE,new CardType[]{CardType.CREATURE},"{2}{U}{U}");
  this.expansionSetCode="LGN";
  this.subtype.add("Human");
  this.subtype.add("Wizard");
  this.power=new MageInt(2);
  this.toughness=new MageInt(3);
  Ability ability=new SimpleActivatedAbility(Zone.BATTLEFIELD,new DrawCardSourceControllerEffect(new PermanentsOnBattlefieldCount(filter)),new ManaCostsImpl("{2}{U}{U}"));
  ability.addCost(new TapSourceCost());
  this.addAbility(ability);
}
