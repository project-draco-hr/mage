{
  super(ownerId,3,"Crovax, Ascendant Hero",Rarity.RARE,new CardType[]{CardType.CREATURE},"{4}{W}{W}");
  this.expansionSetCode="PLC";
  this.supertype.add("Legendary");
  this.subtype.add("Human");
  this.color.setWhite(true);
  this.power=new MageInt(4);
  this.toughness=new MageInt(4);
  this.addAbility(new SimpleStaticAbility(Constants.Zone.BATTLEFIELD,new BoostAllEffect(1,1,Constants.Duration.WhileOnBattlefield,filter1,true)));
  this.addAbility(new SimpleStaticAbility(Constants.Zone.BATTLEFIELD,new BoostAllEffect(-1,-1,Constants.Duration.WhileOnBattlefield,filter2,false)));
  this.addAbility(new SimpleActivatedAbility(Constants.Zone.BATTLEFIELD,new ReturnToHandSourceEffect(),new PayLifeCost(2)));
}
