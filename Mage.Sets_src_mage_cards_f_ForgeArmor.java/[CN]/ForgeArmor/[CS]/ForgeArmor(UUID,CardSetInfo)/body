{
  super(ownerId,setInfo,new CardType[]{CardType.INSTANT},"{4}{R}");
  this.getSpellAbility().addCost(new SacrificeTargetCost(new TargetControlledPermanent(new FilterControlledArtifactPermanent())));
  this.getSpellAbility().addEffect(new AddCountersTargetEffect(new AddCountersTargetEffect(CounterType.P1P1.createInstance(),new SacrificeCostConvertedMana("artifact"))));
  this.getSpellAbility().addTarget(new TargetCreaturePermanent());
}
