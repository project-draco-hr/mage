{
  super(ownerId,146,"Persecute",Rarity.RARE,new CardType[]{CardType.SORCERY},"{2}{B}{B}");
  this.expansionSetCode="USG";
  this.color.setBlack(true);
  this.getSpellAbility().addEffect(new PersecuteEffect());
