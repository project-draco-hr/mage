{
  if (event.getType() == EventType.ZONE_CHANGE) {
    if (((ZoneChangeEvent)event).getToZone() == Zone.BATTLEFIELD) {
      UUID targetId=event.getTargetId();
      Permanent permanent=game.getPermanent(targetId);
      if (permanent.getControllerId().equals(this.controllerId) && permanent.getCardType().contains(CardType.CREATURE) && permanent.getSubtype().contains("Scarecrow")&& !targetId.equals(this.getSourceId())) {
        return true;
      }
    }
  }
  return false;
}
