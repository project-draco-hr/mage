{
switch (layer) {
case RulesEffects:
    Permanent attachment=game.getPermanent(source.getSourceId());
  if (attachment != null && attachment.getAttachedTo() != null) {
    Permanent perm=game.getPermanent(attachment.getAttachedTo());
    if (perm != null) {
      perm.setMaxBlocks(amount);
      return true;
    }
  }
break;
}
return false;
}
