{
  Player player=game.getPlayer(source.getFirstTarget());
  if (player != null) {
    for (    UUID cid : player.getHand().copy()) {
      Card c=game.getCard(cid);
      if (c != null) {
        c.moveToExile(null,null,source.getId(),game);
      }
    }
    for (    UUID cid : player.getGraveyard().copy()) {
      Card c=game.getCard(cid);
      if (c != null) {
        c.moveToExile(null,null,source.getId(),game);
      }
    }
    return true;
  }
  return false;
}
