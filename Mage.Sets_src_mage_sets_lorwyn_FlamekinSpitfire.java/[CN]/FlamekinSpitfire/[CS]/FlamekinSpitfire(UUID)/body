{
  super(ownerId,168,"Flamekin Spitfire",Rarity.UNCOMMON,new CardType[]{CardType.CREATURE},"{1}{R}");
  this.expansionSetCode="LRW";
  this.subtype.add("Elemental");
  this.subtype.add("Shaman");
  this.color.setRed(true);
  this.power=new MageInt(1);
  this.toughness=new MageInt(1);
  Ability ability=new SimpleActivatedAbility(Constants.Zone.BATTLEFIELD,new DamageTargetEffect(1),new ManaCostsImpl("{3}{R}"));
  ability.addTarget(new TargetCreatureOrPlayer());
  this.addAbility(ability);
}
