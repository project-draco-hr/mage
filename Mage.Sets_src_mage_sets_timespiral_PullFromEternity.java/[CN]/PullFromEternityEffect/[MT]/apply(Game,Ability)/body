{
  Player controller=game.getPlayer(source.getControllerId());
  if (controller != null) {
    Card card=game.getCard(getTargetPointer().getFirst(game,source));
    if (card != null) {
      controller.moveCardToGraveyardWithInfo(card,source.getSourceId(),game,Zone.EXILED);
    }
    return true;
  }
  return false;
}
