{
  if ((game.getObject(sourceId).getCardType().contains(CardType.INSTANT) || game.getObject(sourceId).getAbilities().containsKey(FlashAbility.getInstance().getId()) || game.canPlaySorcery(playerId)) && costs.canPay(this,game) && targets.canChoose(sourceId,playerId,game)) {
    return true;
  }
  return false;
}
