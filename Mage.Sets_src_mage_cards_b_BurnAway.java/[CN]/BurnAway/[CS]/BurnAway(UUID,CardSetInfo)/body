{
  super(ownerId,setInfo,new CardType[]{CardType.INSTANT},"{4}{R}");
  this.getSpellAbility().addEffect(new DamageTargetEffect(6));
  this.getSpellAbility().addTarget(new TargetCreaturePermanent());
