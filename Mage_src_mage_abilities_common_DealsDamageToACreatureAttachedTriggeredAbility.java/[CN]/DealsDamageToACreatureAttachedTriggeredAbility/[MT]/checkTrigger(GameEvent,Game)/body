{
  if (!combatOnly || ((DamagedCreatureEvent)event).isCombatDamage()) {
    Permanent attachment=game.getPermanent(this.getSourceId());
    if (attachment != null && attachment.getAttachedTo() != null && event.getSourceId().equals(attachment.getAttachedTo())) {
      if (setTargetPointer) {
        for (        Effect effect : this.getEffects()) {
          effect.setTargetPointer(new FixedTarget(event.getTargetId()));
          effect.setValue("damage",event.getAmount());
        }
      }
      return true;
    }
  }
  return false;
}
