{
  StringBuilder sb=new StringBuilder();
  sb.append("You may play ");
  if (additionalCards == Integer.MAX_VALUE) {
    sb.append("any number of");
  }
 else {
    sb.append(Integer.toString(additionalCards));
  }
  sb.append(" additional land").append((additionalCards == 1 ? "" : "s")).append(duration == Duration.EndOfTurn ? " this turn" : " on each of your turns");
  staticText=sb.toString();
}
