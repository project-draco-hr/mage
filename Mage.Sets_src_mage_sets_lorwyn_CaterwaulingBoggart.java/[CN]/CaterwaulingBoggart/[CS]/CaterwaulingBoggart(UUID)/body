{
  super(ownerId,157,"Caterwauling Boggart",Rarity.COMMON,new CardType[]{CardType.CREATURE},"{3}{R}");
  this.expansionSetCode="LRW";
  this.subtype.add("Goblin");
  this.subtype.add("Shaman");
  this.color.setRed(true);
  this.power=new MageInt(2);
  this.toughness=new MageInt(2);
  this.addAbility(new SimpleStaticAbility(Constants.Zone.BATTLEFIELD,new GainAbilityAllEffect(new SimpleStaticAbility(Constants.Zone.BATTLEFIELD,new CantBeBlockedByOneEffect(2)),Duration.WhileOnBattlefield,filterGoblin,"Each Goblin you control can't be blocked except by two or more creatures")));
  this.addAbility(new SimpleStaticAbility(Constants.Zone.BATTLEFIELD,new GainAbilityAllEffect(new SimpleStaticAbility(Constants.Zone.BATTLEFIELD,new CantBeBlockedByOneEffect(2)),Duration.WhileOnBattlefield,filterGoblin,"Each Elemental you control can't be blocked except by two or more creatures")));
}
