{
  if (event.getType() == EventType.ZONE_CHANGE) {
    UUID targetId=event.getTargetId();
    Permanent permanent=game.getPermanent(targetId);
    ZoneChangeEvent zEvent=(ZoneChangeEvent)event;
    if (zEvent.getToZone() == Zone.BATTLEFIELD && permanent.getControllerId().equals(this.controllerId) && (targetId.equals(this.getSourceId()) || (permanent.getSubtype().contains("Ally") && !targetId.equals(this.getSourceId())))) {
      return true;
    }
  }
  return false;
}
