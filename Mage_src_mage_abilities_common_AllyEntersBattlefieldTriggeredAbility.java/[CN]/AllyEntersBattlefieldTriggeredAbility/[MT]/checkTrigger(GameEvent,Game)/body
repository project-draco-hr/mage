{
  if (event.getType() == EventType.ENTERS_THE_BATTLEFIELD) {
    UUID targetId=event.getTargetId();
    Permanent permanent=game.getPermanent(targetId);
    if (permanent.getControllerId().equals(this.controllerId) && (targetId.equals(this.getSourceId()) || (permanent.hasSubtype("Ally") && !targetId.equals(this.getSourceId())))) {
      return true;
    }
  }
  return false;
}
