{
  LeovoldEmissaryOfTrestWatcher watcher=(LeovoldEmissaryOfTrestWatcher)game.getState().getWatchers().get("DrewCard");
  Player controller=game.getPlayer(source.getControllerId());
  return watcher != null && controller != null && watcher.hasPlayerDrewCardThisTurn(event.getPlayerId()) && game.isOpponent(controller,event.getPlayerId());
}
