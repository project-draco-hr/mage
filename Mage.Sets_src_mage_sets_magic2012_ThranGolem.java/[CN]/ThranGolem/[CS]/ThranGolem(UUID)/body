{
  super(ownerId,220,"Thran Golem",Rarity.UNCOMMON,new CardType[]{CardType.ARTIFACT,CardType.CREATURE},"{5}");
  this.expansionSetCode="M12";
  this.subtype.add("Golem");
  this.power=new MageInt(3);
  this.toughness=new MageInt(3);
  this.addAbility(new SimpleStaticAbility(Zone.BATTLEFIELD,new ConditionalContinousEffect(new BoostSourceEffect(3,3,Duration.WhileOnBattlefield),new Enchanted(),"As long as {this} is enchanted, it gets +2/+2")));
  this.addAbility(new SimpleStaticAbility(Zone.BATTLEFIELD,new ConditionalContinousEffect(new GainAbilitySourceEffect(FlyingAbility.getInstance(),Duration.WhileOnBattlefield),new Enchanted(),"As long as {this} is enchanted, it has flying")));
  this.addAbility(new SimpleStaticAbility(Zone.BATTLEFIELD,new ConditionalContinousEffect(new GainAbilitySourceEffect(FirstStrikeAbility.getInstance(),Duration.WhileOnBattlefield),new Enchanted(),"As long as {this} is enchanted, it has first strike")));
  this.addAbility(new SimpleStaticAbility(Zone.BATTLEFIELD,new ConditionalContinousEffect(new GainAbilitySourceEffect(TrampleAbility.getInstance(),Duration.WhileOnBattlefield),new Enchanted(),"As long as {this} is enchanted, it has trample")));
}
