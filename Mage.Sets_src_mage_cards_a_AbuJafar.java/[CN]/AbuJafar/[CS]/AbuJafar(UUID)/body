{
  super(ownerId,55,"Abu Ja'far",Rarity.UNCOMMON,new CardType[]{CardType.CREATURE},"{W}");
  this.expansionSetCode="ARN";
  this.subtype.add("Human");
  this.power=new MageInt(0);
  this.toughness=new MageInt(1);
  FilterCreaturePermanent filter=new FilterCreaturePermanent("creatures blocking or blocked by it");
  filter.add(Predicates.or(new BlockedByIdPredicate(this.getId()),new BlockingAttackerIdPredicate(this.getId())));
  this.addAbility(new DiesTriggeredAbility(new DestroyAllEffect(filter,true),false));
}
