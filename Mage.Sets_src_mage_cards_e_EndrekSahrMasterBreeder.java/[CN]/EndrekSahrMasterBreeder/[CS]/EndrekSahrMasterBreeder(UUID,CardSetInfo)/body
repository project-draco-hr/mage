{
  super(ownerId,setInfo,new CardType[]{CardType.CREATURE},"{4}{B}");
  this.supertype.add("Legendary");
  this.subtype.add("Human");
  this.subtype.add("Wizard");
  this.power=new MageInt(2);
  this.toughness=new MageInt(2);
  this.addAbility(new SpellCastControllerTriggeredAbility(new EndrekSahrMasterBreederEffect(),filter,false,true));
  this.addAbility(new ControlsPermanentsControllerTriggeredAbility(new FilterCreaturePermanent("Thrull","seven or more Thrulls"),Filter.ComparisonType.GreaterThan,6,new SacrificeSourceEffect()));
}
