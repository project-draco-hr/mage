{
  if (host.equals("localhost")) {
    try {
      InetAddress inet=getLocalAddress();
      if (inet != null) {
        return transport + "://" + inet.getHostAddress()+ ":"+ port+ "/"+ serialization;
      }
    }
 catch (    SocketException ex) {
    }
  }
  return transport + "://" + host+ ":"+ port+ "/"+ serialization;
}
