{
  super(ownerId,16,"Opal Lake Gatekeepers",Rarity.COMMON,new CardType[]{CardType.CREATURE},"{3}{U}");
  this.expansionSetCode="DGM";
  this.subtype.add("Vedalken");
  this.subtype.add("Soldier");
