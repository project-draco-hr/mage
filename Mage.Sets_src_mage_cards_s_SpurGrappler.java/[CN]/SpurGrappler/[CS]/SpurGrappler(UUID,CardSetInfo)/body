{
  super(ownerId,setInfo,new CardType[]{CardType.CREATURE},"{2}{R}");
  this.subtype.add("Beast");
  this.power=new MageInt(2);
  this.toughness=new MageInt(1);
  this.addAbility(new SimpleStaticAbility(Zone.BATTLEFIELD,new ConditionalContinuousEffect(new BoostSourceEffect(2,1,Duration.WhileOnBattlefield),new InvertCondition(new PermanentsOnTheBattlefieldCondition(filter)),"{this} gets +2/+1 as long as you control no untapped lands")));
}
