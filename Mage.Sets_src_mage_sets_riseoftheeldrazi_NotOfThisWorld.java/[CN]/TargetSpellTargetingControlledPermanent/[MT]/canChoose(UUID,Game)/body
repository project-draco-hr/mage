{
  int count=0;
  for (  StackObject stackObject : game.getStack()) {
    if (stackObject instanceof Spell && game.getPlayer(sourceControllerId).getInRange().contains(stackObject.getControllerId()) && filter.match((Spell)stackObject,game)&& ((Spell)stackObject).getSpellAbility().getTargets().isChosen()&& game.getPermanent(((Spell)stackObject).getSpellAbility().getTargets().getFirstTarget()) != null && game.getPermanent(((Spell)stackObject).getSpellAbility().getTargets().getFirstTarget()).getControllerId() == sourceControllerId) {
      count++;
      if (count >= this.minNumberOfTargets)       return true;
    }
  }
  return false;
}
