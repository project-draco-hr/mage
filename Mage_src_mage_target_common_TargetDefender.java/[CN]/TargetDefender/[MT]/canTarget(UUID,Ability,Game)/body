{
  Player player=game.getPlayer(id);
  MageObject targetSource=game.getObject(attackerId);
  if (player != null) {
    return player.canBeTargetedBy(targetSource) && filter.match(player);
  }
  Permanent permanent=game.getPermanent(id);
  if (permanent != null) {
    return permanent.canBeTargetedBy(targetSource,source.getControllerId(),game) && filter.match(permanent);
  }
  return false;
}
