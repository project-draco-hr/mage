{
  super(ownerId,213,"Burnished Hart",Rarity.UNCOMMON,new CardType[]{CardType.ARTIFACT,CardType.CREATURE},"{3}");
  this.expansionSetCode="THS";
  this.subtype.add("Elk");
  this.power=new MageInt(2);
  this.toughness=new MageInt(2);
  Ability ability=new SimpleActivatedAbility(Zone.BATTLEFIELD,new SearchLibraryPutInPlayEffect(new TargetCardInLibrary(0,2,new FilterBasicLandCard()),true,true),new GenericManaCost(3));
  ability.addCost(new SacrificeSourceCost());
  this.addAbility(ability);
}
