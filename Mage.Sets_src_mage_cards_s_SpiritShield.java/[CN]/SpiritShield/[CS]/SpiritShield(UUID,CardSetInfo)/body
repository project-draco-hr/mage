{
  super(ownerId,setInfo,new CardType[]{CardType.ARTIFACT},"{3}");
  this.addAbility(new SkipUntapOptionalAbility());
  Ability ability=new SimpleActivatedAbility(Zone.BATTLEFIELD,new ConditionalContinuousEffect(new BoostTargetEffect(0,2,Duration.Custom),SourceTappedCondition.getInstance(),"target creature gets +0/+2 for as long as {this} remains tapped"),new ManaCostsImpl("{2}"));
  ability.addCost(new TapSourceCost());
  ability.addTarget(new TargetCreaturePermanent());
  this.addAbility(ability);
}
