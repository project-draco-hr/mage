{
  addCard(Zone.BATTLEFIELD,playerB,"Signal Pest",3);
  attack(2,playerB,"Signal Pest");
  attack(2,playerB,"Signal Pest");
  attack(2,playerB,"Signal Pest");
  setStopAt(2,PhaseStep.POSTCOMBAT_MAIN);
