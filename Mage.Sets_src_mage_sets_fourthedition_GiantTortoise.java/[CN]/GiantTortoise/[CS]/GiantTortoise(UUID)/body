{
  super(ownerId,76,"Giant Tortoise",Rarity.COMMON,new CardType[]{CardType.CREATURE},"{1}{U}");
  this.expansionSetCode="4ED";
  this.subtype.add("Turtle");
  this.color.setBlue(true);
  this.power=new MageInt(1);
  this.toughness=new MageInt(1);
  this.addAbility(new SimpleStaticAbility(Zone.BATTLEFIELD,new ConditionalContinousEffect(new BoostSourceEffect(0,3,Duration.WhileOnBattlefield),new InvertCondition(new SourceTappedCondition()),"{this} gets +0/+3 as long as it's untapped")));
}
