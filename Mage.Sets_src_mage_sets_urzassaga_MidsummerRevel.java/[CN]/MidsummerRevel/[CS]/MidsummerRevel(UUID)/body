{
  super(ownerId,268,"Midsummer Revel",Rarity.RARE,new CardType[]{CardType.ENCHANTMENT},"{3}{G}{G}");
  this.expansionSetCode="USG";
  this.addAbility(new BeginningOfUpkeepTriggeredAbility(Zone.BATTLEFIELD,new AddCountersSourceEffect(CounterType.VERSE.createInstance(),true),TargetController.YOU,true));
  Ability ability=new SimpleActivatedAbility(Zone.BATTLEFIELD,new CreateTokenEffect(new BeastToken(),new CountersCount(CounterType.VERSE)),new ManaCostsImpl("{G}"));
  ability.addCost(new SacrificeSourceCost());
  this.addAbility(ability);
}
