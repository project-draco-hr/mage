{
  if (count == 0) {
    count=1;
  }
  new Animation(600 / count){
    @Override protected void start(){
    }
    @Override protected void update(    float percentage){
      float alpha=1 - percentage;
      card.setAlpha(alpha);
      card.repaint();
    }
    @Override protected void end(){
      card.setAlpha(0f);
    }
  }
;
}
