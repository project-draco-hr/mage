{
  Player player=game.getPlayer(source.getFirstTarget());
  if (player != null) {
    int amount=player.getLife();
    if (amount < 0) {
      player.loseLife(-amount,game);
      return true;
    }
    if (amount > 0) {
      player.gainLife(amount,game);
      return true;
    }
  }
  return false;
}
