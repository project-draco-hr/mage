{
  Player player=game.getPlayer(source.getControllerId());
  if (player == null) {
    return false;
  }
  if (player.getLibrary().size() > 0) {
    Card card=player.getLibrary().getFromTop(game);
    Cards cards=new CardsImpl();
    cards.add(card);
    player.revealCards("Lost in the Woods",cards,game);
    if (card != null) {
      if (card.getName().equals("Forest")) {
        Permanent permanent=game.getPermanent(targetPointer.getFirst(source));
        if (permanent != null) {
          permanent.removeFromCombat(game);
        }
      }
      card.moveToZone(Constants.Zone.LIBRARY,source.getId(),game,false);
      return true;
    }
  }
  return false;
}
