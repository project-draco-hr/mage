{
  super(ownerId,23,"Opal Archangel",Rarity.RARE,new CardType[]{CardType.ENCHANTMENT},"{4}{W}");
  this.expansionSetCode="USG";
  TriggeredAbility ability=new SpellCastOpponentTriggeredAbility(new BecomesCreatureSourceEffect(new OpalArchangelToken(),"",Duration.WhileOnBattlefield,true,false),new FilterCreatureSpell(),false);
  this.addAbility(new ConditionalTriggeredAbility(ability,new SourceMatchesFilterCondition(new FilterEnchantmentPermanent()),"When an opponent casts a creature spell, if {this} is an enchantment, {this} becomes a 5/5 Angel creature with flying and vigilance."));
}
