{
  if (event.getType() == GameEvent.EventType.SPELL_CAST && event.getPlayerId() == controllerId) {
    Spell spell=(Spell)game.getObject(event.getTargetId());
    if (this.getSourceId().equals(spell.getSourceId())) {
      spellCount++;
      if (spellCount == 1) {
        condition=true;
      }
    }
  }
}
