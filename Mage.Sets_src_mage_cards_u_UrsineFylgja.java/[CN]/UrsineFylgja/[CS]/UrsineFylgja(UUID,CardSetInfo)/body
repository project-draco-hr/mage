{
  super(ownerId,setInfo,new CardType[]{CardType.CREATURE},"{4}{W}");
  this.subtype.add("Spirit");
  this.subtype.add("Bear");
  this.power=new MageInt(3);
  this.toughness=new MageInt(3);
  Effect effect=new AddCountersSourceEffect(CounterType.HEALING.createInstance(4));
  effect.setText("with four healing counters on it.");
  this.addAbility(new EntersBattlefieldAbility(effect));
  this.addAbility(new SimpleActivatedAbility(Zone.BATTLEFIELD,new PreventDamageToSourceEffect(Duration.EndOfTurn,1),new RemoveCountersSourceCost(CounterType.HEALING.createInstance(1))));
  this.addAbility(new SimpleActivatedAbility(Zone.BATTLEFIELD,new AddCountersSourceEffect(CounterType.HEALING.createInstance(1)),new ManaCostsImpl("{2}{W}")));
}
