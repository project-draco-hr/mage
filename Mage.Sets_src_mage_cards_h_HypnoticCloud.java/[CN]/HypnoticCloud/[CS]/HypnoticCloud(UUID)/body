{
  super(ownerId,109,"Hypnotic Cloud",Rarity.COMMON,new CardType[]{CardType.SORCERY},"{1}{B}");
  this.expansionSetCode="INV";
  this.addAbility(new KickerAbility("{4}"));
  this.getSpellAbility().addTarget(new TargetPlayer());
  this.getSpellAbility().addEffect(new ConditionalOneShotEffect(new DiscardTargetEffect(3),new DiscardTargetEffect(1),KickedCondition.getInstance(),"Target player discards a card. If {this} was kicked, that player discards three cards instead"));
}
