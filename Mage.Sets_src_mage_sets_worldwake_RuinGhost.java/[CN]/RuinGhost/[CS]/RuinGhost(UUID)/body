{
  super(ownerId,19,"Ruin Ghost",Rarity.UNCOMMON,new CardType[]{CardType.CREATURE},"{1}{W}");
  this.expansionSetCode="WWK";
  this.subtype.add("Spirit");
  this.color.setWhite(true);
  this.power=new MageInt(1);
  this.toughness=new MageInt(1);
  Ability ability=new SimpleActivatedAbility(Constants.Zone.BATTLEFIELD,new ExileTargetForSourceEffect("Exile Ruin Ghost"),new ManaCostsImpl("{W"));
  ability.addCost(new TapSourceCost());
  ability.addEffect(new ReturnToBattlefieldUnderYourControlTargetEffect());
  ability.addTarget(new TargetControlledPermanent(filter));
  this.addAbility(ability);
}
