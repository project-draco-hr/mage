{
  if (ability instanceof SpellAbility) {
    Player player=game.getPlayer(getControllerId());
    if (player != null) {
      resetConspire(ability,game);
      if (conspireCost.canPay(ability,getSourceId(),getControllerId(),game) && player.chooseUse(Outcome.Benefit,"Pay " + conspireCost.getText(false) + " ?",ability,game)) {
        activateConspire(ability,game);
        for (Iterator it=((Costs)conspireCost).iterator(); it.hasNext(); ) {
          Cost cost=(Cost)it.next();
          ability.getCosts().add(cost.copy());
        }
      }
    }
  }
}
