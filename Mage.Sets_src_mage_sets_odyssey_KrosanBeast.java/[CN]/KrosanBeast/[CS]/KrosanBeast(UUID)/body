{
  super(ownerId,248,"Krosan Beast",Rarity.RARE,new CardType[]{CardType.CREATURE},"{3}{G}");
  this.expansionSetCode="ODY";
  this.subtype.add("Squirrel");
  this.subtype.add("Beast");
  this.color.setGreen(true);
  this.power=new MageInt(1);
  this.toughness=new MageInt(1);
  Ability thresholdAbility=new SimpleStaticAbility(Zone.BATTLEFIELD,new ConditionalContinuousEffect(new BoostSourceEffect(7,7,Duration.WhileOnBattlefield),new CardsInControllerGraveCondition(7),"<i>Threshold</i> - {this} gets +7/+7 as long as seven or more cards are in your graveyard"));
  this.addAbility(thresholdAbility);
}
