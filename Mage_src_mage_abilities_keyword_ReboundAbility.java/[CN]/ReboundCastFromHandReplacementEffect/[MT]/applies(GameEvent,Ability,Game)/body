{
  if (((ZoneChangeEvent)event).getFromZone() == Zone.STACK && ((ZoneChangeEvent)event).getToZone() == Zone.GRAVEYARD && event.getSourceId() == source.getSourceId()) {
    Spell spell=game.getStack().getSpell(event.getTargetId());
    if (spell != null && spell.getFromZone().equals(Zone.HAND)) {
      return true;
    }
  }
  return false;
}
