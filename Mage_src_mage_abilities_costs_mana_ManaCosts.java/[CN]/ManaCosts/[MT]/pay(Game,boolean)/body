{
  if (this.size() == 0 || noMana) {
    setPaid();
    return true;
  }
  Player player=game.getPlayer(this.getAbility().getControllerId());
  assignPayment(player.getManaPool());
  while (!isPaid()) {
    if (player.playMana(this.getUnpaid(),game))     assignPayment(player.getManaPool());
 else     return false;
  }
  for (  ManaCost cost : this.getUnpaidVariableCosts()) {
    VariableManaCost vCost=(VariableManaCost)cost;
    while (!vCost.isPaid()) {
      if (player.playXMana(vCost,game))       vCost.assignPayment(player.getManaPool());
 else       return false;
    }
  }
  return true;
}
