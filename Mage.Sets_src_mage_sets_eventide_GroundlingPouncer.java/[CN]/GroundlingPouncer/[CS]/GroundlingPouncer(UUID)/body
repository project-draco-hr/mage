{
  super(ownerId,154,"Groundling Pouncer",Rarity.UNCOMMON,new CardType[]{CardType.CREATURE},"{1}{G/U}");
  this.expansionSetCode="EVE";
  this.subtype.add("Faerie");
  this.power=new MageInt(2);
  this.toughness=new MageInt(1);
  Ability ability=new GroundlingPouncerAbility(Zone.BATTLEFIELD,new BoostSourceEffect(1,3,Duration.EndOfTurn),new ManaCostsImpl("{G/U}"),new OpponentControlsPermanentCondition(filter),"{G/U}: {this} gets +1/+3 and gains flying until end of turn. Activate this ability only once each turn and only if an opponent controls a creature with flying.");
  ability.addEffect(new GainAbilitySourceEffect(FlyingAbility.getInstance(),Duration.EndOfTurn,false,true));
  this.addAbility(ability);
}
