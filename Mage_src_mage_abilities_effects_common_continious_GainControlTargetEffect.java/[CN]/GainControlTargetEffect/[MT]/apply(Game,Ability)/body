{
  Permanent permanent=game.getPermanent(targetPointer.getFirst(game,source));
  if (permanent != null) {
    if (fixedController) {
      return permanent.changeControllerId(fixedControllerId,game);
    }
 else {
      return permanent.changeControllerId(source.getControllerId(),game);
    }
  }
  return false;
}
