{
  super(ownerId,1,"Angel of the Dire Hour",Rarity.RARE,new CardType[]{CardType.CREATURE},"{5}{W}{W}");
  this.expansionSetCode="C14";
  this.subtype.add("Angel");
  this.color.setWhite(true);
  this.power=new MageInt(5);
  this.toughness=new MageInt(4);
  this.addAbility(FlashAbility.getInstance());
  this.addAbility(FlyingAbility.getInstance());
  Ability ability=new EntersBattlefieldTriggeredAbility(new ConditionalOneShotEffect(new ExileAllEffect(new FilterAttackingCreature("attacking creatures")),new CastFromHandCondition()," if you cast it from your hand, exile all attacking creatures"));
  this.addAbility(ability,new CastFromHandWatcher());
}
