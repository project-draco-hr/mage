  this.toughness=new MageInt(1);
  this.addAbility(HasteAbility.getInstance());
  this.addAbility(new SimpleActivatedAbility(Zone.BATTLEFIELD,new BoostSourceEffect(1,0,Duration.EndOfTurn),new ManaCostsImpl("{R}")));
}
