{
  super(ownerId,322,"Nomad Stadium",Rarity.UNCOMMON,new CardType[]{CardType.LAND},"");
  this.expansionSetCode="ODY";
  Ability manaAbility=new WhiteManaAbility();
  manaAbility.addEffect(new DamageControllerEffect(1));
  this.addAbility(manaAbility);
  Ability thresholdAbility=new ConditionalGainActivatedAbility(Zone.BATTLEFIELD,new GainLifeEffect(4),new ManaCostsImpl("{W}"),new CardsInControllerGraveCondition(7),"<i>Threshold</i> - {W}, {T}, Sacrifice {this}: You gain 4 life. Activate this ability only if seven or more cards are in your graveyard.");
  thresholdAbility.addCost(new TapSourceCost());
  thresholdAbility.addCost(new SacrificeSourceCost());
  this.addAbility(thresholdAbility);
}
