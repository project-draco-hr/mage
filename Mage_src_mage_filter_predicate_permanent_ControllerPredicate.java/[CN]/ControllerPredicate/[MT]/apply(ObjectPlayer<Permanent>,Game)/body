{
  Permanent permanent=input.getObject();
  UUID playerId=input.getPlayerId();
switch (controller) {
case YOU:
    if (permanent.getControllerId().equals(playerId)) {
      return true;
    }
  break;
case OPPONENT:
if (game.getOpponents(playerId).contains(permanent.getControllerId())) {
  return true;
}
break;
case NOT_YOU:
if (!permanent.getControllerId().equals(playerId)) {
return true;
}
break;
}
return false;
}
