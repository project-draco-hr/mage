{
  Controllable object=input.getObject();
  UUID playerId=input.getPlayerId();
switch (controller) {
case YOU:
    if (object.getControllerId().equals(playerId)) {
      return true;
    }
  break;
case OPPONENT:
if (game.getOpponents(playerId).contains(object.getControllerId())) {
  return true;
}
break;
case NOT_YOU:
if (!object.getControllerId().equals(playerId)) {
return true;
}
break;
}
return false;
}
