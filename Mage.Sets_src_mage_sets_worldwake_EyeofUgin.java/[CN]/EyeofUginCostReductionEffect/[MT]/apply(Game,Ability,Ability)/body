{
  SpellAbility spellAbility=(SpellAbility)abilityToModify;
  int previousCost=spellAbility.getManaCostsToPay().convertedManaCost();
  int adjustedCost=0;
  if ((previousCost - 2) > 0) {
    adjustedCost=previousCost - 2;
  }
  spellAbility.getManaCostsToPay().load("{" + adjustedCost + "}");
  return true;
}
