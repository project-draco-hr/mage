{
  try {
    cards.clear();
    for (    Card card : allCards) {
      if (filter.match(card))       cards.add(card);
    }
    setCursor(new Cursor(Cursor.WAIT_CURSOR));
    this.cardGrid.loadCards(new CardsView(cards),bigCard,null);
  }
  finally {
    setCursor(new Cursor(Cursor.DEFAULT_CURSOR));
  }
}
