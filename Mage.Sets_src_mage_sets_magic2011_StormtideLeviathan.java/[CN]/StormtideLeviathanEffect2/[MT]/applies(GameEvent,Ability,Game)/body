{
  if (event.getType() == EventType.DECLARE_ATTACKER) {
    Permanent permanent=game.getPermanent(event.getSourceId());
    if (permanent != null) {
      Player player=game.getPlayer(source.getControllerId());
      if (player.getInRange().contains(permanent.getControllerId())) {
        if (!permanent.getAbilities().contains(FlyingAbility.getInstance()) && !permanent.getAbilities().contains(IslandwalkAbility.getInstance()))         return true;
      }
    }
  }
  return false;
}
