{
  for (  UUID playerId : game.getPlayerList()) {
    Player player=game.getPlayer(playerId);
    if (player != null) {
      for (int i=0; i < 3; i++) {
        Card card=player.getHand().getRandom(game);
        if (card != null) {
          player.discard(card,source,game);
        }
      }
    }
  }
  return true;
}
