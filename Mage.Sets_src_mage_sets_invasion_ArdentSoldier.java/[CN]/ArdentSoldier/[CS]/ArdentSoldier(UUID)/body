{
  super(ownerId,3,"Ardent Soldier",Rarity.COMMON,new CardType[]{CardType.CREATURE},"{1}{W}");
  this.expansionSetCode="INV";
  this.subtype.add("Human");
  this.subtype.add("Soldier");
  this.power=new MageInt(1);
  this.toughness=new MageInt(2);
  this.addAbility(new KickerAbility("{2}"));
  this.addAbility(VigilanceAbility.getInstance());
  this.addAbility(new EntersBattlefieldAbility(new AddCountersSourceEffect(CounterType.P1P1.createInstance(1)),KickedCondition.getInstance(),true,"If {this} was kicked, it enters the battlefield with a +1/+1 counter on it.",""));
}
