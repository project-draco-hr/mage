{
  if (event.getType() == EventType.TARGETED && event.getTargetId().equals(sourceId)) {
    if (game.getCard(event.getSourceId()).getCardType().contains(CardType.SORCERY) || game.getCard(event.getSourceId()).getCardType().contains(CardType.INSTANT)) {
      return true;
    }
  }
  return false;
}
