{
  StringBuilder sb=new StringBuilder("cast {this} only during ");
  if (turnPhase != null) {
    sb.append(turnPhase.toString());
  }
  if (phaseStep != null) {
    sb.append("the ").append(phaseStep.getStepText());
  }
  if (condition != null) {
    sb.append(" ").append(condition.toString());
  }
  return sb.toString();
}
