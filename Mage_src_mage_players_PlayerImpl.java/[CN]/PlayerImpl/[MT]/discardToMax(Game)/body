{
  if (hand.size() > this.maxHandSize) {
    if (!game.isSimulation())     game.informPlayers(new StringBuilder(getName()).append(" discards down to ").append(this.maxHandSize).append(this.maxHandSize == 1 ? " hand card" : " hand cards").toString());
    discard(hand.size() - this.maxHandSize,null,game);
  }
}
