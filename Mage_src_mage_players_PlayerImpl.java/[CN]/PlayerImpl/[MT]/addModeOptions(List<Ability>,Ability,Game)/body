{
  for (  Mode mode : option.getModes().values()) {
    Ability newOption=option.copy();
    newOption.getModes().setMode(mode);
    if (option.getTargets().getUnchosen().size() > 0)     addTargetOptions(options,option,0,game);
 else     if (option.getChoices().getUnchosen().size() > 0)     addChoiceOptions(options,option,0,game);
 else     if (option.getCosts().getTargets().getUnchosen().size() > 0)     addCostTargetOptions(options,option,0,game);
 else     options.add(newOption);
  }
}
