{
  if (ability == null || conditionalMana.size() == 0) {
    return 0;
  }
  boolean hasBlack=false;
  for (  ConditionalMana mana : conditionalMana) {
    if (mana.getBlack() > 0) {
      hasBlack=true;
      break;
    }
  }
  if (!hasBlack)   return 0;
  for (  ConditionalMana mana : conditionalMana) {
    if (mana.getBlack() > 0 && mana.apply(ability,game)) {
      return mana.getBlack();
    }
  }
  return 0;
}
