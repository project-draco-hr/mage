{
  if (ability == null || conditionalMana.size() == 0) {
    return 0;
  }
  boolean hasBlue=false;
  for (  ConditionalMana mana : conditionalMana) {
    if (mana.getBlue() > 0) {
      hasBlue=true;
      break;
    }
  }
  if (!hasBlue)   return 0;
  for (  ConditionalMana mana : conditionalMana) {
    if (mana.getBlue() > 0 && mana.apply(ability,game)) {
      return mana.getBlue();
    }
  }
  return 0;
}
