{
  if (ability == null || conditionalMana.size() == 0) {
    return 0;
  }
  boolean hasRed=false;
  for (  ConditionalMana mana : conditionalMana) {
    if (mana.getRed() > 0) {
      hasRed=true;
      break;
    }
  }
  if (!hasRed)   return 0;
  for (  ConditionalMana mana : conditionalMana) {
    if (mana.getRed() > 0 && mana.apply(ability,game)) {
      return mana.getRed();
    }
  }
  return 0;
}
