{
  int total=count();
  black=0;
  blue=0;
  white=0;
  red=0;
  green=0;
  colorless=0;
  Iterator<ConditionalMana> it=conditionalMana.iterator();
  while (it.hasNext()) {
    ConditionalMana mana=it.next();
    if (mana.apply(ability,game)) {
      total+=mana.count();
      it.remove();
    }
  }
  return total;
}
