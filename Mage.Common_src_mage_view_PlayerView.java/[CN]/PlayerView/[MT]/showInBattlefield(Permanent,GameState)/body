{
  if (permanent.getAttachedTo() == null)   return permanent.getControllerId().equals(playerId);
 else {
    Permanent attachedTo=state.getPermanent(permanent.getAttachedTo());
    if (attachedTo != null)     return attachedTo.getControllerId().equals(playerId);
 else     return permanent.getControllerId().equals(playerId);
  }
}
