{
  if (event.getType() == GameEvent.EventType.LOST_CONTROL) {
    if (event.getTargetId().equals(source.getSourceId())) {
      this.used=true;
      return false;
    }
  }
  if (event.getType() == GameEvent.EventType.ENTERS_THE_BATTLEFIELD && event.getTargetId().equals(source.getSourceId())) {
    this.used=true;
    return false;
  }
  return event.getType().equals(GameEvent.EventType.DESTROY_PERMANENT) && this.targetPointer.getTargets(game,source).contains(event.getTargetId());
}
