{
  Permanent perm=game.getPermanent(source.getSourceId());
  if (perm != null) {
switch (layer) {
case RulesEffects:
      if (perm.getMaxBlocks() > 0) {
        perm.setMaxBlocks(perm.getMaxBlocks() + amount);
      }
 else {
        perm.setMaxBlocks(0);
      }
    break;
}
return true;
}
return false;
}
