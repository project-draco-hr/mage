{
  super(ownerId,269,"Howltooth Hollow",Rarity.RARE,new CardType[]{CardType.LAND},"");
  this.expansionSetCode="LRW";
  this.addAbility(new HideawayAbility());
  this.addAbility(new BlackManaAbility());
