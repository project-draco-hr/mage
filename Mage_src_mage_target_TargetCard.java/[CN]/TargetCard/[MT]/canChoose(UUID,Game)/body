{
  for (  Player player : game.getPlayers().values()) {
    if (filter.matchOwner(player.getId())) {
switch (zone) {
case HAND:
        if (player.getHand().getCards(filter).size() > this.minNumberOfTargets)         return true;
      break;
case GRAVEYARD:
    if (player.getGraveyard().getCards(filter).size() > this.minNumberOfTargets)     return true;
  break;
}
}
}
return false;
}
