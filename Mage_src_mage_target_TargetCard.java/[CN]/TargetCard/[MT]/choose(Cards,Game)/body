{
  Player player=game.getPlayer(this.source.getControllerId());
  while (!isChosen() && !doneChosing()) {
    chosen=targets.size() >= minNumberOfTargets;
    if (!player.chooseTarget(cards,this,game)) {
      return chosen;
    }
    chosen=targets.size() >= minNumberOfTargets;
  }
  while (!doneChosing()) {
    if (!player.chooseTarget(cards,this,game)) {
      break;
    }
  }
  return chosen=true;
}
