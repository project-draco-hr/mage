{
  super(ownerId,50,"Chilling Grasp",Rarity.UNCOMMON,new CardType[]{CardType.INSTANT},"{2}{U}");
  this.expansionSetCode="EMN";
  this.getSpellAbility().addEffect(new TapTargetEffect());
