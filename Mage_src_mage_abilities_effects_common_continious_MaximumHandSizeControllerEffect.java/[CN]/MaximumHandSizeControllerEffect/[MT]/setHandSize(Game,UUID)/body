{
  Player player=game.getPlayer(playerId);
  if (player != null) {
switch (handSizeModification) {
case SET:
      player.setMaxHandSize(handSize);
    break;
case INCREASE:
  player.setMaxHandSize(player.getMaxHandSize() + handSize);
break;
case REDUCE:
player.setMaxHandSize(player.getMaxHandSize() - handSize);
break;
}
}
}
