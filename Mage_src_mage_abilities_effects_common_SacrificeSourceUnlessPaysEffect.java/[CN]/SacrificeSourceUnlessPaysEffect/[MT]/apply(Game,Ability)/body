{
  Player player=game.getPlayer(source.getControllerId());
  if (player != null && player.chooseUse(Outcome.Benefit,cost.getText() + " or sacrifice {this}?",game)) {
    cost.clearPaid();
    if (cost.pay(game,source.getId(),source.getControllerId(),false))     return true;
  }
  Permanent permanent=game.getPermanent(source.getSourceId());
  if (permanent != null)   permanent.sacrifice(source.getSourceId(),game);
  return true;
}
