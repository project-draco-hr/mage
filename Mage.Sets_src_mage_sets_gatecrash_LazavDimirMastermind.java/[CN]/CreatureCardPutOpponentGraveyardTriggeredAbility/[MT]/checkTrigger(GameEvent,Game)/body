{
  if (event.getType() == EventType.ZONE_CHANGE && ((ZoneChangeEvent)event).getToZone() == Zone.GRAVEYARD) {
    MageObject object=game.getLastKnownInformation(event.getTargetId(),Zone.BATTLEFIELD);
    if (object == null) {
      return false;
    }
    if (game.getOpponents(controllerId).contains(event.getPlayerId()) && object.getCardType().contains(CardType.CREATURE) && (!(object instanceof PermanentToken))) {
      for (      Effect effect : this.getEffects()) {
        effect.setTargetPointer(new FixedTarget(object.getId()));
      }
      return true;
    }
  }
  return false;
}
