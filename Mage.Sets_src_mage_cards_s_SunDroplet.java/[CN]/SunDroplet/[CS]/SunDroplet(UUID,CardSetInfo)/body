{
  super(ownerId,setInfo,new CardType[]{CardType.ARTIFACT},"{2}");
  this.addAbility(new SunDropletTriggeredAbility());
  Effect effect=new DoIfCostPaid(new GainLifeEffect(1),new RemoveCountersSourceCost(CounterType.CHARGE.createInstance(1)));
  this.addAbility(new ConditionalTriggeredAbility(new BeginningOfUpkeepTriggeredAbility(effect,TargetController.ANY,false),new SourceHasCounterCondition(CounterType.CHARGE,1),"At the beginning of each upkeep, you may remove a charge counter from Sun Droplet. If you do, you gain 1 life"));
}
