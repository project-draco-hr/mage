    @Override public void actionPerformed(    ActionEvent e){
      small3x3.setSelected(false);
      mageBook.updateSize(MageBook.LAYOUT_4x4);
      MageFrame.getPreferences().put(LAYOYT_CONFIG_KEY,MageBook.LAYOUT_4x4);
    }
  }
);
