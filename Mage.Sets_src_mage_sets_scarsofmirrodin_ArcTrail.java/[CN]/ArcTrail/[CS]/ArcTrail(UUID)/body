{
  super(ownerId,81,"Arc Trail",Rarity.UNCOMMON,new CardType[]{CardType.SORCERY},"{1}{R}");
  this.expansionSetCode="SOM";
  this.color.setRed(true);
  Target target=new TargetCreatureOrPlayer(2);
