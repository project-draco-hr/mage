{
  MageObject mageObject=game.getObject(source.getSourceId());
  if (mageObject != null) {
    if (mageObject instanceof Permanent) {
      return ((Permanent)mageObject).isFaceDown();
    }
    if (mageObject instanceof Card) {
      return ((Card)mageObject).isFaceDown();
    }
  }
  return false;
}
