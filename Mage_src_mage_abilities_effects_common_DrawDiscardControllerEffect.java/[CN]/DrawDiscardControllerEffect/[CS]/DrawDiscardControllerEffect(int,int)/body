{
  super(Outcome.DrawCard);
  this.cardsToDraw=cardsToDraw;
  this.cardsToDiscard=cardsToDiscard;
  staticText=new StringBuilder("Draw ").append(cardsToDraw == 1 ? "a" : CardUtil.numberToText(cardsToDraw)).append(" card").append(cardsToDraw == 1 ? " " : "s").append(", then discard ").append(cardsToDiscard == 1 ? "a" : CardUtil.numberToText(cardsToDiscard)).append(" card").append(cardsToDiscard == 1 ? "" : "s").toString();
}
