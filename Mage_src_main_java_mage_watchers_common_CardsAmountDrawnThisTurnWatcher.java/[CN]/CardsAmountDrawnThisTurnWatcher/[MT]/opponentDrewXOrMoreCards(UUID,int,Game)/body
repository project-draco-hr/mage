{
  Player player=game.getPlayer(playerId);
  if (player != null) {
    for (    Map.Entry<UUID,Integer> entry : amountOfCardsDrawnThisTurn.entrySet()) {
      if (game.isOpponent(player,entry.getKey())) {
        if (entry.getValue() >= x) {
          return true;
        }
      }
    }
  }
  return false;
}
