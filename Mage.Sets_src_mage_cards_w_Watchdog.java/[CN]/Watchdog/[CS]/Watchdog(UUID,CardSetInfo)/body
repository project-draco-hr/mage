{
  super(ownerId,setInfo,new CardType[]{CardType.ARTIFACT,CardType.CREATURE},"{3}");
  this.subtype.add("Hound");
  this.power=new MageInt(1);
  this.toughness=new MageInt(2);
  this.getAbilities().add(new SimpleStaticAbility(Zone.BATTLEFIELD,new BlocksIfAbleSourceEffect(Duration.WhileOnBattlefield)));
  this.addAbility(new SimpleStaticAbility(Zone.BATTLEFIELD,new ConditionalContinuousEffect(new BoostAllEffect(-1,0,Duration.WhileOnBattlefield,new WatchdogFilter(),false),new InvertCondition(new SourceTappedCondition()),"As long as {this} is untapped, all creatures attacking you get -1/-0")));
}
