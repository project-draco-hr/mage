{
  super(ownerId,setInfo,new CardType[]{CardType.CREATURE},"{4}{R}{R}");
  this.subtype.add("Imp");
  this.power=new MageInt(6);
  this.toughness=new MageInt(5);
  this.addAbility(FlyingAbility.getInstance());
  this.addAbility(new UnleashAbility());
  this.addAbility(new SimpleStaticAbility(Zone.BATTLEFIELD,new ConditionalContinuousEffect(new GainAbilitySourceEffect(TrampleAbility.getInstance()),new SourceHasCounterCondition(CounterType.P1P1),"{this} has trample as long as it has a +1/+1 counter on it")));
}
