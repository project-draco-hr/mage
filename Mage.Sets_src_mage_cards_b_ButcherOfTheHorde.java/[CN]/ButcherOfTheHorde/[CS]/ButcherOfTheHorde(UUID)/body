{
  super(ownerId,168,"Butcher of the Horde",Rarity.RARE,new CardType[]{CardType.CREATURE},"{1}{R}{W}{B}");
  this.expansionSetCode="KTK";
  this.subtype.add("Demon");
  this.power=new MageInt(5);
  this.toughness=new MageInt(4);
  this.addAbility(FlyingAbility.getInstance());
  this.addAbility(new SimpleActivatedAbility(Zone.BATTLEFIELD,new ButcherOfTheHordeEffect(),new SacrificeTargetCost(new TargetControlledCreaturePermanent(1,1,filter,false))));
}
