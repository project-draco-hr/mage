{
  if (getColor().isBlack()) {
    mana.increaseBlack();
  }
 else   if (getColor().isBlue()) {
    mana.increaseBlue();
  }
 else   if (getColor().isRed()) {
    mana.increaseRed();
  }
 else   if (getColor().isGreen()) {
    mana.increaseGreen();
  }
 else   if (getColor().isWhite()) {
    mana.increaseWhite();
  }
}
