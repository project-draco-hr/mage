{
  Spell object=game.getStack().getSpell(targetPointer.getFirst(game,source));
  if (object != null) {
    Permanent permanent=game.getPermanent(object.getSourceId());
    if (permanent != null) {
      permanent.addAbility(ability,game);
      return true;
    }
  }
 else {
    used=true;
  }
  return false;
}
