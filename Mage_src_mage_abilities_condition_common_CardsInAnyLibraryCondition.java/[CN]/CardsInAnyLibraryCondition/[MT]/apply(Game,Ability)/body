{
  Player controller=game.getPlayer(source.getControllerId());
  if (controller != null) {
    for (    UUID playerId : controller.getInRange()) {
      Player player=game.getPlayer(playerId);
      if (player != null) {
switch (type) {
case GreaterThan:
          if (player.getLibrary().size() > value) {
            return true;
          }
        break;
case Equal:
      if (player.getLibrary().size() == value) {
        return true;
      }
    break;
case LessThan:
  if (player.getLibrary().size() < value) {
    return true;
  }
break;
}
}
}
}
return false;
}
