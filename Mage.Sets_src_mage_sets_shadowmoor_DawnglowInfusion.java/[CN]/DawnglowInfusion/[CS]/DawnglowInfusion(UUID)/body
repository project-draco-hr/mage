{
  super(ownerId,225,"Dawnglow Infusion",Rarity.UNCOMMON,new CardType[]{CardType.SORCERY},"{X}{G/W}");
  this.expansionSetCode="SHM";
  this.color.setGreen(true);
  this.color.setWhite(true);
  DynamicValue xValue=new ManacostVariableValue();
  this.getSpellAbility().addEffect(new ConditionalOneShotEffect(new GainLifeEffect(xValue),new ManaWasSpentCondition(Constants.ManaType.GREEN),"You gain X life if {G} was spent to cast {this}"));
  this.getSpellAbility().addEffect(new ConditionalOneShotEffect(new GainLifeEffect(xValue),new ManaWasSpentCondition(Constants.ManaType.WHITE)," And X life if {W} was spent to cast it"));
  this.addInfo("Info1","<i>(Do both if {G}{W} was spent.)</i>");
}
