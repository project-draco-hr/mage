{
  super(ownerId,110,"Necromantic Summons",Rarity.UNCOMMON,new CardType[]{CardType.SORCERY},"{4}{B}");
  this.expansionSetCode="ORI";
  this.getSpellAbility().addEffect(new ReturnFromGraveyardToBattlefieldTargetEffect());
  this.getSpellAbility().addTarget(new TargetCardInGraveyard(new FilterCreatureCard("creature card from a graveyard")));
  Effect effect=new ConditionalOneShotEffect(new NecromanticSummoningEffect(),SpellMasteryCondition.getInstance(),"<br><i>Spell mastery</i> - If there are two or more instant and/or sorcery cards in your graveyard, add {B}{B}{B} to your mana pool");
  this.getSpellAbility().addEffect(effect);
}
