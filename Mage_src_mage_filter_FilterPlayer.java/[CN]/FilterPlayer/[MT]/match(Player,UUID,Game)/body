{
  if (!this.match(player))   return notFilter;
  if (playerTarget != TargetController.ANY && playerId != null) {
switch (playerTarget) {
case YOU:
      if (!player.getId().equals(playerId))       return notFilter;
    break;
case OPPONENT:
  if (!game.getOpponents(playerId).contains(player.getId()))   return notFilter;
break;
case NOT_YOU:
if (player.getId().equals(playerId)) return notFilter;
break;
}
}
return !notFilter;
}
