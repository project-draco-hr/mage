{
  super(ownerId,13,"Haunting Misery",Rarity.COMMON,new CardType[]{CardType.SORCERY},"{1}{B}{B}");
  this.expansionSetCode="WTH";
  this.getSpellAbility().addCost(new ExileXFromYourGraveCost(new FilterCreatureCard()));
