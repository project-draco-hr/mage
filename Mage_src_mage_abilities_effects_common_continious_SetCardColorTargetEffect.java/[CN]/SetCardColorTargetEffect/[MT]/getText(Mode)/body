{
  if (staticText != null) {
    return staticText;
  }
  StringBuilder sb=new StringBuilder();
  sb.append("Target ").append(mode.getTargets().get(0).getTargetName());
  sb.append(" becomes ");
  if (setColor == null) {
    sb.append("the color of your choice");
  }
 else {
    sb.append(setColor.getDescription());
  }
  sb.append(" ").append(duration.toString());
  return sb.toString();
}
