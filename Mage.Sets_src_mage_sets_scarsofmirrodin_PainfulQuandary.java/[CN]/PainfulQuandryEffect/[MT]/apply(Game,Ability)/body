{
  Player player=game.getPlayer(targetPointer.getFirst(game,source));
  if (player != null) {
    boolean paid=false;
    Cost cost=new DiscardTargetCost(new TargetCardInHand());
    if (cost.canPay(source,source.getSourceId(),player.getId(),game) && player.chooseUse(Outcome.Detriment,"Discard a card (otherwise you lose 5 life)?",game)) {
      paid=cost.pay(source,game,source.getSourceId(),player.getId(),false);
    }
    if (!paid) {
      player.loseLife(5,game);
    }
    return true;
  }
  return false;
}
