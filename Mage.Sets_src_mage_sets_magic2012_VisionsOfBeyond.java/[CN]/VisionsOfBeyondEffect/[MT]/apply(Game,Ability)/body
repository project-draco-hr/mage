{
  Player sourcePlayer=game.getPlayer(source.getControllerId());
  int count=1;
  for (  UUID playerId : sourcePlayer.getInRange()) {
    Player player=game.getPlayer(playerId);
    if (player != null) {
      if (player.getGraveyard().size() >= 20) {
        count=3;
        break;
      }
    }
  }
  sourcePlayer.drawCards(count,game);
  return true;
}
