{
  for (  TournamentPlayer player : players.values()) {
    player.setConstructing();
    player.getPlayer().construct(this,player.getDeck());
  }
synchronized (this) {
    while (!isDoneConstructing()) {
      try {
        this.wait();
      }
 catch (      InterruptedException ex) {
      }
    }
  }
  nextStep();
}
