{
  for (  TournamentPairing pair : round.getPairs()) {
    playMatch(pair);
  }
  while (!round.isRoundOver()) {
    try {
      Thread.sleep(1000);
    }
 catch (    InterruptedException ex) {
      Logger.getLogger(TournamentImpl.class.getName()).log(Level.SEVERE,null,ex);
      break;
    }
  }
  updateResults();
}
