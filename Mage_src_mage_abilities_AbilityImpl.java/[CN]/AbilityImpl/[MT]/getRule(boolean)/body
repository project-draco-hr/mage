{
  StringBuilder sbRule=new StringBuilder();
  if (all || this.abilityType != AbilityType.SPELL) {
    if (manaCosts.size() > 0) {
      sbRule.append(manaCosts.getText());
    }
    if (costs.size() > 0) {
      if (sbRule.length() > 0) {
        sbRule.append(",");
      }
      sbRule.append(costs.getText());
    }
    if (sbRule.length() > 0) {
      sbRule.append(": ");
    }
  }
  sbRule.append(modes.getText());
  return sbRule.toString();
}
