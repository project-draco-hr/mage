{
  super(ownerId,118,"Wild Slash",Rarity.UNCOMMON,new CardType[]{CardType.INSTANT},"{R}");
  this.expansionSetCode="FRF";
  ContinuousRuleModifiyingEffect effect=new DamageCantBePreventedEffect();
  effect.setText("<i>Ferocious</i> &mdash; If you control a creature with power 4 or greater, damage can't be prevented this turn");
  this.addAbility(new SimpleStaticAbility(Zone.ALL,new ConditionalContinuousRuleModifyingEffect(effect,FerociousCondition.getInstance())));
  this.getSpellAbility().addEffect(new DamageTargetEffect(2));
  this.getSpellAbility().addTarget(new TargetCreatureOrPlayer());
}
