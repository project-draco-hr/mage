{
  if (step == null) {
    logger.warn("step is null");
    return;
  }
  if (prevStep != null && prevBGColor != null) {
    prevStep.setBackground(prevBGColor);
    prevStep.setForeground(DEFAULT_FOREGROUND_COLOR);
  }
switch (step) {
case UNTAP:
    updateButton("Untap");
  break;
case UPKEEP:
updateButton("Upkeep");
break;
case DRAW:
updateButton("Draw");
break;
case PRECOMBAT_MAIN:
updateButton("Main1");
break;
case BEGIN_COMBAT:
updateButton("Combat_Start");
break;
case DECLARE_ATTACKERS:
updateButton("Combat_Attack");
break;
case DECLARE_BLOCKERS:
updateButton("Combat_Block");
break;
case FIRST_COMBAT_DAMAGE:
case COMBAT_DAMAGE:
updateButton("Combat_Damage");
break;
case POSTCOMBAT_MAIN:
updateButton("Main2");
break;
case END_TURN:
updateButton("Cleanup");
break;
}
}
