{
  if (step == null) {
    logger.warn("step is null");
    return;
  }
  if (prevStep != null && prevBGColor != null) {
    prevStep.setBackground(prevBGColor);
    prevStep.setForeground(DEFAULT_FOREGROUND_COLOR);
  }
switch (step) {
case UNTAP:
    updateButton(untap);
  break;
case UPKEEP:
updateButton(upkeep);
break;
case DRAW:
updateButton(draw);
break;
case PRECOMBAT_MAIN:
updateButton(main1);
break;
case BEGIN_COMBAT:
case DECLARE_ATTACKERS:
updateButton(attack);
break;
case DECLARE_BLOCKERS:
updateButton(block);
break;
case FIRST_COMBAT_DAMAGE:
case COMBAT_DAMAGE:
updateButton(combatButton);
break;
case POSTCOMBAT_MAIN:
updateButton(main2);
break;
case END_TURN:
updateButton(endOfTurn);
break;
}
}
