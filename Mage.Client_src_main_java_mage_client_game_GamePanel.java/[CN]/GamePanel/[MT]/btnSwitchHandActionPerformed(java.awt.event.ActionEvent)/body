{
  String[] choices=handCards.keySet().toArray(new String[0]);
  String chosenHandKey=(String)JOptionPane.showInputDialog(this,"Choose hand to display:","Switch between hands",JOptionPane.PLAIN_MESSAGE,null,choices,YOUR_HAND);
  if (chosenHandKey != null && chosenHandKey.length() > 0) {
    chosenHandKey=chosenHandKey;
    CardsView cards=handCards.get(chosenHandKey);
    this.hand.loadCards(cards,bigCard,gameId);
    hand.setPreferredSize(new java.awt.Dimension((getHandCardDimension().width + 5) * cards.size() + 5,getHandCardDimension().height + 20));
  }
}
