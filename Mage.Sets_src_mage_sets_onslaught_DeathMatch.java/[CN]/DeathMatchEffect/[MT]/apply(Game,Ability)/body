{
  Player player=game.getPlayer(source.getTargets().get(0).getTargetController());
  if (player != null) {
    if (player.chooseUse(outcome,"Give targeted creature -3/-3 ?",game)) {
      game.addEffect(new BoostTargetEffect(-3,-3,Duration.EndOfTurn),source);
    }
    return true;
  }
  return false;
}
