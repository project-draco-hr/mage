{
  Spell spell=game.getStack().getSpell(getTargetPointer().getFirst(game,source));
  if (spell != null) {
    game.getStack().counter(getTargetPointer().getFirst(game,source),source.getSourceId(),game);
    int mana=spell.getConvertedManaCost();
    AtTheBeginOMainPhaseDelayedTriggeredAbility delayedAbility=new AtTheBeginOMainPhaseDelayedTriggeredAbility(new PlasmCaptureManaEffect(mana),false,TargetController.YOU,PhaseSelection.NEXT_PRECOMBAT_MAIN);
    delayedAbility.setSourceId(source.getSourceId());
    delayedAbility.setControllerId(source.getControllerId());
    delayedAbility.setSourceObject(source.getSourceObject(game));
    game.addDelayedTriggeredAbility(delayedAbility);
    return true;
  }
  return false;
}
