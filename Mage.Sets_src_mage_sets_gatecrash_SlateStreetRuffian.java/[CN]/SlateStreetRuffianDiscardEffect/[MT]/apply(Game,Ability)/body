{
  Permanent blockingCreature=game.getPermanent(getTargetPointer().getFirst(game,source));
  if (blockingCreature != null) {
    Player opponent=game.getPlayer(blockingCreature.getControllerId());
    if (opponent != null) {
      opponent.discard(1,source,game);
      return true;
    }
  }
  return false;
}
