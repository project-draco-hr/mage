{
  callback.clear();
  lock.lock();
  try {
    waitingForCallback=true;
    waiting.signal();
    while (callback.getMethod() == null) {
      logger.finer("waiting for callback");
      callbackCalled.await();
    }
    waitingForCallback=false;
    logger.finer("callback called:" + callback.getMethod());
    return callback;
  }
  finally {
    lock.unlock();
  }
}
