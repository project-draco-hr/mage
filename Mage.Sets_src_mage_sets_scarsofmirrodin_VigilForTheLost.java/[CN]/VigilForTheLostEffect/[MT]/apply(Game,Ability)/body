{
  ManaCostsImpl cost=new ManaCostsImpl("{X}");
  cost.clearPaid();
  if (cost.payOrRollback(source,game,source.getId(),source.getControllerId())) {
    Player player=game.getPlayer(source.getControllerId());
    player.gainLife(cost.getX(),game);
    return true;
  }
 else {
    return false;
  }
}
