{
  StringBuilder sb=new StringBuilder();
  sb.append("Each player discards ");
  sb.append(amount).append(" card");
  try {
    if (Integer.parseInt(amount.toString()) > 1) {
      sb.append("s");
    }
  }
 catch (  Exception e) {
    sb.append("s");
  }
  if (randomDiscard) {
    sb.append(" at random");
  }
  return sb.toString();
}
