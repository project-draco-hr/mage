{
  super(ownerId,88,"Archetype of Aggression",Rarity.UNCOMMON,new CardType[]{CardType.ENCHANTMENT,CardType.CREATURE},"{1}{R}{R}");
  this.expansionSetCode="BNG";
  this.subtype.add("Human");
  this.subtype.add("Warrior");
