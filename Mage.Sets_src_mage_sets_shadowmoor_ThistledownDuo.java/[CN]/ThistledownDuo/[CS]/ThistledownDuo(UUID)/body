{
  super(ownerId,152,"Thistledown Duo",Rarity.COMMON,new CardType[]{CardType.CREATURE},"{2}{W/U}");
  this.expansionSetCode="SHM";
  this.subtype.add("Kithkin");
  this.subtype.add("Soldier");
  this.subtype.add("Wizard");
