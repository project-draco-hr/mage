{
  super(ownerId,17,"Skyrider Trainee",Rarity.COMMON,new CardType[]{CardType.CREATURE},"{4}{W}");
  this.expansionSetCode="GPT";
  this.subtype.add("Human");
  this.subtype.add("Soldier");
  this.color.setWhite(true);
  this.power=new MageInt(3);
  this.toughness=new MageInt(3);
  this.addAbility(new SimpleStaticAbility(Zone.BATTLEFIELD,new ConditionalContinuousEffect(new GainAbilitySourceEffect(FlyingAbility.getInstance(),Duration.WhileOnBattlefield),new EnchantedCondition(),"{this} has flying as long as it's enchanted")));
}
