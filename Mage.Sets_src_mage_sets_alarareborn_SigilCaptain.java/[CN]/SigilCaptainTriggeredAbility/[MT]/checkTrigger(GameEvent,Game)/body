{
  Permanent permanent=game.getPermanent(event.getTargetId());
  if (permanent == null) {
    return false;
  }
  if (permanent.getControllerId().equals(controllerId) && permanent.getPower().getValue() == 1 && permanent.getToughness().getValue() == 1) {
    for (    Effect effect : this.getEffects()) {
      effect.setTargetPointer(new FixedTarget(event.getTargetId()));
    }
    return true;
  }
  return false;
}
