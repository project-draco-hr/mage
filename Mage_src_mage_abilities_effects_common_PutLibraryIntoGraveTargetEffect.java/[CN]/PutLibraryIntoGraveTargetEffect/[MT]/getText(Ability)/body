{
  StringBuilder sb=new StringBuilder();
  sb.append("Target ").append(source.getTargets().get(0).getTargetName());
  sb.append(" puts the top ");
  if (amount instanceof StaticValue && amount.calculate(null,null) == 1)   sb.append(amount).append(" card ");
 else   sb.append(amount).append(" X cards ");
  sb.append("of his or her library into his or her graveyard");
  String message=amount.getMessage();
  if (message.length() > 0) {
    sb.append(", where X is the number of ");
  }
  sb.append(message);
  return sb.toString();
}
