{
  super(ownerId,147,"Hate Weaver",Rarity.UNCOMMON,new CardType[]{CardType.CREATURE},"{1}{B}");
  this.expansionSetCode="10E";
  this.subtype.add("Zombie");
  this.subtype.add("Wizard");
  this.color.setBlack(true);
  this.power=new MageInt(2);
  this.toughness=new MageInt(1);
  Ability ability=new SimpleActivatedAbility(Constants.Zone.BATTLEFIELD,new BoostTargetEffect(1,0,Constants.Duration.EndOfTurn),new GenericManaCost(2));
  ability.addTarget(new TargetCreaturePermanent(filter));
  this.addAbility(ability);
}
