{
  super(ownerId,setInfo,new CardType[]{CardType.INSTANT},"{3}{U}{R}");
  this.getSpellAbility().addEffect(new DamageTargetEffect(4));
  this.getSpellAbility().addTarget(new TargetCreatureOrPlayer());
