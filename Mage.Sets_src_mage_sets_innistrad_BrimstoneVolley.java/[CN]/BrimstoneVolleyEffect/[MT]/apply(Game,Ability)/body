{
  int damage=3;
  Watcher watcher=game.getState().getWatchers().get(source.getControllerId(),"Morbid");
  if (watcher.conditionMet()) {
    damage=5;
  }
  Permanent permanent=game.getPermanent(targetPointer.getFirst(source));
  if (permanent != null) {
    permanent.damage(damage,source.getSourceId(),game,true,false);
    return true;
  }
  Player player=game.getPlayer(targetPointer.getFirst(source));
  if (player != null) {
    player.damage(damage,source.getSourceId(),game,false,true);
    return true;
  }
  return false;
}
