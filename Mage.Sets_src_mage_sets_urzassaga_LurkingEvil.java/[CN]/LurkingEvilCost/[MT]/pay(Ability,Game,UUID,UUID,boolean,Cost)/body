{
  Player controller=game.getPlayer(controllerId);
  if (controller != null) {
    int currentLife=controller.getLife();
    int lifeToPay=(currentLife + currentLife % 2) / 2;
    if (lifeToPay < 0) {
      this.paid=true;
    }
 else {
      this.paid=(controller.loseLife(lifeToPay,game) == lifeToPay);
    }
    return this.paid;
  }
  return false;
}
