{
  Player controller=game.getPlayer(controllerId);
  if (controller != null) {
    int count=-1;
    for (    UUID uuid : controller.getGraveyard()) {
      if (count == -1) {
        if (uuid.equals(sourceId)) {
          count=0;
        }
      }
 else {
        Card card=game.getCard(uuid);
        if (card != null && filter.match(card,game)) {
          count++;
        }
      }
    }
    return count >= 3;
  }
  return false;
}
