{
  super(ownerId,setInfo,new CardType[]{CardType.ENCHANTMENT},"{2}{W}");
  Ability ability=new SimpleStaticAbility(Zone.BATTLEFIELD,new BoostControlledEffect(new StaticValue(0),new PermanentsOnBattlefieldCount(filter),Duration.WhileOnBattlefield));
  ability.addEffect(new GainAbilityControlledEffect(VigilanceAbility.getInstance(),Duration.WhileOnBattlefield,new FilterControlledCreaturePermanent("Creatures")));
  this.addAbility(ability);
}
