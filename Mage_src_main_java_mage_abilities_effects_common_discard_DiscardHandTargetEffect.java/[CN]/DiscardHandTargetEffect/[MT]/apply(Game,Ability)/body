{
  Player controller=game.getPlayer(source.getControllerId());
  if (controller != null) {
    for (    UUID playerId : getTargetPointer().getTargets(game,source)) {
      Player player=game.getPlayer(playerId);
      if (player != null) {
        player.discard(player.getHand().size(),source,game);
      }
    }
    return true;
  }
  return false;
}
