{
  Player controller=game.getPlayer(source.getControllerId());
  if (controller != null) {
    Set<Card> cards=controller.getGraveyard().getCards(filterCard,game);
    for (    Card card : cards) {
      if (card != null) {
        card.removeCounters("repair",1,game);
      }
    }
    return true;
  }
  return false;
}
