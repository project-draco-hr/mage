{
  super(ownerId,218,"Inventor's Goggles",Rarity.COMMON,new CardType[]{CardType.ARTIFACT},"{1}");
  this.expansionSetCode="KLD";
  this.subtype.add("Equipment");
  this.addAbility(new SimpleStaticAbility(Zone.BATTLEFIELD,new BoostEquippedEffect(1,2,Duration.WhileOnBattlefield)));
  this.addAbility(new EntersBattlefieldControlledTriggeredAbility(Zone.BATTLEFIELD,new AttachEffect(Outcome.BoostCreature,"attach {this} to it"),new FilterPermanent("Artificer","Artificer"),true,SetTargetPointer.PERMANENT,null,true));
  this.addAbility(new EquipAbility(Outcome.BoostCreature,new GenericManaCost(2)));
}
