{
  super(ownerId,247,"Sliver Hive",Rarity.RARE,new CardType[]{CardType.LAND},"");
  this.expansionSetCode="M15";
  this.addAbility(new ColorlessManaAbility());
  this.addAbility(new ConditionalAnyColorManaAbility(new TapSourceCost(),1,new ConditionalSpellManaBuilder(filterSpell),true));
  Ability ability=new ConditionalActivatedAbility(Zone.BATTLEFIELD,new CreateTokenEffect(new SliverToken()),new TapSourceCost(),new PermanentsOnTheBattlefieldCondition(filter),"{5}, {T}: Put a 1/1 colorless Sliver creature token onto the battlefield. Activate this ability only if you control a Sliver.");
  ability.addCost(new GenericManaCost(5));
  this.addAbility(ability);
}
