{
  StringBuilder sb=new StringBuilder("if an opponent lost ");
switch (type) {
case GreaterThan:
    sb.append(value + 1).append(" or more life this turn ");
  break;
case Equal:
sb.append(value).append(" life this turn ");
break;
case LessThan:
sb.append(" less than ").append(value).append(" life this turn ");
break;
}
return sb.toString();
}
