{
  for (  Permanent permanent : game.getBattlefield().getActivePermanents(source.getControllerId(),game)) {
    if (permanent != null && permanent.getCardType().contains(CardType.ARTIFACT) && permanent.getManaCost().convertedManaCost() <= source.getManaCostsToPay().getX()) {
      permanent.destroy(source.getSourceId(),game,false);
    }
  }
  return true;
}
