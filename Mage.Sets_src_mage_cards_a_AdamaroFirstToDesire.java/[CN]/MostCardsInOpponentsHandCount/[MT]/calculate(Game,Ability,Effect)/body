{
  int maxCards=0;
  for (  UUID opponentId : game.getOpponents(source.getControllerId())) {
    Player opponent=game.getPlayer(opponentId);
    if (opponent != null) {
      int cards=opponent.getHand().size();
      if (cards > maxCards) {
        maxCards=cards;
      }
    }
  }
  return maxCards;
}
