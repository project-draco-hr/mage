{
  super(ownerId,104,"Groundswell",Rarity.COMMON,new CardType[]{CardType.INSTANT},"{G}");
  this.expansionSetCode="WWK";
  this.getSpellAbility().addWatcher(new LandfallWatcher());
  this.getSpellAbility().addEffect(new ConditionalContinuousEffect(new BoostTargetEffect(4,4,Duration.EndOfTurn),new BoostTargetEffect(2,2,Duration.EndOfTurn),new LockedInCondition(LandfallCondition.getInstance()),"Target creature gets +2/+2 until end of turn. <br><i>Landfall</i> &mdash; If you had a land enter the battlefield under your control this turn, that creature gets +4/44 until end of turn instead"));
  this.getSpellAbility().addTarget(new TargetCreaturePermanent());
}
