{
  Player controller=game.getPlayer(source.getControllerId());
  if (controller != null) {
    Permanent werewolf=game.getPermanent(getTargetPointer().getFirst(game,source));
    if (werewolf != null && werewolf.canTransform()) {
      werewolf.transform(game);
    }
    return true;
  }
  return false;
}
