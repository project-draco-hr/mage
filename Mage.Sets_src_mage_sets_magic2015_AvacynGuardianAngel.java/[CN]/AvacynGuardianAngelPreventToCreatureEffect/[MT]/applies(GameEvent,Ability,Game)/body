{
  if (super.applies(event,source,game)) {
    if (event.getType().equals(GameEvent.EventType.DAMAGE_CREATURE) && event.getTargetId().equals(getTargetPointer().getFirst(game,source))) {
      ChoiceColor choice=(ChoiceColor)source.getChoices().get(0);
      MageObject sourceObject=game.getObject(event.getSourceId());
      if (sourceObject != null && choice != null && sourceObject.getColor(game).shares(choice.getColor())) {
        return true;
      }
    }
  }
  return false;
}
