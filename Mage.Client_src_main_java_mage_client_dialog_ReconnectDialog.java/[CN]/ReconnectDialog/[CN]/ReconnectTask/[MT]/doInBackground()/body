{
  int numAttempts=0;
  while (numAttempts < MAX_ATTEMPTS && !cancel) {
    numAttempts++;
    this.publish("Attempting to reconnect: attempt " + numAttempts + "of "+ MAX_ATTEMPTS);
    Thread.sleep(2000);
    if (session.connect()) {
      result=true;
      closeDialog();
      break;
    }
  }
  return null;
}
