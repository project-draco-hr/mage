{
  super(ownerId,12,"Loxodon Mender",Rarity.COMMON,new CardType[]{CardType.CREATURE},"{5}{W}");
  this.expansionSetCode="MRD";
  this.subtype.add("Elephant");
  this.subtype.add("Cleric");
