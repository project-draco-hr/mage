{
  super(ownerId,63,"Augur of Skulls",Rarity.COMMON,new CardType[]{CardType.CREATURE},"{1}{B}");
  this.expansionSetCode="FUT";
  this.subtype.add("Skeleton");
  this.subtype.add("Wizard");
  this.power=new MageInt(1);
  this.toughness=new MageInt(1);
  this.addAbility(new SimpleActivatedAbility(Zone.BATTLEFIELD,new RegenerateSourceEffect(),new ManaCostsImpl("{1}{B}")));
  Ability ability=new ConditionalActivatedAbility(Zone.BATTLEFIELD,new DiscardTargetEffect(2),new SacrificeSourceCost(),new IsStepCondition(PhaseStep.UPKEEP),null);
  ability.addTarget(new TargetPlayer());
  this.addAbility(ability);
}
