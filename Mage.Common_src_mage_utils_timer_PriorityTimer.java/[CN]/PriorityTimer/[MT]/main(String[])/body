{
  long delay=250L;
  int count=5;
  PriorityTimer timer=new PriorityTimer(count,delay,new Action(){
    @Override public void execute() throws MageException {
      System.out.println("Exit");
      System.exit(0);
    }
  }
);
  timer.init();
  timer.start();
  Thread.sleep(2000);
  timer.pause();
  Thread.sleep(3000);
  timer.resume();
}
