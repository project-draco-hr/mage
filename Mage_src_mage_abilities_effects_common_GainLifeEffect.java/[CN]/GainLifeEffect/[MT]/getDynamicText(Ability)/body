{
  StringBuilder sb=new StringBuilder();
  String message=life.getMessage();
  sb.append("you gain ");
  if (message.isEmpty() || !message.equals("1")) {
    sb.append(life).append(" ");
  }
  sb.append("life");
  if (message.length() > 0) {
    sb.append(message.equals("1") ? " equal to the number of " : " for each ");
    sb.append(message);
  }
  return sb.toString();
}
