{
  Permanent permanent=game.getPermanent(sourceId);
  if (permanent != null) {
    for (    UUID attachmentId : permanent.getAttachments()) {
      Permanent attachment=game.getPermanent(attachmentId);
      if (attachment != null && attachment.getName().equals("Shuriken")) {
        return true;
      }
    }
  }
  return false;
}
