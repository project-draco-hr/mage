{
  paid=false;
  Player player=game.getPlayer(controllerId);
  if (player != null) {
    Card card=player.getHand().get(ability.getSourceId(),game);
    if (card != null) {
      Cards cards=new CardsImpl(card);
      paid=true;
      player.revealCards("Reveal card cost",cards,game);
    }
  }
  return paid;
}
