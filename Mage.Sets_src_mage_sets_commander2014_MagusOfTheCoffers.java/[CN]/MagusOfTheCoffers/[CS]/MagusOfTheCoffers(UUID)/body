{
  super(ownerId,148,"Magus of the Coffers",Rarity.RARE,new CardType[]{CardType.CREATURE},"{4}{B}");
  this.expansionSetCode="C14";
  this.subtype.add("Human");
  this.subtype.add("Wizard");
  this.color.setBlack(true);
  this.power=new MageInt(4);
  this.toughness=new MageInt(4);
  Ability ability=new SimpleManaAbility(Zone.BATTLEFIELD,new DynamicManaEffect(Mana.BlackMana,new PermanentsOnBattlefieldCount(filter)),new GenericManaCost(2));
  ability.addCost(new TapSourceCost());
  this.addAbility(ability);
}
