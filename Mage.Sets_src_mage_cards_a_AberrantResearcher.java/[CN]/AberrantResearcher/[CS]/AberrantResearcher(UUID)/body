{
  super(ownerId,49,"Aberrant Researcher",Rarity.UNCOMMON,new CardType[]{CardType.CREATURE},"{3}{U}");
  this.expansionSetCode="SOI";
  this.subtype.add("Human");
  this.subtype.add("Insect");
  this.power=new MageInt(3);
  this.toughness=new MageInt(2);
  this.transformable=true;
  this.secondSideCard=new PerfectedForm(ownerId);
  this.addAbility(FlyingAbility.getInstance());
  this.addAbility(new TransformAbility());
  this.addAbility(new BeginningOfUpkeepTriggeredAbility(Zone.BATTLEFIELD,new AberrantResearcherEffect(),TargetController.YOU,false));
}
