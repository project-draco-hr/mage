{
  super(ownerId,195,"Cryoclasm",Rarity.UNCOMMON,new CardType[]{CardType.SORCERY},"{2}{R}");
  this.expansionSetCode="10E";
  this.getSpellAbility().addEffect(new DestroyTargetEffect());
