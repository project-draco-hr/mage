{
  Permanent permanent=game.getPermanent(source.getFirstTarget());
  if (permanent != null) {
    permanent.addPower(3);
    permanent.addToughness(3);
  }
  permanent=game.getPermanent(source.getTargets().get(0).getTargets().get(1));
  if (permanent != null) {
    permanent.addPower(-3);
    permanent.addToughness(-3);
  }
  return true;
}
