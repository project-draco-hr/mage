{
  super(Zone.BATTLEFIELD,new EntersBattlefieldEffect(new AddCountersSourceEffect(CounterType.P1P1.createInstance(amount))));
  ruleText=new StringBuilder("This enters the battlefield with ").append(CardUtil.numberToText(amount,"a")).append(" +1/+1 counter").append(amount != 1 ? "s" : "").append(" on it.").toString();
  this.setRuleVisible(false);
}
