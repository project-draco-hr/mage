{
  Player controller=game.getPlayer(source.getControllerId());
  if (controller != null) {
    Player opponent=game.getPlayer(getTargetPointer().getFirst(game,source));
    if (opponent != null) {
      opponent.loseLife(2,game);
    }
    controller.gainLife(2,game);
    return true;
  }
  return false;
}
