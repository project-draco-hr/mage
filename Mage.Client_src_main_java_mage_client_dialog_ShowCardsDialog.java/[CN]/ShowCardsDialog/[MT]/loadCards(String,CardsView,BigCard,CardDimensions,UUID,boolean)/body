{
  this.reloaded=true;
  this.title=name;
  cardArea.removeAll();
  if (showCards != null && showCards.size() < 10)   loadCardsFew(showCards,bigCard,gameId);
 else   loadCardsMany(showCards,bigCard,gameId);
  cardArea.revalidate();
  if (getParent() != MageFrame.getDesktop()) {
    MageFrame.getDesktop().add(this,JLayeredPane.POPUP_LAYER);
  }
  pack();
  this.revalidate();
  this.repaint();
  this.setModal(modal);
  this.setVisible(true);
}
