{
  Permanent permanent=game.getPermanent(source.getSourceId());
  if (permanent != null) {
    SpellAbility spellAbility=(SpellAbility)getValue(EntersBattlefieldEffect.SOURCE_CAST_SPELL_ABILITY);
    if (spellAbility != null && spellAbility.getSourceId().equals(source.getSourceId()) && permanent.getZoneChangeCounter(game) - 1 == spellAbility.getSourceObjectZoneChangeCounter()) {
      int amount=spellAbility.getManaCostsToPay().getX();
      if (amount > 0) {
        permanent.addCounters(CounterType.CHARGE.createInstance(amount),game);
        return true;
      }
    }
  }
  return true;
}
