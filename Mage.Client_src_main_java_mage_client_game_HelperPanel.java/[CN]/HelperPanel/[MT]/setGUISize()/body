{
  for (  Component comp : popupMenuAskNo.getComponents()) {
    if (comp instanceof JMenuItem) {
      comp.setFont(FontSizeHelper.menuFont);
    }
  }
  for (  Component comp : popupMenuAskYes.getComponents()) {
    if (comp instanceof JMenuItem) {
      comp.setFont(FontSizeHelper.menuFont);
    }
  }
}
