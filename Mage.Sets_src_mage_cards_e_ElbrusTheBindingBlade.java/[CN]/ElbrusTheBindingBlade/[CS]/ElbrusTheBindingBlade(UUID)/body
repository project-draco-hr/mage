{
  super(ownerId,147,"Elbrus, the Binding Blade",Rarity.MYTHIC,new CardType[]{CardType.ARTIFACT},"{7}");
  this.expansionSetCode="DKA";
  this.supertype.add("Legendary");
  this.subtype.add("Equipment");
