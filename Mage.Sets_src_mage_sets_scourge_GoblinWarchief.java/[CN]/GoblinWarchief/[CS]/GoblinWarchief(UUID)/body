{
  super(ownerId,97,"Goblin Warchief",Rarity.UNCOMMON,new CardType[]{CardType.CREATURE},"{1}{R}{R}");
  this.expansionSetCode="SCG";
  this.subtype.add("Goblin");
  this.subtype.add("Warrior");
