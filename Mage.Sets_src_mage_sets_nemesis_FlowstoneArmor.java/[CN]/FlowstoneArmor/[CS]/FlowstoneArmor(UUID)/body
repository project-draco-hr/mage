{
  super(ownerId,131,"Flowstone Armor",Rarity.UNCOMMON,new CardType[]{CardType.ARTIFACT},"{3}");
  this.expansionSetCode="NMS";
  this.addAbility(new SkipUntapOptionalAbility());
  Ability ability=new SimpleActivatedAbility(Zone.BATTLEFIELD,new ConditionalContinuousEffect(new BoostTargetEffect(1,-1,Duration.Custom),SourceTappedCondition.getInstance(),"target creature gets +1/-1 for as long as {this} remains tapped"),new ManaCostsImpl("{3}"));
  ability.addCost(new TapSourceCost());
  ability.addTarget(new TargetCreaturePermanent());
  this.addAbility(ability);
}
