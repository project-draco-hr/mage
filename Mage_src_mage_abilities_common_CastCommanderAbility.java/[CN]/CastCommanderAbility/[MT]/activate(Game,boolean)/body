{
  if (super.activate(game,noMana)) {
    Integer castCount=(Integer)game.getState().getValue(sourceId + "_castCount");
    if (castCount != null) {
      castCount++;
      game.getState().setValue(sourceId + "_castCount",castCount);
    }
 else {
      castCount=1;
      game.getState().setValue(sourceId + "_castCount",castCount);
    }
    return true;
  }
  return false;
}
