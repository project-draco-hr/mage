{
  this.addTarget(target);
  target.setNotTarget(true);
  this.text="sacrifice " + ((target.getNumberOfTargets() != 1 || (target.getTargetName().startsWith("an") || target.getTargetName().startsWith("a "))) ? "" : "a ") + target.getTargetName();
  target.setTargetName(target.getTargetName() + " (to sacrifice)");
}
