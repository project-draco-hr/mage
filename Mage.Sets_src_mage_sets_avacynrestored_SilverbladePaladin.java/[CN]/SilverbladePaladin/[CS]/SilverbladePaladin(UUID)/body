{
  super(ownerId,36,"Silverblade Paladin",Rarity.RARE,new CardType[]{CardType.CREATURE},"{1}{W}{W}");
  this.expansionSetCode="AVR";
  this.subtype.add("Human");
  this.subtype.add("Knight");
