{
  super(ownerId,66,"Gruesome Discovery",Rarity.COMMON,new CardType[]{CardType.SORCERY},"{2}{B}{B}");
  this.expansionSetCode="DKA";
  this.getSpellAbility().addEffect(new ConditionalOneShotEffect(new GruesomeDiscoveryEffect(),new DiscardTargetEffect(2),MorbidCondition.getInstance(),"Target player discards two cards. Morbid - If a creature died this turn, instead that player reveals his or her hand, you choose two cards from it, then that player discards those cards"));
  this.getSpellAbility().addTarget(new TargetPlayer());
}
