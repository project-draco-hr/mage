{
  int count=0;
  MageObject targetSource=game.getObject(sourceId);
  if (sourceControllerId != null)   setController(sourceControllerId,game);
  for (  Permanent permanent : game.getBattlefield().getActivePermanents(filter,sourceControllerId,game)) {
    if (permanent.canBeTargetedBy(targetSource)) {
      count++;
      if (count >= this.minNumberOfTargets)       return true;
    }
  }
  return false;
}
