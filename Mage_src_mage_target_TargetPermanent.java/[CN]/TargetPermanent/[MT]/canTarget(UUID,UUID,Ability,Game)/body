{
  Permanent permanent=game.getPermanent(id);
  if (permanent != null) {
    if (source != null) {
      if (!isNotTarget()) {
        if (!permanent.canBeTargetedBy(game.getObject(source.getId()),controllerId,game) || !permanent.canBeTargetedBy(game.getObject(source.getSourceId()),controllerId,game)) {
          return false;
        }
      }
      return filter.match(permanent,source.getSourceId(),controllerId,game);
    }
 else {
      return filter.match(permanent,null,controllerId,game);
    }
  }
  return false;
}
