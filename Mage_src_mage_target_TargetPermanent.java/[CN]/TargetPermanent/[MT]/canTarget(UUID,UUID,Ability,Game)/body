{
  Permanent permanent=game.getPermanent(id);
  if (controllerId != null)   setController(controllerId,game);
  if (permanent != null) {
    if (source != null)     return permanent.canBeTargetedBy(game.getObject(source.getSourceId())) && filter.match(permanent);
 else     return filter.match(permanent);
  }
  return false;
}
