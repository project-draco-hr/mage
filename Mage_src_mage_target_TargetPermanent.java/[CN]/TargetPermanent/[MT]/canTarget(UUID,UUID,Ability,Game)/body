{
  Permanent permanent=game.getPermanent(id);
  if (permanent != null) {
    if (source != null)     return permanent.canBeTargetedBy(game.getObject(source.getId())) && permanent.canBeTargetedBy(game.getObject(source.getSourceId())) && filter.match(permanent,source.getSourceId(),controllerId,game);
 else     return filter.match(permanent,null,controllerId,game);
  }
  return false;
}
