{
  if (!linked) {
    int dx=e.getX() - p.x;
    int dy=e.getY() - p.y;
    Rectangle r=this.getBounds();
    r.x+=dx;
    r.y+=dy;
    if (r.x < 0)     r.x=0;
    if (r.y < 0)     r.y=0;
    this.setBounds(r);
    this.repaint();
    for (    MagePermanent perm : links) {
      r.x+=20;
      r.y+=20;
      perm.setBounds(r);
    }
  }
}
