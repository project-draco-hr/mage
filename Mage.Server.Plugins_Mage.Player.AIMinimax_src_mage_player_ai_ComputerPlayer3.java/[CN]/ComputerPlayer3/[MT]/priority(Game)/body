{
  logState(game);
  if (logger.isDebugEnabled())   logger.debug("Game State: Turn-" + game.getTurnNum() + " Step-"+ game.getTurn().getStepType()+ " ActivePlayer-"+ game.getPlayer(game.getActivePlayerId()).getName()+ " PriorityPlayer-"+ name);
  game.firePriorityEvent(playerId);
switch (game.getTurn().getStepType()) {
case UPKEEP:
case DRAW:
    pass();
  break;
case PRECOMBAT_MAIN:
if (game.getActivePlayerId().equals(playerId)) {
  if (actions.size() == 0) {
    calculatePreCombatActions(game);
  }
  act(game);
}
 else pass();
break;
case BEGIN_COMBAT:
pass();
break;
case DECLARE_ATTACKERS:
if (!game.getActivePlayerId().equals(playerId)) {
if (actions.size() == 0) {
calculatePreCombatActions(game);
}
act(game);
}
 else pass();
break;
case DECLARE_BLOCKERS:
case COMBAT_DAMAGE:
case END_COMBAT:
pass();
break;
case POSTCOMBAT_MAIN:
if (game.getActivePlayerId().equals(playerId)) {
if (actions.size() == 0) {
calculatePostCombatActions(game);
}
act(game);
}
 else pass();
break;
case END_TURN:
case CLEANUP:
pass();
break;
}
}
