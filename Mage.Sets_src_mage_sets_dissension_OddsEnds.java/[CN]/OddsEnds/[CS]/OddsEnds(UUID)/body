{
  super(ownerId,153,"Odds","Ends",Rarity.RARE,new CardType[]{CardType.INSTANT},"{U}{R}","{3}{R}{W}",false);
  this.expansionSetCode="DIS";
  getLeftHalfCard().getSpellAbility().addEffect(new OddsEffect());
