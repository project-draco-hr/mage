{
  addCard(Constants.Zone.BATTLEFIELD,playerA,"Plains");
  addCard(Constants.Zone.BATTLEFIELD,playerA,"Altar of the Lost");
  addCard(Constants.Zone.HAND,playerA,"Lingering Souls");
  setChoice(playerA,"Black");
  setChoice(playerA,"Black");
