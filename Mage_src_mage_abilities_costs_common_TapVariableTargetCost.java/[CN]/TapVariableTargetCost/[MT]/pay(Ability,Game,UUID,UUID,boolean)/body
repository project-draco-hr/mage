{
  amountPaid=0;
  while (true) {
    target.clearChosen();
    if (target.choose(Outcome.Tap,controllerId,sourceId,game)) {
      Permanent permanent=game.getPermanent(target.getFirstTarget());
      if (permanent != null && permanent.tap(game)) {
        amountPaid++;
      }
    }
 else {
      break;
    }
  }
  paid=true;
  return true;
}
