{
  super(ownerId,162,"Burning Shield Askari",Rarity.COMMON,new CardType[]{CardType.CREATURE},"{2}{R}");
  this.expansionSetCode="MIR";
  this.subtype.add("Human");
  this.subtype.add("Knight");
  this.color.setRed(true);
  this.power=new MageInt(2);
  this.toughness=new MageInt(2);
  this.addAbility(new FlankingAbility());
  this.addAbility(new SimpleActivatedAbility(Constants.Zone.BATTLEFIELD,new GainAbilitySourceEffect(FirstStrikeAbility.getInstance(),Constants.Duration.EndOfTurn),new ManaCostsImpl("{R}{R}")));
}
