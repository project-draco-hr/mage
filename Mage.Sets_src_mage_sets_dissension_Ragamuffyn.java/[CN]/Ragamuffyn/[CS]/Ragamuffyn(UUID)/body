{
  super(ownerId,51,"Ragamuffyn",Rarity.UNCOMMON,new CardType[]{CardType.CREATURE},"{2}{B}");
  this.expansionSetCode="DIS";
  this.subtype.add("Zombie");
  this.subtype.add("Cleric");
  this.power=new MageInt(2);
  this.toughness=new MageInt(2);
  Ability ability=new ConditionalActivatedAbility(Zone.BATTLEFIELD,new DrawCardSourceControllerEffect(1),new TapSourceCost(),HellbentCondition.getInstance(),"Hellbent - {T}, Sacrifice a creature or land: Draw a card. Activate this ability only if you have no cards in hand.");
  ability.addCost(new SacrificeTargetCost(new TargetControlledPermanent(filter)));
  this.addAbility(ability);
}
