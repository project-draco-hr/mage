{
  super(ownerId,setInfo,new CardType[]{CardType.CREATURE},"{R}");
  this.subtype.add("Goblin");
  this.subtype.add("Shaman");
  this.power=new MageInt(0);
  this.toughness=new MageInt(2);
  Ability ability=new SimpleActivatedAbility(Zone.BATTLEFIELD,new RegenerateTargetEffect(),new SacrificeTargetCost(new TargetControlledCreaturePermanent(new FilterControlledCreaturePermanent("Goblin","a Goblin"))));
  ability.addTarget(new TargetCreaturePermanent());
  this.addAbility(ability);
}
