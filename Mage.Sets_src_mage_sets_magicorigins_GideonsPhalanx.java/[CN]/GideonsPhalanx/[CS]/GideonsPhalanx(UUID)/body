{
  super(ownerId,14,"Gideon's Phalanx",Rarity.RARE,new CardType[]{CardType.INSTANT},"{5}{W}{W}");
  this.expansionSetCode="ORI";
  this.getSpellAbility().addEffect(new CreateTokenEffect(new GideonsPhalanxKnightToken(),4));
  Effect effect=new ConditionalContinuousEffect(new GainAbilityAllEffect(IndestructibleAbility.getInstance(),Duration.EndOfTurn,new FilterControlledCreaturePermanent()),SpellMasteryCondition.getInstance(),"<br><i>Spell mastery</i> - If there are two or more instant and/or sorcery cards in your graveyard, creatures you control gain indestructible until end of turn");
  this.getSpellAbility().addEffect(effect);
}
