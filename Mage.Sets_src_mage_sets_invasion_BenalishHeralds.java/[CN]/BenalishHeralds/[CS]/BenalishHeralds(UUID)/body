{
  super(ownerId,6,"Benalish Heralds",Rarity.UNCOMMON,new CardType[]{CardType.CREATURE},"{3}{W}");
  this.expansionSetCode="INV";
  this.subtype.add("Human");
  this.subtype.add("Soldier");
  this.color.setWhite(true);
  this.power=new MageInt(2);
  this.toughness=new MageInt(4);
  Ability ability=new SimpleActivatedAbility(Constants.Zone.BATTLEFIELD,new DrawCardControllerEffect(1),new ManaCostsImpl("{3}{U}"));
  ability.addCost(new TapSourceCost());
  this.addAbility(ability);
}
