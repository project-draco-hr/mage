{
  Spell spell=game.getStack().getSpell(getTargetPointer().getFirst(game,source));
  if (spell != null) {
    game.getStack().counter(getTargetPointer().getFirst(game,source),source.getSourceId(),game);
    int mana=spell.getConvertedManaCost();
    AtTheBeginOfMainPhaseDelayedTriggeredAbility delayedAbility=new AtTheBeginOfMainPhaseDelayedTriggeredAbility(new PlasmCaptureManaEffect(mana),false,TargetController.YOU,PhaseSelection.NEXT_PRECOMBAT_MAIN);
    game.addDelayedTriggeredAbility(delayedAbility,source);
    return true;
  }
  return false;
}
