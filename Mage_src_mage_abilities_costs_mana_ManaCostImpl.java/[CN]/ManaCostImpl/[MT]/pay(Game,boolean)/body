{
  if (noMana) {
    setPaid();
    return true;
  }
  Player player=game.getPlayer(this.getAbility().getControllerId());
  assignPayment(player.getManaPool());
  while (!isPaid()) {
    if (player.playMana(this,game))     assignPayment(player.getManaPool());
 else     return false;
  }
  return true;
}
