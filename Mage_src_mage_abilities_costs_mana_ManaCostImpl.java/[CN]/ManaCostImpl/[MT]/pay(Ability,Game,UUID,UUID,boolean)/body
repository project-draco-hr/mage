{
  if (noMana) {
    setPaid();
    return true;
  }
  Player player=game.getPlayer(controllerId);
  assignPayment(game,ability,player.getManaPool());
  while (!isPaid()) {
    if (player.playMana(this,game)) {
      assignPayment(game,ability,player.getManaPool());
    }
 else {
      return false;
    }
  }
  return true;
}
