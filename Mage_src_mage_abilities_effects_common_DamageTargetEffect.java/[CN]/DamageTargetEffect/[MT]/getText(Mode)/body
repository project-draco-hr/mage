{
  StringBuilder sb=new StringBuilder();
  String message=amount.getMessage();
  sb.append("{source} deals ");
  if (message.isEmpty() || !message.equals("1")) {
    sb.append(amount);
  }
  sb.append(" damage to ");
  if (targetDescription.length() > 0)   sb.append(targetDescription);
 else   sb.append("target ").append(mode.getTargets().get(0).getTargetName());
  if (message.length() > 0) {
    sb.append(message.equals("1") ? " equal to the number of " : " for each ");
    sb.append(message);
  }
  if (!preventable) {
    sb.append(". The damage can't be prevented");
  }
  return sb.toString();
}
