{
  if (event.getType() == GameEvent.EventType.DECLARED_ATTACKERS && game.getActivePlayerId().equals(this.controllerId) && event.getSourceId() == this.getSourceId()) {
    UUID defender=game.getCombat().getDefendingPlayer(this.getSourceId());
    this.getEffects().get(0).setTargetPointer(new FixedTarget(defender));
    return true;
  }
  return false;
}
