{
  super(ownerId,15,"Glare of Heresy",Rarity.UNCOMMON,new CardType[]{CardType.SORCERY},"{1}{W}");
  this.expansionSetCode="THS";
  this.color.setWhite(true);
  this.getSpellAbility().addEffect(new ExileTargetEffect());
