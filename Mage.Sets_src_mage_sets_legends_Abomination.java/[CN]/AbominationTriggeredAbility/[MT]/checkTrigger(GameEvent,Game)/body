{
  Permanent blocker=game.getPermanent(event.getSourceId());
  Permanent blocked=game.getPermanent(event.getTargetId());
  Permanent abomination=game.getPermanent(sourceId);
  if (blocker != null && blocker != abomination && blocker.getColor(game).isWhite() && blocked == abomination) {
    for (    Effect effect : this.getEffects()) {
      effect.setTargetPointer(new FixedTarget(event.getSourceId()));
      return true;
    }
  }
  if (blocker != null && blocker == abomination && game.getPermanent(event.getTargetId()).getColor(game).isWhite()) {
    for (    Effect effect : this.getEffects()) {
      effect.setTargetPointer(new FixedTarget(event.getTargetId()));
      return true;
    }
  }
  if (blocker != null && blocker != abomination && blocker.getColor(game).isGreen() && blocked == abomination) {
    for (    Effect effect : this.getEffects()) {
      effect.setTargetPointer(new FixedTarget(event.getSourceId()));
      return true;
    }
  }
  if (blocker != null && blocker == abomination && game.getPermanent(event.getTargetId()).getColor(game).isGreen()) {
    for (    Effect effect : this.getEffects()) {
      effect.setTargetPointer(new FixedTarget(event.getTargetId()));
      return true;
    }
  }
  return false;
}
