{
  super(ownerId,setInfo,new CardType[]{CardType.ENCHANTMENT},"{1}{W}{W}");
  Ability ability=new SimpleStaticAbility(Zone.BATTLEFIELD,new BoostAllEffect(1,1,Duration.WhileOnBattlefield,filter,false));
  this.addAbility(ability);
  ability=new SimpleStaticAbility(Zone.BATTLEFIELD,new ConditionalContinuousEffect(new BoostAllEffect(1,1,Duration.WhileOnBattlefield,filter,false),new CardsInControllerGraveCondition(7),"If seven or more cards are in your graveyard, white creatures get an additional +1/+1."));
  ability.setAbilityWord(AbilityWord.THRESHOLD);
  this.addAbility(ability);
}
