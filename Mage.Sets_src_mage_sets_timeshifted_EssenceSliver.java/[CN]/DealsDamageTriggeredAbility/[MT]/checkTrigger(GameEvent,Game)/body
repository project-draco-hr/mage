{
  if (event.getType() == GameEvent.EventType.DAMAGED_CREATURE || event.getType() == GameEvent.EventType.DAMAGED_PLAYER || event.getType() == GameEvent.EventType.DAMAGED_PLANESWALKER) {
    Permanent creature=game.getPermanent(event.getSourceId());
    if (creature != null && creature.hasSubtype("Sliver")) {
      if (setTargetPointer) {
        for (        Effect effect : this.getEffects()) {
          effect.setTargetPointer(new FixedTarget(game.getControllerId(event.getSourceId())));
          effect.setValue("damage",event.getAmount());
        }
      }
      return true;
    }
  }
  return false;
}
