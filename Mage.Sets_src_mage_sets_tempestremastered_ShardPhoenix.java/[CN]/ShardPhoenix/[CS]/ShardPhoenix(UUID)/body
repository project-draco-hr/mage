{
  super(ownerId,158,"Shard Phoenix",Rarity.MYTHIC,new CardType[]{CardType.CREATURE},"{4}{R}");
  this.expansionSetCode="TPR";
  this.subtype.add("Phoenix");
  this.power=new MageInt(2);
  this.toughness=new MageInt(2);
  this.addAbility(FlyingAbility.getInstance());
  this.addAbility(new SimpleActivatedAbility(Zone.BATTLEFIELD,new DamageAllEffect(2,filter),new SacrificeSourceCost()));
  this.addAbility(new ConditionalActivatedAbility(Zone.GRAVEYARD,new ReturnSourceFromGraveyardToHandEffect(),new ManaCostsImpl("{R}{R}{R}"),new IsStepCondition(PhaseStep.UPKEEP),null));
}
