{
  super(ownerId,34,"Mystic Penitent",Rarity.UNCOMMON,new CardType[]{CardType.CREATURE},"{W}");
  this.expansionSetCode="ODY";
  this.subtype.add("Human");
  this.subtype.add("Nomad");
  this.subtype.add("Mystic");
  this.color.setWhite(true);
  this.power=new MageInt(1);
  this.toughness=new MageInt(1);
  this.addAbility(VigilanceAbility.getInstance());
  Ability ability=new SimpleStaticAbility(Zone.BATTLEFIELD,new ConditionalContinousEffect(new BoostSourceEffect(1,1,Duration.WhileOnBattlefield),new CardsInControllerGraveCondition(7),"<i>Threshold</i> - As long as seven or more cards are in your graveyard, {this} gets +1/+1"));
  ability.addEffect(new ConditionalContinousEffect(new GainAbilitySourceEffect(FlyingAbility.getInstance()),new CardsInControllerGraveCondition(7)," and has flying"));
  this.addAbility(ability);
}
