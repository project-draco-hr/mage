{
  super(ownerId,65,"Hellkite Igniter",Rarity.RARE,new CardType[]{CardType.CREATURE},"{5}{R}{R}");
  this.expansionSetCode="MBS";
  this.subtype.add("Dragon");
  this.color.setRed(true);
  this.power=new MageInt(5);
  this.toughness=new MageInt(5);
  this.addAbility(FlyingAbility.getInstance());
  this.addAbility(HasteAbility.getInstance());
  this.addAbility(new SimpleActivatedAbility(Constants.Zone.BATTLEFIELD,new BoostSourceEffect(new PermanentsOnBattlefieldCount(new FilterArtifactPermanent()),new StaticValue(0),Constants.Duration.EndOfTurn),new ManaCostsImpl("{1}{R}")));
}
