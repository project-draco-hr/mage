{
  super(ownerId,93,"Xun Yu, Wei Advisor",Rarity.RARE,new CardType[]{CardType.CREATURE},"{1}{B}{B}");
  this.expansionSetCode="PTK";
  this.supertype.add("Legendary");
  this.subtype.add("Human");
  this.subtype.add("Advisor");
  this.power=new MageInt(1);
  this.toughness=new MageInt(1);
  Ability ability=new ActivateIfConditionActivatedAbility(Zone.BATTLEFIELD,new BoostTargetEffect(2,0,Duration.EndOfTurn),new TapSourceCost(),MyTurnBeforeAttackersDeclaredCondition.getInstance());
  ability.addTarget(new TargetControlledCreaturePermanent());
  this.addAbility(ability);
}
