{
  super(ownerId,264,"Hidden Spider",Rarity.COMMON,new CardType[]{CardType.ENCHANTMENT},"{G}");
  this.expansionSetCode="USG";
  TriggeredAbility ability=new SpellCastOpponentTriggeredAbility(new BecomesCreatureSourceEffect(new HiddenSpiderToken(),"",Duration.WhileOnBattlefield,true),filter,false);
  this.addAbility(new ConditionalTriggeredAbility(ability,new SourceMatchesFilterCondition(new FilterEnchantmentPermanent()),"When an opponent casts a creature spell with flying, if {this} is an enchantment, {this} becomes a 3/5 Spider creature with reach."));
}
