  this.power=new MageInt(1);
  this.toughness=new MageInt(3);
  this.addAbility(HorsemanshipAbility.getInstance());
  this.addAbility(new DealsDamageToOpponentTriggeredAbility(new DrawCardControllerEffect(1),true));
}
