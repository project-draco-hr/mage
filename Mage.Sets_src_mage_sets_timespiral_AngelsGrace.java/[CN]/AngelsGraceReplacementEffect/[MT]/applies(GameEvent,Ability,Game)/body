{
  if (event.getType().equals(GameEvent.EventType.DAMAGE_CAUSES_LIFE_LOSS) && event.getPlayerId().equals(source.getControllerId())) {
    Player controller=game.getPlayer(source.getControllerId());
    if (controller != null && (controller.getLife() - event.getAmount()) < 1) {
      event.setAmount(controller.getLife() - 1);
    }
  }
  return false;
}
