{
  if (event.getType() == GameEvent.EventType.ZONE_CHANGE) {
    Permanent permanent=game.getPermanent(event.getTargetId());
    if (((ZoneChangeEvent)event).getToZone() == Zone.BATTLEFIELD && permanent.getCardType().contains(CardType.CREATURE) && permanent.getControllerId().equals(this.controllerId) && event.getTargetId() != this.getSourceId()) {
      Effect effect=this.getEffects().get(0);
      effect.setValue("lifeSource",event.getTargetId());
      return true;
    }
  }
  return false;
}
