{
  super(ownerId,150,"Goblin Glory Chaser",Rarity.UNCOMMON,new CardType[]{CardType.CREATURE},"{R}");
  this.expansionSetCode="ORI";
  this.subtype.add("Goblin");
  this.subtype.add("Warrior");
  this.power=new MageInt(1);
  this.toughness=new MageInt(1);
  this.addAbility(new RenownAbility(1));
  Effect effect=new ConditionalContinuousEffect(new GainAbilitySourceEffect(MenaceAbility.getInstance(),Duration.WhileOnBattlefield),RenownCondition.getInstance(),"As long as {this} is renowned, it has menace");
  Ability ability=new SimpleStaticAbility(Zone.BATTLEFIELD,effect);
  this.addAbility(ability);
}
