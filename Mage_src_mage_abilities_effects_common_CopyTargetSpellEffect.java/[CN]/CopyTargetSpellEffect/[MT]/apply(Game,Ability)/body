{
  Spell spell=game.getStack().getSpell(source.getFirstTarget());
  if (spell != null) {
    Spell copy=spell.copySpell();
    copy.setControllerId(source.getControllerId());
    copy.setCopiedSpell(true);
    game.getStack().push(copy);
    copy.chooseNewTargets(game);
    return true;
  }
  return false;
}
