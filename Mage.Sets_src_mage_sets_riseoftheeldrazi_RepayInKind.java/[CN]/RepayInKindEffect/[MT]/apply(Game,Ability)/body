{
  int lowestLife=game.getPlayer(source.getControllerId()).getLife();
  for (  Player playerid : game.getPlayers().values()) {
    if (playerid != null) {
      if (lowestLife > playerid.getLife()) {
        lowestLife=playerid.getLife();
      }
    }
  }
  for (  Player playerId : game.getPlayers().values()) {
    if (playerId != null) {
      playerId.setLife(lowestLife,game);
    }
  }
  return true;
}
