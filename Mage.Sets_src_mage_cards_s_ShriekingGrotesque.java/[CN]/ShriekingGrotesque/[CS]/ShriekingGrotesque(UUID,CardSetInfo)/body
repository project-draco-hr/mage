{
  super(ownerId,setInfo,new CardType[]{CardType.CREATURE},"{2}{W}");
  this.subtype.add("Gargoyle");
  this.power=new MageInt(2);
  this.toughness=new MageInt(1);
  this.addAbility(FlyingAbility.getInstance());
  TriggeredAbility ability=new EntersBattlefieldTriggeredAbility(new DiscardTargetEffect(1),false);
  ability.addTarget(new TargetPlayer());
  this.addAbility(new ConditionalTriggeredAbility(ability,new ManaWasSpentCondition(ColoredManaSymbol.B),"if {B} was spent to cast {this}, target player discards a card."),new ManaSpentToCastWatcher());
}
