{
  if (targets.size() == 0)   return super.chooseTarget(cards,target,source,game);
  if (!target.doneChosing()) {
    for (    UUID targetId : targets) {
      target.addTarget(targetId,source,game);
      if (target.doneChosing()) {
        targets.clear();
        return true;
      }
    }
    return false;
  }
  return true;
}
