{
  if (actions == null || actions.size() == 0)   pass(game);
 else {
    boolean usedStack=false;
    while (actions.peek() != null) {
      Ability ability=actions.poll();
      this.activateAbility((ActivatedAbility)ability,game);
      if (logger.isDebugEnabled())       logger.debug("activating: " + ability);
      if (ability.isUsesStack())       usedStack=true;
    }
    if (usedStack)     pass(game);
  }
  logger.info("Turn " + game.getTurnNum() + " Step "+ game.getStep().toString()+ " Player "+ name+ " Life "+ life);
}
