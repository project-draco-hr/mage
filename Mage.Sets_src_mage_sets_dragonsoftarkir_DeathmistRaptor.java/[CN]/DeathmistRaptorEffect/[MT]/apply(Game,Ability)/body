{
  Player controller=game.getPlayer(source.getControllerId());
  MageObject sourceObject=source.getSourceObjectIfItStillExists(game);
  if (controller != null && (sourceObject instanceof Card)) {
    controller.putOntoBattlefieldWithInfo((Card)sourceObject,game,Zone.GRAVEYARD,source.getSourceId(),false,controller.chooseUse(Outcome.Detriment,"Return " + sourceObject.getLogName() + " face down to battlefield (otherwise face up)?",source,game));
    return true;
  }
  return false;
}
