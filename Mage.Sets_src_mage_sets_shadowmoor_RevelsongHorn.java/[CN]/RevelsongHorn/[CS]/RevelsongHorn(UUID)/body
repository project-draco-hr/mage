{
  super(ownerId,261,"Revelsong Horn",Rarity.UNCOMMON,new CardType[]{CardType.ARTIFACT},"{2}");
  this.expansionSetCode="SHM";
  SimpleActivatedAbility ability=new SimpleActivatedAbility(Zone.BATTLEFIELD,new BoostTargetEffect(1,1,Duration.EndOfTurn),new ManaCostsImpl("{1}"));
  ability.addCost(new TapSourceCost());
  ability.addCost(new TapTargetCost(new TargetControlledCreaturePermanent(true)));
  ability.addTarget(new TargetCreaturePermanent(true));
  this.addAbility(ability);
}
