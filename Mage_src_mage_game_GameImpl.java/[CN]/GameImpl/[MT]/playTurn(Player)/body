{
  this.logStartOfTurn(player);
  if (checkStopOnTurnOption()) {
    return false;
  }
  state.setActivePlayerId(player.getId());
  player.becomesActivePlayer();
  state.getTurn().play(this,player.getId());
  if (isPaused() || gameOver(null)) {
    return false;
  }
  endOfTurn();
  return true;
}
