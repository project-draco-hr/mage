{
  Player player=game.getPlayer(event.getPlayerId());
  if (player != null) {
    int ce=countEnchantments.calculate(game,source,this);
    ManaCostsImpl safetyCosts=new ManaCostsImpl("{" + ce + "}");
    if (safetyCosts.canPay(source,source.getSourceId(),event.getPlayerId(),game) && player.chooseUse(Outcome.Benefit,"Pay {" + ce + "} to declare attacker?",game)) {
      if (safetyCosts.payOrRollback(source,game,this.getId(),event.getPlayerId())) {
        return false;
      }
    }
    return true;
  }
  return false;
}
