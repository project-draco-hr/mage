{
  if (event.getType() == GameEvent.EventType.DREW_CARD) {
    UUID playerId=event.getPlayerId();
    if (playerId != null) {
      Integer amount=amountOfCardsDrawnThisTurn.get(playerId);
      if (amount == null) {
        amount=1;
      }
 else {
        amount++;
      }
      amountOfCardsDrawnThisTurn.put(playerId,amount);
    }
  }
}
