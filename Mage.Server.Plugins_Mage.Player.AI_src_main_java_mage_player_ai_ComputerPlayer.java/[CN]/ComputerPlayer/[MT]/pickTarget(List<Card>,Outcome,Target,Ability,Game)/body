{
  Card card=null;
  while (!cards.isEmpty()) {
    if (outcome.isGood()) {
      card=pickBestCard(cards,null);
    }
 else {
      card=pickWorstCard(cards,null);
    }
    if (source != null) {
      if (target.canTarget(card.getId(),source,game)) {
        return card;
      }
    }
 else {
      return card;
    }
    cards.remove(card);
  }
  return null;
}
