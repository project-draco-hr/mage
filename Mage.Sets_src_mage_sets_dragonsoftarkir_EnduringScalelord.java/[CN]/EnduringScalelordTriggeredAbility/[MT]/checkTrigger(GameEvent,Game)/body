{
  if (event.getData().equals(CounterType.P1P1.getName())) {
    Permanent permanent=game.getPermanentOrLKIBattlefield(event.getTargetId());
    return (!event.getTargetId().equals(this.getSourceId()) && permanent.getCardType().contains(CardType.CREATURE) && permanent.getControllerId().equals(this.getControllerId()));
  }
  return false;
}
