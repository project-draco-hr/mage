{
  if (event.getType().equals(GameEvent.EventType.CAST_SPELL) && event.getSourceId().equals(source.getSourceId())) {
    if (game.getTurn().getStepType().equals(PhaseStep.UNTAP) || game.getTurn().getStepType().equals(PhaseStep.UPKEEP) || !game.getOpponents(source.getControllerId()).contains(game.getActivePlayerId())) {
      return true;
    }
  }
  return false;
}
