{
  Player player=game.getPlayer(source.getControllerId());
  if (player != null) {
    if (player.chooseUse(Outcome.Benefit,"Pay " + cost.getText() + "?",source,game)) {
      cost.clearPaid();
      if (cost.pay(source,game,source.getSourceId(),source.getControllerId(),false)) {
        return true;
      }
    }
    player.lost(game);
    return true;
  }
  return false;
}
