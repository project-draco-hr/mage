{
  Player player=game.getPlayer(targetPointer.getFirst(game,source));
  if (player != null) {
    int amount=player.getHand().size() - 4;
    if (amount > 0) {
      if (player != null) {
        player.damage(amount,source.getSourceId(),game,false,true);
        return true;
      }
    }
  }
  return false;
}
