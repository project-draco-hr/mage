{
  super(ownerId,setInfo,new CardType[]{CardType.ENCHANTMENT},"{1}{G}");
  this.addAbility(new EntersBattlefieldControlledTriggeredAbility(Zone.BATTLEFIELD,new CreamOfTheCropEffect(),new FilterCreaturePermanent(),true,SetTargetPointer.PERMANENT,"Whenever a creature enters the battlefield under your control, you may look at the top X cards of your library, where X is that creature's power. If you do, put one of those cards on top of your library and the rest on the bottom of your library in any order"));
}
