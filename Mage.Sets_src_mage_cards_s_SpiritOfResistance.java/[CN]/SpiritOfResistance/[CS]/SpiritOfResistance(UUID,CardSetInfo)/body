{
  super(ownerId,setInfo,new CardType[]{CardType.ENCHANTMENT},"{2}{W}");
  Effect effect=new ConditionalReplacementEffect(new PreventDamageToControllerEffect(Duration.WhileOnBattlefield),SpiritOfResistanceCondition.getInstance());
  effect.setText("As long as you control a permanent of each color, prevent all damage that would be dealt to you.");
  this.addAbility(new SimpleStaticAbility(Zone.BATTLEFIELD,effect));
}
