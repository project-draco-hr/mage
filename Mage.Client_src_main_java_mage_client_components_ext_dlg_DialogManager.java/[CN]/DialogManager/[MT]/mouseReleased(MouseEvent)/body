{
  bDragged=false;
  if (j instanceof DialogManager) {
    return;
  }
  if (j != null && rec != null) {
    j.setBounds(rec);
  }
  oldRec=null;
  if (rec == null)   return;
  if (rec.x < 0) {
    rec.x=0;
    if (j != null)     j.setBounds(rec);
  }
  if (rec.y < 0) {
    rec.y=0;
    if (j != null)     j.setBounds(rec);
  }
  j=null;
}
