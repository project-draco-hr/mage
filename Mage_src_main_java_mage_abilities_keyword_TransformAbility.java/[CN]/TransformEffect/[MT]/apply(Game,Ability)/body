{
  Permanent permanent=game.getPermanent(source.getSourceId());
  if (permanent == null) {
    return false;
  }
  if (permanent.isCopy()) {
    return true;
  }
  if (!permanent.isTransformed()) {
    return true;
  }
  Card card=permanent.getSecondCardFace();
  if (card == null) {
    return false;
  }
  TransformAbility.transform(permanent,card,game);
  return true;
}
