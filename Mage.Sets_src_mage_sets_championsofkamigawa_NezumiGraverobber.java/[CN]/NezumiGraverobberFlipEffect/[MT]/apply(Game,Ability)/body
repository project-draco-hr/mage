{
  Card card=game.getCard(targetPointer.getFirst(source));
  if (card != null) {
    Player player=game.getPlayer(card.getOwnerId());
    if (player != null) {
      if (player.getGraveyard().size() == 0) {
        Permanent p=game.getPermanent(source.getSourceId());
        if (p != null) {
          p.flip(game);
        }
      }
    }
  }
  return true;
}
