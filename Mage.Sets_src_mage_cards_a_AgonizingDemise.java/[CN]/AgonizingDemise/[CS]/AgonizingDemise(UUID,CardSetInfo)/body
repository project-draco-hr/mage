{
  super(ownerId,setInfo,new CardType[]{CardType.INSTANT},"{3}{B}");
  this.addAbility(new KickerAbility("{1}{R}"));
  this.getSpellAbility().addEffect(new DestroyTargetEffect(true));
  this.getSpellAbility().addTarget(new TargetCreaturePermanent(filterNonBlackCreature));
  this.getSpellAbility().addEffect(new ConditionalOneShotEffect(new AgonizingDemiseEffect(),KickedCondition.getInstance(),"If {this} was kicked, it deals damage equal to that creature's power to the creature's controller."));
}
