{
  StringBuilder sb=new StringBuilder();
  boolean oneCard=(amount instanceof StaticValue && amount.calculate(null,null,this) == 1) || amount instanceof PermanentsOnBattlefieldCount || amount.toString().equals("1");
  sb.append("draw ").append(oneCard ? "a" : CardUtil.numberToText(amount.toString())).append(" card");
  if (!oneCard) {
    sb.append("s");
  }
  String message=amount.getMessage();
  if (StringUtil.isNotEmpty(message)) {
    sb.append(" for each ");
  }
  sb.append(message);
  staticText=sb.toString();
}
