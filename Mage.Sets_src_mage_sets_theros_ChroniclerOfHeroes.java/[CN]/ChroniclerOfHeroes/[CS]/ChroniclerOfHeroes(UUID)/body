{
  super(ownerId,190,"Chronicler of Heroes",Rarity.UNCOMMON,new CardType[]{CardType.CREATURE},"{1}{G}{W}");
  this.expansionSetCode="THS";
  this.subtype.add("Centaur");
  this.subtype.add("Wizard");
  this.color.setGreen(true);
  this.color.setWhite(true);
  this.power=new MageInt(3);
  this.toughness=new MageInt(3);
  this.addAbility(new EntersBattlefieldTriggeredAbility(new ConditionalOneShotEffect(new DrawCardControllerEffect(1),new ControlsPermanentCondition(filter,ControlsPermanentCondition.CountType.MORE_THAN,0),"draw a card if you control a creature with a +1/+1 counter on it")));
}
