{
  if (event.getPlayerId().equals(this.getControllerId())) {
    for (    Effect effect : this.getEffects()) {
      if (effect instanceof TranscendenceLoseLifeEffect) {
        ((TranscendenceLoseLifeEffect)effect).setAmount(event.getAmount());
      }
    }
    return true;
  }
  return false;
}
