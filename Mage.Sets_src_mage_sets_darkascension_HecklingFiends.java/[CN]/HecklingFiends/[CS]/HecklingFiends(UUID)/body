{
  super(ownerId,92,"Heckling Fiends",Rarity.UNCOMMON,new CardType[]{CardType.CREATURE},"{2}{R}");
  this.expansionSetCode="DKA";
  this.subtype.add("Devil");
  this.color.setRed(true);
  this.power=new MageInt(2);
  this.toughness=new MageInt(2);
  SimpleActivatedAbility ability=new SimpleActivatedAbility(Zone.BATTLEFIELD,new AttacksIfAbleTargetEffect(Duration.EndOfTurn),new ManaCostsImpl("{2}{R}"));
  ability.addTarget(new TargetCreaturePermanent());
  this.addAbility(ability);
}
