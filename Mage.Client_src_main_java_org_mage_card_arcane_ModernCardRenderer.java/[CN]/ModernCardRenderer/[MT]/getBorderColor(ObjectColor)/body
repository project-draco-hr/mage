{
  if (color.isWhite()) {
    return BORDER_WHITE;
  }
 else   if (color.isBlue()) {
    return BORDER_BLUE;
  }
 else   if (color.isBlack()) {
    return BORDER_BLACK;
  }
 else   if (color.isRed()) {
    return BORDER_RED;
  }
 else   if (color.isGreen()) {
    return BORDER_GREEN;
  }
 else {
    return ERROR_COLOR;
  }
}
