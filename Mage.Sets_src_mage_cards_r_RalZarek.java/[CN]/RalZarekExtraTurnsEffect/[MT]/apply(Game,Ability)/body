{
  Player controller=game.getPlayer(source.getControllerId());
  if (controller != null) {
    for (int i=0; i < 5; i++) {
      if (controller.flipCoin(game)) {
        game.getState().getTurnMods().add(new TurnMod(source.getControllerId(),false));
      }
    }
    return true;
  }
  return false;
}
