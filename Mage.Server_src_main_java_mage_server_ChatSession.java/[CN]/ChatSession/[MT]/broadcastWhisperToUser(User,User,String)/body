{
  if (clients.containsKey(toUser.getId())) {
    toUser.fireCallback(new ClientCallback("chatMessage",chatId,new ChatMessage(new StringBuilder("Whisper from ").append(fromUser.getName()).toString(),message,timeFormatter.format(cal.getTime()),MessageColor.YELLOW,MessageType.WHISPER,SoundToPlay.PlayerWhispered)));
    if (clients.containsKey(fromUser.getId())) {
      fromUser.fireCallback(new ClientCallback("chatMessage",chatId,new ChatMessage(new StringBuilder("Whisper to ").append(toUser.getName()).toString(),message,timeFormatter.format(cal.getTime()),MessageColor.YELLOW,MessageType.WHISPER,null)));
      return true;
    }
  }
  return false;
}
