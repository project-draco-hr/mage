{
  if (foilState) {
    if (source != null) {
synchronized (BigCard.class) {
        if (source != null) {
          graphics.drawImage(foil,0,0,this);
        }
      }
    }
  }
 else {
    if (bigImage != null) {
      graphics.drawImage(bigImage,0,0,this);
    }
  }
  super.paintComponent(graphics);
}
