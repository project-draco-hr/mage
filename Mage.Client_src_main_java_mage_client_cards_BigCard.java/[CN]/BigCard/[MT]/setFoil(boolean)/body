{
  if (foilThread == null) {
synchronized (this) {
      if (foilThread == null) {
        foilThread=getFoilThread();
        foilThread.setDaemon(true);
        foilThread.start();
      }
    }
  }
  if (foil != foilState) {
synchronized (this) {
      if (foil != foilState) {
        hue=0.005f;
        foilState=foil;
      }
    }
  }
  repaint();
}
