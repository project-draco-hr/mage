{
  super(ownerId,72,"Scroll Thief",Rarity.COMMON,new CardType[]{CardType.CREATURE},"{2}{U}");
  this.expansionSetCode="M11";
  this.subtype.add("Merfolk");
  this.subtype.add("Rogue");
