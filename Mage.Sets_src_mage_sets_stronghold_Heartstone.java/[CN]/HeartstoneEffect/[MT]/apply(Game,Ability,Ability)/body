{
  Player controller=game.getPlayer(abilityToModify.getControllerId());
  if (controller != null) {
    Mana mana=abilityToModify.getManaCostsToPay().getMana();
    if (mana.count() > 1 && mana.getColorless() > 0) {
      CardUtil.reduceCost(abilityToModify,1);
    }
    return true;
  }
  return false;
}
