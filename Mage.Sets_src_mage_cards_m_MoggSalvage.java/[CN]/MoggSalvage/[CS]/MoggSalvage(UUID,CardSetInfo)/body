{
  super(ownerId,setInfo,new CardType[]{CardType.INSTANT},"{2}{R}");
  Condition condition=new CompoundCondition("If an opponent controls an Island and you control a Mountain",new OpponentControlsPermanentCondition(filterIsland),new PermanentsOnTheBattlefieldCondition(filterMountain));
  this.addAbility(new AlternativeCostSourceAbility(null,condition));
  this.getSpellAbility().addEffect(new DestroyTargetEffect());
  this.getSpellAbility().addTarget(new TargetPermanent(new FilterArtifactPermanent()));
}
