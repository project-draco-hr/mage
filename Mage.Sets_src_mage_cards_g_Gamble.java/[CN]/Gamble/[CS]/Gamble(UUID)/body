{
  super(ownerId,188,"Gamble",Rarity.RARE,new CardType[]{CardType.SORCERY},"{R}");
  this.expansionSetCode="USG";
  Effect effect=new SearchLibraryPutInHandEffect(new TargetCardInLibrary(),false,true);
