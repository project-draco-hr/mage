{
  if (!random) {
    return findCard(name);
  }
 else {
    List<Card> cards=new ArrayList<Card>();
    for (    ExpansionSet set : fINSTANCE.values()) {
      Card card=set.findCard(name,true);
      if (card != null) {
        cards.add(card);
      }
    }
    if (cards.size() > 0) {
      return cards.get(rnd.nextInt(cards.size()));
    }
  }
  return null;
}
