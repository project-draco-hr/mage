{
  if (!random) {
    return findCard(name);
  }
 else {
    List<Card> cardsFound=new ArrayList<Card>();
    for (    ExpansionSet set : fINSTANCE.values()) {
      Card card=set.findCard(name,true);
      if (card != null) {
        cardsFound.add(card);
      }
    }
    if (cardsFound.size() > 0) {
      return cardsFound.get(rnd.nextInt(cardsFound.size()));
    }
  }
  return null;
}
