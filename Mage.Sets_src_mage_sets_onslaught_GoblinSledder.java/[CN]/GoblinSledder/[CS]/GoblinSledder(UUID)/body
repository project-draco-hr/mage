{
  super(ownerId,209,"Goblin Sledder",Rarity.COMMON,new CardType[]{CardType.CREATURE},"{R}");
  this.expansionSetCode="ONS";
  this.subtype.add("Goblin");
  this.color.setRed(true);
  this.power=new MageInt(1);
  this.toughness=new MageInt(1);
  Ability ability=new SimpleActivatedAbility(Zone.BATTLEFIELD,new BoostTargetEffect(1,1,Duration.EndOfTurn),new SacrificeTargetCost(new TargetControlledCreaturePermanent(1,1,filter,true)));
  ability.addTarget(new TargetCreaturePermanent());
  this.addAbility(ability);
}
