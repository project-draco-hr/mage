{
  int total=0;
  Iterator<ManaPoolItem> it=manaItems.iterator();
  while (it.hasNext()) {
    ManaPoolItem item=it.next();
    if (item.isConditional()) {
      ConditionalMana cm=item.getConditionalMana();
      if (cm.apply(ability,game,cm.getManaProducerId())) {
        total+=item.count();
        it.remove();
      }
    }
 else {
      total+=item.count();
      it.remove();
    }
  }
  return total;
}
