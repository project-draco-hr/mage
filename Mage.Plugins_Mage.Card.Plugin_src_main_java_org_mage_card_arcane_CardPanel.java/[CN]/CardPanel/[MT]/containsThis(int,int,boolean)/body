{
  int dy=getLocation().y;
  if (root)   dy=0;
  int cx=getCardX();
  int cy=getCardY() + dy;
  int cw=getCardWidth();
  int ch=getCardHeight();
  if (isTapped()) {
    cy=ch - cw + cx;
    ch=cw;
    cw=getCardHeight();
  }
  int dx=0;
  if (x >= cx && x <= cx + cw + dx && y >= cy && y <= cy + ch) {
    return true;
  }
  return false;
}
