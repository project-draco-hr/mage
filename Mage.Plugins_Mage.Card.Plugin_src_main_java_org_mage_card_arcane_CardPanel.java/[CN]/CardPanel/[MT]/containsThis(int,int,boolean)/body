{
  Point component=getLocation();
  int cx=getCardX() - component.x;
  int cy=getCardY() - component.y;
  int cw=getCardWidth();
  int ch=getCardHeight();
  if (isTapped()) {
    cy=ch - cw + cx;
    ch=cw;
    cw=getCardHeight();
  }
  if (x >= cx && x <= cx + cw && y >= cy && y <= cy + ch) {
    return true;
  }
 else {
  }
  return false;
}
