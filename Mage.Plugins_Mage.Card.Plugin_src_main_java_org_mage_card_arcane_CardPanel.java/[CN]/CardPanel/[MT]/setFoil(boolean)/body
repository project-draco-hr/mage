{
  this.isFoil=foil;
  if (foil) {
    BufferedImage source=BufferedImageBuilder.bufferImage(imagePanel.getSrcImage());
    HueFilter filter=FilterFactory.getHueFilter();
    filter.setHue(0.1f);
    BufferedImage dest=filter.filter(source,null);
    imagePanel.setImage(dest);
    imagePanel.repaint();
  }
}
