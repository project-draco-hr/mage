{
  Permanent creature=game.getPermanentOrLKIBattlefield(getTargetPointer().getFirst(game,source));
  if (creature != null) {
    Player controller=game.getPlayer(creature.getControllerId());
    if (controller != null) {
      controller.loseLife(3,game);
      return true;
    }
  }
  return false;
}
