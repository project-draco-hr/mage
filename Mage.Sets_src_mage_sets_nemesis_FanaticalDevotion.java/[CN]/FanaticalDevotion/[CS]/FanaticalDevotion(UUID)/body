{
  super(ownerId,8,"Fanatical Devotion",Rarity.COMMON,new CardType[]{CardType.ENCHANTMENT},"{2}{W}");
  this.expansionSetCode="NEM";
  Ability ability=new SimpleActivatedAbility(Zone.BATTLEFIELD,new RegenerateTargetEffect(),new SacrificeTargetCost(new TargetControlledCreaturePermanent(new FilterControlledCreaturePermanent("a creature"))));
  ability.addTarget(new TargetCreaturePermanent());
  this.addAbility(ability);
}
