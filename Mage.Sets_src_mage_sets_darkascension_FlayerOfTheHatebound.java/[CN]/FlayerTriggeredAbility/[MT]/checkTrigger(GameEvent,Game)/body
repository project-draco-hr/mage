{
  if (event.getType() == GameEvent.EventType.ENTERS_THE_BATTLEFIELD) {
    Permanent permanent=game.getPermanent(event.getTargetId());
    if (((EntersTheBattlefieldEvent)event).getFromZone() == Constants.Zone.GRAVEYARD && permanent.getOwnerId().equals(controllerId) && permanent.getCardType().contains(CardType.CREATURE)) {
      Effect effect=this.getEffects().get(0);
      effect.setValue("damageSource",event.getTargetId());
      return true;
    }
  }
  return false;
}
