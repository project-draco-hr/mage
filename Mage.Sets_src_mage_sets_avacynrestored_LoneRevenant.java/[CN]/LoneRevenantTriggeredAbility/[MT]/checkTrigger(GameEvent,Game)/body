{
  if (event.getType() == GameEvent.EventType.DAMAGED_PLAYER && event.getSourceId().equals(this.sourceId) && ((DamagedPlayerEvent)event).isCombatDamage()) {
    Permanent permanent=game.getPermanent(event.getSourceId());
    int number=game.getBattlefield().countAll(filter,controllerId);
    if (permanent != null && number != 1) {
      return false;
    }
    if (permanent == null && number != 0) {
      return false;
    }
    return true;
  }
  return false;
}
