{
  Player controller=game.getPlayer(source.getControllerId());
  if (controller != null) {
    Card card=game.getCard(getTargetPointer().getFirst(game,source));
    if (card != null) {
      controller.moveCardToExileWithInfo(card,null,"",source.getSourceId(),game,Zone.STACK);
      return true;
    }
  }
  return false;
}
