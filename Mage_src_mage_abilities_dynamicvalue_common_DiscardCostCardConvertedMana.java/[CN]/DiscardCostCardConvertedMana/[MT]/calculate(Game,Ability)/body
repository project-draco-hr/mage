{
  for (  Cost cost : sourceAbility.getCosts()) {
    if (cost instanceof DiscardCardCost) {
      DiscardCardCost discardCost=(DiscardCardCost)cost;
      int cmc=0;
      for (      Card card : discardCost.getCards()) {
        cmc+=card.getManaCost().convertedManaCost();
      }
      return cmc;
    }
  }
  return 0;
}
