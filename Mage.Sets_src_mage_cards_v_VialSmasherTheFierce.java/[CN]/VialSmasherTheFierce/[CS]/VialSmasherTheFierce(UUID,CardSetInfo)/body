{
  super(ownerId,setInfo,new CardType[]{CardType.CREATURE},"{1}{B}{R}");
  this.supertype.add("Legendary");
  this.subtype.add("Goblin");
  this.subtype.add("Berserker");
  this.power=new MageInt(2);
