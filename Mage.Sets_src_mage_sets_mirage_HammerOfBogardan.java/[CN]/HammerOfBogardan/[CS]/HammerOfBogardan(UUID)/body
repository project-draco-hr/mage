{
  super(ownerId,181,"Hammer of Bogardan",Rarity.RARE,new CardType[]{CardType.SORCERY},"{1}{R}{R}");
  this.expansionSetCode="MIR";
  this.color.setRed(true);
  this.getSpellAbility().addEffect(new DamageTargetEffect(3));
  this.getSpellAbility().addTarget(new TargetCreatureOrPlayer());
  this.addAbility(new ConditionalActivatedAbility(Zone.GRAVEYARD,new ReturnSourceFromGraveyardToHandEffect(),new ManaCostsImpl("{2}{R}{R}{R}"),new IsStepCondition(PhaseStep.END_COMBAT),null));
}
