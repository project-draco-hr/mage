{
  super(ownerId,setInfo,new CardType[]{CardType.SORCERY},"{1}{G}");
  Effect effect=new ConditionalContinuousEffect(new BoostTargetEffect(2,2,Duration.EndOfTurn),new LockedInCondition(FerociousCondition.getInstance()),"<i>Ferocious</i> &mdash; The creature you control gets +2/+2 until end of turn before it fights if you control a creature with power 4 or greater");
  effect.setApplyEffectsAfter();
  this.getSpellAbility().addEffect(effect);
  effect=new FightTargetsEffect();
  effect.setText("<br/>Target creature you control fights target creature you don't control");
  this.getSpellAbility().addEffect(effect);
  this.getSpellAbility().addTarget(new TargetControlledCreaturePermanent());
  Target target=new TargetCreaturePermanent(filter);
  this.getSpellAbility().addTarget(target);
}
