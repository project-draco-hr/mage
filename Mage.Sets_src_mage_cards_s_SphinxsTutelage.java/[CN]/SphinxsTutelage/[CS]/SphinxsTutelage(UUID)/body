{
  super(ownerId,76,"Sphinx's Tutelage",Rarity.UNCOMMON,new CardType[]{CardType.ENCHANTMENT},"{2}{U}");
  this.expansionSetCode="ORI";
  Ability ability=new DrawCardControllerTriggeredAbility(new SphinxsTutelageEffect(),false);
