{
  super(ownerId,123,"Elemental Appeal",Rarity.RARE,new CardType[]{CardType.SORCERY},"{R}{R}{R}{R}");
  this.expansionSetCode="ZEN";
  this.color.setRed(true);
  this.addAbility(new KickerAbility(new KickerManaCost("{5}")));
  this.getSpellAbility().addEffect(new ElementalAppealEffect());
  this.getSpellAbility().addEffect(new ConditionalContinousEffect(new BoostTargetEffect(7,0,Duration.EndOfTurn),KickedCondition.getInstance(),"If {this} was kicked, that creature gets +7/+0 until end of turn"));
}
