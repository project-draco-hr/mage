{
  Player controller=game.getPlayer(source.getControllerId());
  if (controller != null) {
    int highCMC=new HighestConvertedManaCostValue().calculate(game,source,this);
    if (highCMC > 0) {
      controller.scry(highCMC,source,game);
    }
    controller.drawCards(3,game);
    return true;
  }
  return false;
}
