{
  for (  Component comp : cardArea.getComponents()) {
    if (comp instanceof Card) {
      if (((Card)comp).getCardId().equals(cardId)) {
        cardArea.remove(comp);
      }
    }
 else     if (comp instanceof MageCard) {
      if (((MageCard)comp).getOriginal().equals(cardId)) {
        cardArea.remove(comp);
      }
    }
  }
}
