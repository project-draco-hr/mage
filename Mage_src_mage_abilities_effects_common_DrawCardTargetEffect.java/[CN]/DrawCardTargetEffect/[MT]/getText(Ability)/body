{
  StringBuilder sb=new StringBuilder();
  sb.append("Target player draws ").append(amount).append(" card");
  try {
    if (Integer.parseInt(amount.toString()) > 1) {
      sb.append("s");
    }
  }
 catch (  Exception e) {
    sb.append("s");
  }
  sb.append(amount.getMessage());
  return sb.toString();
}
