{
  if (GameEvent.EventType.DISCARDED_CARD.equals(event.getType()) && game.getOpponents(this.getControllerId()).contains(game.getControllerId(event.getSourceId())) && StackObject.class.isInstance(game.getObject(event.getSourceId()))&& event.getTargetId().equals(getSourceId())) {
    return true;
  }
  return false;
}
