{
  if (game.getOpponents(this.getControllerId()).contains(game.getControllerId(event.getSourceId())) && StackObject.class.isInstance(game.getObject(event.getSourceId()))) {
    Card card=game.getCard(event.getTargetId());
    if (card != null && card.getOwnerId().equals(getControllerId())) {
      for (      Effect effect : getEffects()) {
        effect.setTargetPointer(new FixedTarget(event.getTargetId()));
      }
      return true;
    }
  }
  return false;
}
