{
  if (!useTimeout) {
    return;
  }
  cancelTimeout();
  futureTimeout=timeoutExecutor.schedule(new Runnable(){
    @Override public void run(){
      if (game.getPriorityPlayerId().equals(playerId)) {
        GameManager.getInstance().timeout(game.getId(),userId);
      }
 else {
        setupTimeout();
      }
    }
  }
,Main.isTestMode() ? 3600 : ConfigSettings.getInstance().getMaxSecondsIdle(),TimeUnit.SECONDS);
}
