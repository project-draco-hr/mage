{
  super(ownerId,setInfo,new CardType[]{CardType.CREATURE},"{2}{W}");
  this.subtype.add("Human");
  this.subtype.add("Soldier");
  this.power=new MageInt(1);
  this.toughness=new MageInt(2);
  this.addAbility(ProtectionAbility.from(ObjectColor.BLACK));
  Condition condition=new CompoundCondition("If an opponent controls a Swamp and you control a Plains",new OpponentControlsPermanentCondition(filterSwamp),new PermanentsOnTheBattlefieldCondition(filterPlains));
  this.addAbility(new AlternativeCostSourceAbility(null,condition));
}
