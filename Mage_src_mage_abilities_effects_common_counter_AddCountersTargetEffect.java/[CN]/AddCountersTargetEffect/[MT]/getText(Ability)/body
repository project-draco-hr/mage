{
  StringBuilder sb=new StringBuilder();
  sb.append("put ");
  if (amount > 1) {
    sb.append(Integer.toString(amount)).append(" ").append(name).append(" counters on ");
  }
 else {
    sb.append("a ").append(name).append(" counter on ");
  }
  sb.append(source.getTargets().get(0).getTargetName());
  return sb.toString();
}
