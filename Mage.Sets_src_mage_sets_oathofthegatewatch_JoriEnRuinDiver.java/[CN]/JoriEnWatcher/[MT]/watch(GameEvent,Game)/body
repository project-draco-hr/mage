{
  condition=false;
  if (event.getType() == GameEvent.EventType.SPELL_CAST && event.getPlayerId().equals(controllerId)) {
    Spell spell=game.getStack().getSpell(event.getTargetId());
    if (spell != null) {
      spellCount++;
      if (spellCount == 2) {
        condition=true;
      }
    }
  }
}
