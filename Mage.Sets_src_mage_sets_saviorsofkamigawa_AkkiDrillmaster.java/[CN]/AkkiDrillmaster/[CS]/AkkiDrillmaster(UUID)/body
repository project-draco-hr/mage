{
  super(ownerId,92,"Akki Drillmaster",Rarity.COMMON,new CardType[]{CardType.CREATURE},"{2}{R}");
  this.expansionSetCode="SOK";
  this.subtype.add("Goblin");
  this.subtype.add("Shaman");
  this.color.setRed(true);
  this.power=new MageInt(2);
  this.toughness=new MageInt(2);
  Ability ability=new SimpleActivatedAbility(Constants.Zone.BATTLEFIELD,new GainAbilityTargetEffect(HasteAbility.getInstance(),Constants.Duration.EndOfTurn),new TapSourceCost());
  ability.addTarget(new TargetCreaturePermanent());
  this.addAbility(ability);
}
