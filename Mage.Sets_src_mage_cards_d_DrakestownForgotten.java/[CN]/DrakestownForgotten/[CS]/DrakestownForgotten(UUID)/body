{
  super(ownerId,27,"Drakestown Forgotten",Rarity.RARE,new CardType[]{CardType.CREATURE},"{4}{B}");
  this.expansionSetCode="CNS";
  this.subtype.add("Zombie");
  this.power=new MageInt(0);
  this.toughness=new MageInt(0);
  this.addAbility(new EntersBattlefieldAbility(new AddCountersSourceEffect(CounterType.P1P1.createInstance(),new CardsInAllGraveyardsCount(new FilterCreatureCard()),false),"with X +1/+1 counters on it, where X is the number of other creatures on the battlefield"));
  Ability ability=new SimpleActivatedAbility(Zone.BATTLEFIELD,new BoostTargetEffect(-1,-1,Duration.EndOfTurn),new ManaCostsImpl<>("{2}{B}"));
  ability.addCost(new RemoveCountersSourceCost(CounterType.P1P1.createInstance()));
  ability.addTarget(new TargetCreaturePermanent());
  this.addAbility(ability);
}
