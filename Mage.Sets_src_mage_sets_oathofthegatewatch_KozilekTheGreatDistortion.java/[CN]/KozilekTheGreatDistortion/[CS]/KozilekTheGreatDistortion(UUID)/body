{
  super(ownerId,4,"Kozilek, the Great Distortion",Rarity.MYTHIC,new CardType[]{CardType.CREATURE},"{8}{C}{C}");
  this.expansionSetCode="OGW";
  this.supertype.add("Legendary");
  this.subtype.add("Eldrazi");
  this.power=new MageInt(12);
  this.toughness=new MageInt(12);
  this.addAbility(new ConditionalTriggeredAbility(new CastSourceTriggeredAbility(new KozilekDrawEffect(),false),new CardsInHandCondition(CardsInHandCondition.CountType.FEWER_THAN,7),"When you cast {this}, if you have fewer than seven cards in hand, draw cards equal to the difference."));
  this.addAbility(new MenaceAbility());
  Ability ability=new SimpleActivatedAbility(Zone.BATTLEFIELD,new CounterTargetEffect(),new KozilekDiscardCost());
  ability.addTarget(new TargetSpell(new FilterSpell("spell with converted mana cost X")));
  this.addAbility(ability);
}
