{
  super(ownerId,24,"Opal Caryatid",Rarity.COMMON,new CardType[]{CardType.ENCHANTMENT},"{W}");
  this.expansionSetCode="USG";
  TriggeredAbility ability=new SpellCastOpponentTriggeredAbility(new BecomesCreatureSourceEffect(new OpalCaryatidSoldier(),"",Duration.WhileOnBattlefield,true,false),new FilterCreatureSpell(),false);
  this.addAbility(new ConditionalTriggeredAbility(ability,new SourceMatchesFilterCondition(new FilterEnchantmentPermanent()),"When an opponent casts a creature spell, if {this} is an enchantment, {this} becomes a 2/2 Soldier creature."));
}
