{
  addCard(Zone.BATTLEFIELD,playerA,"Verdeloth the Ancient",1);
  addCard(Zone.BATTLEFIELD,playerA,"Heartwood Treefolk",1);
  addCard(Zone.BATTLEFIELD,playerB,"Heartwood Treefolk",1);
  setStopAt(1,PhaseStep.PRECOMBAT_MAIN);
  execute();
  assertPowerToughness(playerA,"Verdeloth the Ancient",4,7);
  assertPowerToughness(playerA,"Heartwood Treefolk",4,5);
  assertPowerToughness(playerA,"Heartwood Treefolk",4,5);
}
