{
  if (updateDeckTask != null) {
    updateDeckTask.cancel(true);
  }
  if (countdown != null) {
    if (countdown.isRunning()) {
      countdown.stop();
    }
    for (    ActionListener al : countdown.getActionListeners()) {
      countdown.removeActionListener(al);
    }
  }
  this.cardSelector.cleanUp();
  this.deckArea.cleanUp();
  this.remove(bigCard);
  this.bigCard=null;
}
