{
  super(ownerId,206,"Surrak Dragonclaw",Rarity.MYTHIC,new CardType[]{CardType.CREATURE},"{2}{G}{U}{R}");
  this.expansionSetCode="KTK";
  this.supertype.add("Legendary");
  this.subtype.add("Human");
  this.subtype.add("Warrior");
  this.power=new MageInt(6);
  this.toughness=new MageInt(6);
  this.addAbility(FlashAbility.getInstance());
  this.addAbility(new CantBeCounteredAbility());
  this.addAbility(new SimpleStaticAbility(Zone.BATTLEFIELD,new CantBeCounteredControlledEffect(filterTarget,null,Duration.WhileOnBattlefield)));
  this.addAbility(new SimpleStaticAbility(Zone.BATTLEFIELD,new GainAbilityControlledEffect(TrampleAbility.getInstance(),Duration.WhileOnBattlefield,new FilterCreaturePermanent(),true)));
}
