{
  super(ownerId,179,"Rolling Spoil",Rarity.UNCOMMON,new CardType[]{CardType.SORCERY},"{2}{G}{G}");
  this.expansionSetCode="RAV";
  this.getSpellAbility().addEffect(new DestroyTargetEffect());
  this.getSpellAbility().addTarget(new TargetLandPermanent());
  this.getSpellAbility().addEffect(new ConditionalContinuousEffect(new BoostAllEffect(-1,-1,Duration.EndOfTurn),new ManaWasSpentCondition(ColoredManaSymbol.B),"If {B} was spent to cast {this}, all creatures get -1/-1 until end of turn"));
}
