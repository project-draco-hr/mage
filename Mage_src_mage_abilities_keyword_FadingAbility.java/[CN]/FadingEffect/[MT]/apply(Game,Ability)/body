{
  Permanent p=game.getPermanent(source.getSourceId());
  if (p != null) {
    int amount=p.getCounters().getCount(CounterType.FADE);
    if (amount > 0) {
      p.removeCounters(CounterType.FADE.createInstance(),game);
    }
 else {
      p.sacrifice(source.getSourceId(),game);
    }
    return true;
  }
  return false;
}
