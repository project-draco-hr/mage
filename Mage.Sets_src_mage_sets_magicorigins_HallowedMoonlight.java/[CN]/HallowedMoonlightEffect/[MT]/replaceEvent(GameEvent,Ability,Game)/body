{
  Player controller=game.getPlayer(source.getControllerId());
  if (controller != null) {
    Card card=game.getCard(event.getTargetId());
    if (card != null) {
      controller.moveCardToExileWithInfo(card,null,"",source.getSourceId(),game,Zone.BATTLEFIELD,true);
    }
    return true;
  }
  return false;
}
