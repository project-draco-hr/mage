{
  Player controller=game.getPlayer(source.getControllerId());
  if (controller != null) {
    EntersTheBattlefieldEvent entersTheBattlefieldEvent=(EntersTheBattlefieldEvent)event;
    controller.moveCardToExileWithInfo(entersTheBattlefieldEvent.getTarget(),null,"",source.getSourceId(),game,entersTheBattlefieldEvent.getFromZone(),true);
    return true;
  }
  return false;
}
