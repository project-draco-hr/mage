{
  super(ownerId,16,"Hallowed Moonlight",Rarity.RARE,new CardType[]{CardType.INSTANT},"{1}{W}");
  this.expansionSetCode="ORI";
  this.getSpellAbility().addEffect(new HallowedMoonlightEffect());
