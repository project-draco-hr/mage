{
  StringBuilder sb=new StringBuilder("choose ");
  int count=0;
  for (  String choice : modes) {
    count++;
    sb.append(choice);
    if (count + 1 < modes.size()) {
      sb.append(", ");
    }
 else     if (count < modes.size()) {
      sb.append(" or ");
    }
  }
  return sb.toString();
}
