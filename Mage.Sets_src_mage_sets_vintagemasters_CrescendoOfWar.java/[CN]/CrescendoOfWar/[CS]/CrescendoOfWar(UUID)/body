  this.addAbility(new SimpleStaticAbility(Zone.BATTLEFIELD,new BoostAllEffect(new CountersCount(CounterType.STRIFE),new StaticValue(0),Duration.WhileOnBattlefield,new FilterBlockingCreature(),false)));
}
