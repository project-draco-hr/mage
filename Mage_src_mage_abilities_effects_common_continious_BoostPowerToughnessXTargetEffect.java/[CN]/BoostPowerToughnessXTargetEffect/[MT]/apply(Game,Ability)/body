{
  int amount=source.getManaCostsToPay().getVariableCosts().get(0).getAmount();
  if (amount == 0) {
    return false;
  }
  Permanent target=game.getPermanent(source.getFirstTarget());
  if (target != null) {
    target.addPower(amount);
    target.addToughness(amount);
    return true;
  }
  return false;
}
