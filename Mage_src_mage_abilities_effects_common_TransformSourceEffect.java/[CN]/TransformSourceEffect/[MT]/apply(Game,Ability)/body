{
  Permanent permanent=game.getPermanent(source.getSourceId());
  if (permanent != null) {
    if (permanent.canTransform()) {
      if (permanent.isTransformed() != fromDayToNight) {
        if (withoutTrigger) {
          permanent.setTransformed(fromDayToNight);
        }
 else {
          permanent.transform(game);
        }
      }
    }
    return true;
  }
  return false;
}
