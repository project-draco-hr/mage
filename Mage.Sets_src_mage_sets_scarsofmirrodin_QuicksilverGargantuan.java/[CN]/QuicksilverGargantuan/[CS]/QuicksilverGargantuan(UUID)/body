{
  super(ownerId,39,"Quicksilver Gargantuan",Rarity.MYTHIC,new CardType[]{CardType.CREATURE},"{5}{U}{U}");
  this.expansionSetCode="SOM";
  this.subtype.add("Shapeshifter");
  this.color.setBlue(true);
  this.power=new MageInt(7);
  this.toughness=new MageInt(7);
  Ability ability=new EntersBattlefieldAbility(new QuicksilverGargantuanCopyEffect(),"You may have {this} enter the battlefield as a copy of any creature on the battlefield, except it's still 7/7");
  Target target=new TargetCreaturePermanent();
  target.setNotTarget(true);
  ability.addTarget(target);
  this.addAbility(ability);
}
