{
  Player player=game.getPlayer(source.getFirstTarget());
  if (player != null) {
    Integer amount=(int)Math.ceil(player.getLife() / 2f);
    if (amount > 0) {
      player.loseLife(amount,game);
      game.getState().setValue(source.getSourceId().toString() + "_BloodTribute",amount);
      return true;
    }
  }
  return false;
}
