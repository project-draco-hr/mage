{
  if (condition == true) {
    return;
  }
  if (event.getType() == EventType.SPELL_CAST && game.getOpponents(controllerId).contains(event.getPlayerId())) {
    int count=1;
    if (counts.containsKey(event.getPlayerId())) {
      count+=counts.get(event.getPlayerId());
      if (count >= 3)       condition=true;
    }
    counts.put(event.getPlayerId(),count);
  }
}
