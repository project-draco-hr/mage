{
  Player player=game.getPlayer(source.getControllerId());
  TargetCardInHand target=new TargetCardInHand(new FilterSoldierCard());
  if (target.choose(getOutcome(),player.getId(),game)) {
    if (target.getTargets().size() > 0) {
      UUID cardId=target.getFirstTarget();
      Card card=player.getHand().get(cardId,game);
      if (card != null) {
        player.getHand().remove(card);
        if (card.putOntoBattlefield(game,Zone.HAND,source.getId(),source.getControllerId())) {
          Permanent permanent=game.getPermanent(card.getId());
          permanent.setTapped(true);
          TargetDefender def=new TargetDefender(game.getCombat().getDefenders(),player.getId());
          if (def.choose(getOutcome(),player.getId(),game)) {
            if (def.getTargets().size() > 0) {
              game.getCombat().declareAttacker(permanent.getId(),def.getFirstTarget(),game);
            }
          }
        }
      }
      return true;
    }
  }
  return false;
}
