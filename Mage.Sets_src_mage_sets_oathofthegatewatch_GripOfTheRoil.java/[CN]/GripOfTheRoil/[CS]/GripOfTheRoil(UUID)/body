{
  super(ownerId,56,"Grip of the Roil",Rarity.UNCOMMON,new CardType[]{CardType.INSTANT},"{2}{U}");
  this.expansionSetCode="OGW";
  this.getSpellAbility().addTarget(new TargetCreaturePermanent());
