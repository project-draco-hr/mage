{
  if (abilities.size() == 1) {
    activateAbility(abilities.values().iterator().next(),game);
  }
 else {
    game.fireGetChoiceEvent(playerId,name,abilities.values());
    waitForUUIDResponse();
    if (abilities.containsKey(response.getUUID()))     activateAbility(abilities.get(response.getUUID()),game);
  }
}
