{
  super(ownerId,214,"Zurgo Helmsmasher",Rarity.MYTHIC,new CardType[]{CardType.CREATURE},"{2}{R}{W}{B}");
  this.expansionSetCode="KTK";
  this.supertype.add("Legendary");
  this.subtype.add("Orc");
  this.subtype.add("Warrior");
  this.color.setRed(true);
  this.color.setBlack(true);
  this.color.setWhite(true);
  this.power=new MageInt(7);
  this.toughness=new MageInt(2);
  this.addAbility(HasteAbility.getInstance());
  this.addAbility(new AttacksEachTurnStaticAbility());
  this.addAbility(new SimpleStaticAbility(Zone.BATTLEFIELD,new ConditionalContinousEffect(new GainAbilitySourceEffect(IndestructibleAbility.getInstance(),Duration.WhileOnBattlefield),MyTurnCondition.getInstance(),"{this} has indestructible as long as it's your turn")));
  this.addAbility(new DiesAndDealtDamageThisTurnTriggeredAbility(new AddCountersSourceEffect(CounterType.P1P1.createInstance()),false));
}
