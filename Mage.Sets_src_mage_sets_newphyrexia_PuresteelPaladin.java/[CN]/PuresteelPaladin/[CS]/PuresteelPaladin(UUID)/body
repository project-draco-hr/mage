{
  super(ownerId,20,"Puresteel Paladin",Rarity.RARE,new CardType[]{CardType.CREATURE},"{W}{W}");
  this.expansionSetCode="NPH";
  this.subtype.add("Human");
  this.subtype.add("Knight");
  this.color.setWhite(true);
  this.power=new MageInt(2);
  this.toughness=new MageInt(2);
  this.addAbility(new PuresteelPaladinTriggeredAbility());
  this.addAbility(new SimpleStaticAbility(Constants.Zone.BATTLEFIELD,new ConditionalContinousEffect(new GainAbilityControlledEffect(new EquipAbility(Constants.Outcome.AddAbility,new GenericManaCost(0)),Constants.Duration.WhileOnBattlefield,filter),Metalcraft.getInstance(),"Metalcraft - Equipment you control have equip {0} as long as you control three or more artifacts")));
}
