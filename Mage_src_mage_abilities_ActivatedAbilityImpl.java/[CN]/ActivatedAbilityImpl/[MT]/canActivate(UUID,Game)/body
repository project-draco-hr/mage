{
  if ((!onlyOpponentCanActivate && !controlsAbility(playerId,game)) || (onlyOpponentCanActivate && !game.getOpponents(controllerId).contains(playerId))) {
    return false;
  }
  if (timing == TimingRule.INSTANT || game.canPlaySorcery(playerId)) {
    if (costs.canPay(sourceId,controllerId,game) && canChooseTarget(game)) {
      this.activatorId=playerId;
      return true;
    }
  }
  return false;
}
