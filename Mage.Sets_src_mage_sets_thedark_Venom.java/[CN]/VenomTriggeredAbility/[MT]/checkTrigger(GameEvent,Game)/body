{
  if (event.getType() == GameEvent.EventType.BLOCKER_DECLARED) {
    Permanent blocker=game.getPermanent(event.getSourceId());
    Permanent blocked=game.getPermanent(event.getTargetId());
    Permanent enchantment=game.getPermanent(this.getSourceId());
    if (enchantment != null && enchantment.getAttachedTo() != null) {
      Permanent enchantedCreature=game.getPermanent(enchantment.getAttachedTo());
      if (enchantedCreature != null) {
        if (blocker != null && blocker != enchantedCreature && !blocker.getSubtype().contains("Wall") && blocked == enchantedCreature) {
          this.getEffects().get(0).setTargetPointer(new FixedTarget(blocker.getId()));
          return true;
        }
        if (blocker != null && blocker == enchantedCreature && !blocked.getSubtype().contains("Wall")) {
          this.getEffects().get(0).setTargetPointer(new FixedTarget(blocked.getId()));
          return true;
        }
      }
    }
  }
  return false;
}
